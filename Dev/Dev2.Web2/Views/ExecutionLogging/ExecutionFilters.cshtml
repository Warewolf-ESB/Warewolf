@model Dev2.Web2.Models.ExecutionLogging.ExecutionLoggingRequestViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@Html.LabelFor(model => model.Server)</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="Protocol">@Model.Protocol</span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">https</a></li>
                            <li><a href="#">http</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-form">
                    <a>://</a>
                    @Html.EditorFor(model => model.Server, new { htmlAttributes = new { @class = "form-control" } })
                    <a>:</a>
                    @Html.EditorFor(model => model.Port, new { htmlAttributes = new { @class = "form-control" } })
                    <button type="submit" class="btn btn-default">Update</button>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-hourglass" title="Execution Time"></i>
                </span>
                @Html.EditorFor(model => model.ExecutionTime, new { htmlAttributes = new { @class = "form-control", @title = "Filter Execution Time", placeholder = "Filter Execution Time..." } })
            </div>
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-play" aria-hidden="true" title="Start Time"></span>
                </span>
                @Html.EditorFor(model => model.StartDateTime, new { htmlAttributes = new { @class = "form-control", @title = "Filter Start Time", placeholder = "Filter Start Time..." } })
            </div>
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-stop" aria-hidden="true" title="Completed Time"></span>
                </span>
                @Html.EditorFor(model => model.CompletedDateTime, new { htmlAttributes = new { @class = "form-control", @title = "Filter Completed Time", placeholder = "Filter Completed Time..." } })
            </div>
        </div>
        <div class="row">
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-dashboard" aria-hidden="true" title="Status"></span>
                </span>
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @title = "Filter Status", placeholder = "Filter Status..." } })
            </div>
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-home" aria-hidden="true" title="Url"></span>
                </span>
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @title = "Filter Url", placeholder = "Filter Url..." } })
            </div>
            <div class="input-group col-md-4" style="float:left">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-user" aria-hidden="true" title="User"></span>
                </span>
                @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", @title = "Filter User", placeholder = "Filter User..." } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-0">
                <input type="submit" value="Filter" class="btn btn-default" width="40" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Dev2.Web2.Models.ExecutionLogging.ExecutionLoggingRequestViewModel

<link rel='stylesheet' type='text/css' href='http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css' />
<script type='text/javascript' src='~/Scripts/filterScript.js'></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="navbar-form">
                    <table id="filterTable">
                        <tr>
                            <td style="width:5%">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    <a class="navbar-brand" href="#">@Html.LabelFor(model => model.Server)</a>
                                </div>
                            </td>
                            <td style="width:3%">
                                <ul class="nav navbar-nav">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="Protocol">@Model.Protocol</span><span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">https</a></li>
                                            <li><a href="#">http</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                            <td style="width:1%">://</td>
                            <td style="width:86%">@Html.EditorFor(model => model.Server, new { htmlAttributes = new { @class = "form-control", style = "width: 100%;" } })</td>
                            <td style="width:1%; margin-left:13px;">:</td>
                            <td style="width:2%">@Html.EditorFor(model => model.Port, new { htmlAttributes = new { @class = "form-control", style = "width: 60px;" } })</td>
                            <td style="width:2%"><button type="submit" class="btn btn-default">Update</button></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" style="margin-bottom: 3px;">
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:5%;">
                @Html.EditorFor(model => model.ExecutionId, new { htmlAttributes = new { @class = "form-control", @title = "Filter Execution ID", placeholder = "Filter..." } })
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:15%;">
                @Html.EditorFor(model => model.ExecutionTime, new { htmlAttributes = new { @class = "form-control", @title = "Filter Execution Time", placeholder = "Filter..." } })
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:10%;">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @title = "Filter Status", placeholder = "Filter..." } })
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:15%;">
                <div class='input-group date' id='datePicker'>
                    <input id="start_dt" class='datepicker' title='D-MMM-YYYY' /> 
                </div>
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:15%;">
                <div class='input-group date' id='datePicker'>
                    <input id="start_dt" class='datepicker' title='D-MMM-YYYY' />
                </div>
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:20%;">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @title = "Filter Url", placeholder = "Filter..." } })
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:18%;">
                @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", @title = "Filter User", placeholder = "Filter..." } })
            </div>
            <div class="input-group col-md-4" style="float:left; margin-right:3px; width:5%;">
                <input type="submit" value="Filter" class="btn btn-default" style="width:auto" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
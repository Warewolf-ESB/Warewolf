    <sap:ActivityDesigner x:Name="MergeCurrentTool" Loaded="MergeCurrentTool_Loaded">
        <sap:ActivityDesigner.Icon>
            <Binding Source="{StaticResource Data-Assign-Icon}"/>
        </sap:ActivityDesigner.Icon>
        <sap:ActivityDesigner.Resources>
            <ResourceDictionary>
                <multiAssign:Small x:Key="Small" AutomationProperties.AutomationId="SmallViewContent" />
                <multiAssign:Large x:Key="Large" AutomationProperties.AutomationId="LargeViewContent" />
                <quickVariableInput:QuickVariableInputView x:Key="QuickVariableInput" AutomationProperties.AutomationId="QuickVariableInputContent" />

                <Style x:Key="ContentViewStyle" BasedOn="{StaticResource ActivityDesignerStyle}" TargetType="{x:Type sap:ActivityDesigner}">
                    <Setter Property="Content" Value="{DynamicResource Small}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=ShowLarge, Mode=TwoWay}" Value="true">
                            <Setter Property="Content" Value="{DynamicResource Large}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=ShowQuickVariableInput, Mode=TwoWay}" Value="true">
                            <Setter Property="Content" Value="{DynamicResource QuickVariableInput}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ResourceDictionary>
        </sap:ActivityDesigner.Resources>
    </sap:ActivityDesigner>


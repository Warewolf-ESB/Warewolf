<UserControl x:Class="Warewolf.Studio.Views.MergeWorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:sap="http://schemas.microsoft.com/netfx/2009/xaml/activities/presentation"
             xmlns:multiAssign="clr-namespace:Dev2.Activities.Designers2.MultiAssign;assembly=Dev2.Activities.Designers"
             xmlns:quickVariableInput="clr-namespace:Dev2.Activities.Designers2.Core.QuickVariableInput;assembly=Dev2.Activities.Designers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"

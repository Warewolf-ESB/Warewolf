<Window x:Class="Dev2.Views.Search.SearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:search="clr-namespace:Dev2.ViewModels.Search;assembly=Warewolf.Studio.ViewModels"
        xmlns:views="clr-namespace:Warewolf.Studio.Views"
        xmlns:controls="clr-namespace:Dev2.Activities.Designers2.Core.Controls;assembly=Dev2.Activities.Designers"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Title="SearchView" 
        Height="500" 
        Width="660"
        MinWidth="660"
        d:DataContext="{d:DesignInstance search:SearchViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="GridMain" Margin="{StaticResource ElementBorder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CONNECT CONTROL -->
        <views:ConnectControl x:Name="SearchConnectControl"
                              DataContext="{Binding ConnectControlViewModel}"
                              Margin="{StaticResource ControlBorderTop}"
                              ConnectButtonAutomationID="UI_SearchConnectServerbtn_AutoID"
                              EditButtonAutomationID="UI_SearchServerEditbtn_AutoID"
                              ServerComboBoxAutomationID="UI_SearchServercbx_AutoID" />

        <!-- SEARCH OPTIONS -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CheckBox x:Name="cbSearchAll" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" IsChecked="{Binding IsAllSelected}" Margin="-5,0,0,0">All</CheckBox>
            <CheckBox x:Name="cbSearchWorkflowName" Grid.Column="1" Grid.Row="0" IsChecked="{Binding IsWorkflowNameSelected}">Workflow Name</CheckBox>
            <CheckBox x:Name="cbSearchToolTitle" Grid.Column="2" Grid.Row="0" IsChecked="{Binding IsToolTitleSelected}">Tool Title</CheckBox>
            <CheckBox x:Name="cbSearchToolName" Grid.Column="3" Grid.Row="0" IsChecked="{Binding IsToolNameSelected}">Tool Name</CheckBox>
            <CheckBox x:Name="cbSearchInputField" Grid.Column="4" Grid.Row="0" IsChecked="{Binding IsInputFieldSelected}">Input Field</CheckBox>
            <CheckBox x:Name="cbSearchScalarName" Grid.Column="5" Grid.Row="0" IsChecked="{Binding IsScalarNameSelected}">Scalar Name</CheckBox>
            <CheckBox x:Name="cbSearchObjectName" Grid.Column="1" Grid.Row="1" IsChecked="{Binding IsObjectNameSelected}">Object Name</CheckBox>
            <CheckBox x:Name="cbSearchRecSetName" Grid.Column="2" Grid.Row="1" IsChecked="{Binding IsRecSetNameSelected}">Recordset Name</CheckBox>
            <CheckBox x:Name="cbSearchInputVariable" Grid.Column="3" Grid.Row="1" IsChecked="{Binding IsInputVariableSelected}">Input Variable</CheckBox>
            <CheckBox x:Name="cbSearchOutputVariable" Grid.Column="4" Grid.Row="1" IsChecked="{Binding IsOutputVariableSelected}">Output Variable</CheckBox>
            <CheckBox x:Name="cbSearchTestName" Grid.Column="5" Grid.Row="1" IsChecked="{Binding IsTestNameSelected}">Test Name</CheckBox>
        </Grid>
        
        <!-- SEARCH INPUT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtSearchInput" Text="{Binding SearchInput}"/>
            <Button x:Name="btnSearchInput" 
                    Grid.Column="1" 
                    Margin="{StaticResource ControlBorderLeft}" 
                    Command="{Binding SearchInputCommand}">
                <fa:FontAwesome HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Icon="Search" />
            </Button>
        </Grid>

        <!-- SEARCH RESULTS -->
        <controls:Dev2DataGrid x:Name="SearchResults"
                               Grid.Row="3" 
                               ItemsSource="{Binding SearchResults, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource ActivityMappingDataGridStyle}"
                               Height="Auto"
                               IsEnabled="{Binding IsSearchResultsEnabled}"
                               ColumnWidth="*"
                               Margin="{StaticResource ControlBorderTop}">

            <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="0"
                                        MinWidth="0"
                                        Header="Id"
                                        HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=interfaces:ISearchValue}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,0,0,0" Text="{Binding Path=ResourceId}" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Name"
                                        HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=interfaces:ISearchValue}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="{Binding Path=Path}" HorizontalAlignment="Left">
                                <Hyperlink Command="{Binding Path=OpenResourceCommand}" Style="{StaticResource HyperLinkStyle}" CommandParameter="{Binding}">
                                    <Run Text="{Binding Path=Name,Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Type"
                                        HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=interfaces:ISearchValue}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,0,0,0" ToolTip="{Binding Path=Type}" Text="{Binding Path=Type}" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Match"
                                        HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=interfaces:ISearchValue}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="5,0,0,0" ToolTip="{Binding Path=Match}" Text="{Binding Path=Match}" HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </controls:Dev2DataGrid>
    </Grid>
</Window>

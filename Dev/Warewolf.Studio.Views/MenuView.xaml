<UserControl x:Class="Warewolf.Studio.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:studio="clr-namespace:Dev2.Common.Interfaces.Studio;assembly=Dev2.Common.Interfaces"
             Width="60"
             ScrollViewer.VerticalScrollBarVisibility="Disabled"
             d:DataContext="{d:DesignInstance Type={x:Type studio:IMenuViewModel}}"
             mc:Ignorable="d">

    <Grid x:Name="Menu"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{StaticResource MenuPanelGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.25*" />

            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.5*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0"
               Grid.ColumnSpan="3"
               Width="5"
               Height="5"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Image Grid.Row="1"
               Grid.ColumnSpan="3"
               Width="40"
               Height="40"
               Margin="0,0,0,0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Logo}" />

        <Separator Grid.Row="2"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="3"
                Grid.Column="1"
                Command="{Binding NewCommand}"
                CommandParameter="{x:Static data:ResourceType.WorkflowService}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-New}" />
        </Button>

        <Button Grid.Row="4"
                Grid.Column="1"
                Command="{Binding SaveCommand}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Save}" />
        </Button>

        <Button Grid.Row="5"
                Grid.Column="1"
                Command="{Binding DeployCommand}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Deploy}" />
        </Button>

        <Separator Grid.Row="6"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="7"
                Grid.Column="1"
                Command="{Binding NewCommand}"
                CommandParameter="{x:Static data:ResourceType.DbService}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-DB}" />
        </Button>

        <Button Grid.Row="8"
                Grid.Column="1"
                Command="{Binding NewCommand}"
                CommandParameter="{x:Static data:ResourceType.PluginService}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-DLL}" />
        </Button>

        <Button Grid.Row="9"
                Grid.Column="1"
                Command="{Binding NewCommand}"
                CommandParameter="{x:Static data:ResourceType.WebService}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-WebService}" />
        </Button>

        <Separator Grid.Row="10"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="11"
                Grid.Column="1"
                Command="{Binding OpenSchedulerCommand}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Task}" />
        </Button>

        <Button Grid.Row="12"
                Grid.Column="1"
                Command="{Binding ExecuteServiceCommand}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Debug}" />
        </Button>

        <Separator Grid.Row="13"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="14"
                Grid.Column="1"
                Command="{Binding OpenSettingsCommand}"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Settings}" />
        </Button>

        <Separator Grid.Row="15"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="16"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Help}" />
        </Button>

        <Separator Grid.Row="17"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="18"
                Grid.Column="1"
                Command="{Binding CheckForNewVersionCommand}"
                Style="{StaticResource SideMenuButtonStyle}"
                Visibility="{Binding HasNewVersion}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource System-Expand}" />
        </Button>



        <Separator Grid.Row="19"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />


        <Button Grid.Row="20"
                Grid.Column="1"
                VerticalAlignment="Top"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="20"
                   Height="20"
                   Source="{StaticResource Menu-System-Lock}" />
        </Button>
    </Grid>
</UserControl>

<UserControl x:Class="Warewolf.Studio.Views.ToolboxView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
	xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolBox="clr-namespace:Warewolf.Studio.ViewModels.ToolBox;assembly=Warewolf.Studio.ViewModels"
	mc:Ignorable="d"
	x:Name="UserControl"
             d:DataContext="{d:DesignInstance Type={x:Type toolBox:ToolboxViewModel}}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             >
    <UserControl.Resources>
        <CollectionViewSource x:Key="ToolViewSource" Source="{Binding Tools}">


            <!--  Grouping  -->
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Tool.Category" />
            </CollectionViewSource.GroupDescriptions>

        </CollectionViewSource>

                                                            <DataTemplate x:Key="ToolDataTemplate" DataType="toolBox:ToolDescriptorViewModel">
                                                                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="{StaticResource WarewolfPanelGreyBrush}">
                <ig:DragDropManager.DragSource>
                    <ig:DragSource DragChannels="Tool" IsDraggable="True" />
                </ig:DragDropManager.DragSource>
                <Grid.RowDefinitions>
                                                                        <RowDefinition Height="10" />
                                                                        <RowDefinition Height="40" />
                                                                        <RowDefinition Height="42" />
                                                                        <RowDefinition Height="10" />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="10" />
                                                                        <ColumnDefinition Width="13" />
                                                                        <ColumnDefinition Width="40" />
                                                                        <ColumnDefinition Width="13" />
                                                                        <ColumnDefinition Width="10" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Image Grid.Row="1"
                           Grid.Column="2"
                           Width="40"
                           Height="40"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Source="{Binding Icon}" />
                                                                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Grid.ColumnSpan="3"
                           Margin="0,3,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               FontFamily="{StaticResource DefaultFontFamily}"
                               FontSize="{StaticResource FontSize-Normal}"
                               Text="{Binding Name}"
                               TextAlignment="Center"
                           TextWrapping="Wrap" />
                                                                </Grid>
                                                            </DataTemplate>
        <core:WidthConvertForWrapPanel x:Key="ListBoxWidthToItemsPanelWidthConverter" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>



        <!--  TOOL SEARCH BOX  -->
        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="29" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <customControls:SearchTextBox
                Grid.Column="0" 
                Grid.Row="0"  
                LabelText="Filter"
                Style="{StaticResource SearchTextboxStyle}"
                ClearSearchCommand="{Binding ClearFilterCommand}"
                Text="{Binding SearchTerm,
                                    Delay=300,
                                    UpdateSourceTrigger=PropertyChanged}"
                />
           <Button Width="25" Grid.Column="2" Grid.Row="0"
                    Height="25"
                    Padding="4">
                <fa:FontAwesome HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Icon="Refresh"
                                TextOptions.TextFormattingMode="Display" />
            </Button>
            
        </Grid>

        <ListBox Grid.Row="3"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 ItemTemplate="{StaticResource ToolDataTemplate}"
                 ItemsSource="{Binding Source={StaticResource ToolViewSource}}"
                 Style="{StaticResource ListBoxToolboxStyle}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel MaxWidth="{Binding Converter={StaticResource ListBoxWidthToItemsPanelWidthConverter}, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}, Path=ActualWidth}" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.GroupStyle>
                <GroupStyle>                    
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander Margin="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Header="{Binding Name}"
                  IsExpanded="True"
                  Style="{DynamicResource ExpanderStyleWithHiddenExpandButton}">
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>
        </ListBox>
    </Grid>
</UserControl>
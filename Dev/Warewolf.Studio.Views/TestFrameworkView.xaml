<UserControl x:Class="Warewolf.Studio.Views.TestFrameworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:interfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors;assembly=Dev2.Intellisense"
             xmlns:provider="clr-namespace:Dev2.Intellisense.Provider;assembly=Dev2.Intellisense"
             xmlns:interfaces1="clr-namespace:Dev2.Studio.Core.Interfaces;assembly=Dev2.Studio.Core"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance interfaces1:ITestViewModel}"
             AutomationProperties.AutomationId="UI_TestFrameworkView_AutoID">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="{StaticResource ElementBorder}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock >
                <Hyperlink x:Name="RunAllTestsUrl" 
                           Command="{Binding RunAllTestsInBrowserCommand}" 
                           ToolTip="{x:Static languages:Core.TestsRunAllTestsInBrowserTooltip}"
                           Style="{StaticResource HyperLinkStyle}"
                           NavigateUri="{Binding RunAllTestsUrl,UpdateSourceTrigger=PropertyChanged}" >
                    <TextBlock Text="{Binding RunAllTestsUrl,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HoverUnderlineStyle}"></TextBlock>
                </Hyperlink>
            </TextBlock>

            <TextBlock Grid.Row="0" Grid.Column="1" Text="Passing" HorizontalAlignment="Right" Margin="{StaticResource ControlBorderRight}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TestPassingResult}" HorizontalAlignment="Right"/>

            <Button Grid.Row="1" Grid.Column="0" Content="Run All" HorizontalAlignment="Left"/>
        </Grid>

        <Border Grid.Row="1"
                BorderBrush="{StaticResource ListBoxItemSelectedBorderBrush}" 
                BorderThickness="0,1,0,0" 
                Margin="{StaticResource ElementBorderTop}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Column="0" Style="{StaticResource ListBoxStyle}" BorderThickness="1,0,1,1"
                         ItemsSource="{Binding Tests}" SelectedItem="{Binding SelectedTest}" Name="Tests">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch" 
                                      Visibility="{Binding IsNewTest,Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition Width="60*"/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition Width="10*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel>
                                        <fa:FontAwesome Icon="Check" Foreground="Green" ToolTip="Passed" Visibility="{Binding TestPassed, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <fa:FontAwesome Icon="Times" Foreground="Red" ToolTip="Failing"  Visibility="{Binding TestFailing, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <fa:FontAwesome Icon="Exclamation" Foreground="OrangeRed" ToolTip="Invalid"  Visibility="{Binding TestInvalid, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <fa:FontAwesome Icon="Question" Foreground="Black" ToolTip="Pending" Visibility="{Binding TestPending, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>

                                    <CheckBox Grid.Column="1" 
                                              Grid.Row="0" 
                                              Grid.RowSpan="2" 
                                              HorizontalAlignment="Left" Style="{StaticResource CheckBoxRoundedStyle}" 
                                              Margin="-2,0,0,0"
                                              ToolTip="{x:Static languages:Core.TestsEnableRunSelectedTestTooltip}"
                                              IsChecked="{Binding IsTestSelected, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SchedulerStatusToCheckedConverter}}">
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.TestsEnableRunSelectedTestHelpText}" DataContext="{Binding }" />
                                        </i:Interaction.Behaviors>
                                    </CheckBox>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Grid.Row="0" 
                                               Text="{Binding TestName}" 
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="200" 
                                               FontSize="12" 
                                               Margin="0,0,0,-4" 
                                               FontWeight="Bold" />
                                    
                                    <TextBlock Grid.Column="2" 
                                               Grid.Row="1" 
                                               Text="{Binding LastRunDate}" 
                                               FontSize="11" 
                                               Margin="0,-4,0,0" />
                                    
                                    <Button Grid.Column="3" 
                                            Grid.Row="0" 
                                            Grid.RowSpan="2" 
                                            VerticalAlignment="Stretch" 
                                            HorizontalAlignment="Right" 
                                            Command="{Binding ElementName=Tests, Path=RunTestCommand }" 
                                            CommandParameter="{Binding .}" 
                                            ToolTip="{x:Static languages:Core.TestsRunSelectedTestTooltip}"
                                            Style="{StaticResource ButtonRunTestTransparentStyle}" >
                                        <Button.Content>
                                            <fa:FontAwesome Icon="Play" FontSize="18"/>
                                        </Button.Content>
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.TestsRunSelectedTestHelpText}" DataContext="{Binding}" />
                                        </i:Interaction.Behaviors>
                                    </Button>
                                    
                                    <Button Grid.Column="4" 
                                            Grid.Row="0" 
                                            Grid.RowSpan="2" 
                                            VerticalAlignment="Stretch" 
                                            HorizontalAlignment="Right" 
                                            Command="{Binding ElementName=Tests, Path=DeleteTestCommand }" 
                                            CommandParameter="{Binding .}" 
                                            ToolTip="{x:Static languages:Core.TestsDeleteSelectedTestTooltip}"
                                            Style="{StaticResource ButtonDeleteTestTransparentStyle}" >
                                        <Button.Content>
                                            <fa:FontAwesome Icon="Trash" FontSize="18"/>
                                        </Button.Content>
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.TestsDeleteSelectedTestHelpText}" DataContext="{Binding}" />
                                        </i:Interaction.Behaviors>
                                    </Button>
                                </Grid>
                                <Grid HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch" 
                                      Visibility="{Binding IsNewTest,Converter={StaticResource BoolToVisibilityConverterPositive}}" >
                                    <Button Style="{StaticResource ButtonSchedulerTransparentStyle}" 
                                            HorizontalAlignment="Stretch" 
                                            VerticalAlignment="Stretch" 
                                            ToolTip="{x:Static languages:Core.TestsNewTestTooltip}">
                                        <Button.Content>
                                            <Grid>
                                                <Grid.ColumnDefinitions >
                                                    <ColumnDefinition Width="15*"/>
                                                    <ColumnDefinition Width="85*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <fa:FontAwesome Icon="Plus" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="Schedule a new task" FontSize="14"/>
                                            </Grid>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ContentControl Grid.Column="1" Visibility="{Binding SelectedTest}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0">
                            <Hyperlink x:Name="RunSelectedTestUrl" 
                                       Command="{Binding RunSelectedTestInBrowserCommand}" 
                                       ToolTip="{x:Static languages:Core.TestsRunSelectedTestInBrowserTooltip}"
                                       Style="{StaticResource HyperLinkStyle}"
                                       NavigateUri="{Binding RunSelectedTestUrl,UpdateSourceTrigger=PropertyChanged}" >
                                <TextBlock Text="{Binding RunSelectedTestUrl,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HoverUnderlineStyle}"></TextBlock>
                            </Hyperlink>
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="{StaticResource ControlBorderTop}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Test Name"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TestName}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Run As User"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="(Leave blank to use executors Credentials)"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" Content="Public" IsChecked="{Binding IsPublic}" HorizontalAlignment="Right"/>

                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UserName}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Password}" Margin="{StaticResource ControlBorderTop}"/>
                        </Grid>

                        <Grid Grid.Row="2" Margin="{StaticResource ControlBorderTop}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Inputs"/>
                            <ig:XamGrid ItemsSource="{Binding SelectedTest.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Grid.Row="1"
                                        AutoGenerateColumns="False"
                                        Style="{StaticResource XamGridStyle}"
                                        BorderThickness="0"       
                                        HeaderVisibility="Hidden"
                                        KeyboardNavigation="CurrentLayout"
                                        Loaded="TestInputs_OnLoaded"
                                        x:Name="TestInputs">
                                <ig:XamGrid.Columns>
                                    <ig:TemplateColumn Key="Variable" Width="1*" IsReadOnly="True" HorizontalContentAlignment="Stretch">
                                        <ig:TemplateColumn.ItemTemplate>
                                            <DataTemplate>
                                                <Grid PreviewKeyDown="GridPreviewKeyDown" Background="Transparent" HorizontalAlignment="Stretch">
                                                    <TextBlock KeyboardNavigation.IsTabStop="False" 
                                                               Focusable="True" 
                                                               ToolTip="{Binding Path=Variable}" 
                                                               Text="{Binding Path=Variable, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ig:TemplateColumn.ItemTemplate>
                                    </ig:TemplateColumn>
                                    <ig:TemplateColumn Key="Value" Width="1*" IsReadOnly="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                        <ig:TemplateColumn.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <ui:IntellisenseTextBox x:Name="txtValue" 
                                                                            FilterType="All" 
                                                                            WrapInBrackets="False" 
                                                                            Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                            Margin="0" 
                                                                            AllowMultilinePaste="True"
                                                                            TextWrapping="Wrap"
                                                                            Focusable="True" 
                                                                            IsTabStop="True"
                                                                            AcceptsReturn="True"
                                                                            ToolTip="{x:Static languages:Core.TestsInputValueTooltip}"
                                                                            AllowUserInsertLine="True"
                                                                            SelectAllOnGotFocus="True">
                                                        <AutomationProperties.AutomationId>
                                                            <MultiBinding StringFormat="UI_{0}txt_AutoID">
                                                                <Binding Path="Value"/>
                                                            </MultiBinding>
                                                        </AutomationProperties.AutomationId>
                                                        <ui:IntellisenseTextBox.IntellisenseProvider>
                                                            <interfaceImplementors:CompositeIntellisenseProvider>
                                                                <provider:BlankIntellisenseProvider />
                                                            </interfaceImplementors:CompositeIntellisenseProvider>
                                                        </ui:IntellisenseTextBox.IntellisenseProvider>
                                                    </ui:IntellisenseTextBox>
                                                </Grid>
                                            </DataTemplate>
                                        </ig:TemplateColumn.ItemTemplate>
                                    </ig:TemplateColumn>
                                    <ig:TemplateColumn Key="EmptyIsNull" Width="1*" IsReadOnly="True" HorizontalContentAlignment="Stretch">
                                        <ig:TemplateColumn.ItemTemplate>
                                            <DataTemplate>
                                                <Grid PreviewKeyDown="GridPreviewKeyDown" Background="Transparent" HorizontalAlignment="Stretch">
                                                    <CheckBox IsChecked="{Binding Path=EmptyIsNull}" 
                                                              HorizontalAlignment="Center"
                                                              ToolTip="{x:Static languages:Core.InputEmptyIsNullToolTip}">
                                                        <i:Interaction.Behaviors>
                                                            <core:HelpSetter Text="{x:Static languages:Core.InputEmptyIsNullDefaultValueHelp}" DataContext="{Binding}" />
                                                        </i:Interaction.Behaviors>
                                                    </CheckBox>
                                                </Grid>
                                            </DataTemplate>
                                        </ig:TemplateColumn.ItemTemplate>
                                    </ig:TemplateColumn>
                                </ig:XamGrid.Columns>
                            </ig:XamGrid>

                            <!-- Grid.Row="2" is in place for Assert - V3 -->

                            <TextBlock Grid.Row="3" Text="Outputs"/>
                            <ig:XamGrid ItemsSource="{Binding SelectedTest.Outputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Grid.Row="1"
                                        AutoGenerateColumns="False"
                                        Style="{StaticResource XamGridStyle}"
                                        BorderThickness="0"       
                                        HeaderVisibility="Hidden"
                                        KeyboardNavigation="CurrentLayout"
                                        Loaded="TestInputs_OnLoaded"
                                        x:Name="TestOutputsGrid">
                                <ig:XamGrid.Columns>
                                    <ig:TemplateColumn Key="Variable" Width="1*" IsReadOnly="True" HorizontalContentAlignment="Stretch">
                                        <ig:TemplateColumn.ItemTemplate>
                                            <DataTemplate>
                                                <Grid PreviewKeyDown="GridPreviewKeyDown" Background="Transparent" HorizontalAlignment="Stretch">
                                                    <TextBlock KeyboardNavigation.IsTabStop="False" 
                                                               Focusable="True" 
                                                               ToolTip="{Binding Path=Variable}" 
                                                               Text="{Binding Path=Variable, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ig:TemplateColumn.ItemTemplate>
                                    </ig:TemplateColumn>
                                    <ig:TemplateColumn Key="Value" Width="1*" IsReadOnly="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                        <ig:TemplateColumn.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <ui:IntellisenseTextBox x:Name="txtValue" 
                                                                            FilterType="All" 
                                                                            WrapInBrackets="False" 
                                                                            Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                            Margin="0" 
                                                                            AllowMultilinePaste="True"
                                                                            TextWrapping="Wrap"
                                                                            Focusable="True" 
                                                                            IsTabStop="True"
                                                                            AcceptsReturn="True"
                                                                            ToolTip="{x:Static languages:Core.TestsInputValueTooltip}"
                                                                            AllowUserInsertLine="True"
                                                                            SelectAllOnGotFocus="True">
                                                        <AutomationProperties.AutomationId>
                                                            <MultiBinding StringFormat="UI_{0}txt_AutoID">
                                                                <Binding Path="Value"/>
                                                            </MultiBinding>
                                                        </AutomationProperties.AutomationId>
                                                        <ui:IntellisenseTextBox.IntellisenseProvider>
                                                            <interfaceImplementors:CompositeIntellisenseProvider>
                                                                <provider:BlankIntellisenseProvider />
                                                            </interfaceImplementors:CompositeIntellisenseProvider>
                                                        </ui:IntellisenseTextBox.IntellisenseProvider>
                                                    </ui:IntellisenseTextBox>
                                                </Grid>
                                            </DataTemplate>
                                        </ig:TemplateColumn.ItemTemplate>
                                    </ig:TemplateColumn>
                                </ig:XamGrid.Columns>
                            </ig:XamGrid>

                            <Grid Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Text="Error"/>
                                <RadioButton x:Name="NoErrorRadioButton"
                                             Grid.Column="1"
                                             ToolTip="{x:Static languages:Core.TestsNoErrorExpectedTooltip}" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Left" 
                                             IsChecked="{Binding Path=NoErrorExpected, Mode=TwoWay}"
                                             Content="No Error">
                                    <i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:Core.TestsNoErrorExpectedHelpText}" DataContext="{Binding}" />
                                    </i:Interaction.Behaviors>
                                </RadioButton>
                                <RadioButton x:Name="ErrorRadioButton" 
                                             Grid.Column="1"
                                             ToolTip="{x:Static languages:Core.TestsErrorExpectedTooltip}" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Left" 
                                             IsChecked="{Binding Path=ErrorExpected, Mode=TwoWay}" 
                                             Content="Error">
                                    <i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:Core.TestsErrorExpectedHelpText}" DataContext="{Binding}" />
                                    </i:Interaction.Behaviors>
                                </RadioButton>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="3">

                        </Grid>
                    </Grid>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="Warewolf.Studio.Views.ManagePluginServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:pluginService="clr-namespace:Dev2.Common.Interfaces.PluginService;assembly=Dev2.Common.Interfaces"
             xmlns:xamGridEx="clr-namespace:Warewolf.Studio.Views.XamGridEx"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:converters="clr-namespace:Warewolf.Studio.Views.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=pluginService:IPluginServiceViewModel,
                                              IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <views:NotConverter x:Key="NotConverter" />
        <converters:ComboEditorToMaxItemWidthConverter x:Key="ComboEditorToMaxItemWidthConverter"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid x:Name="GridMain"  MinWidth="600" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}">
            <Grid Margin="{StaticResource ElementBorder}" x:Name="GridContainer" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- SELECT SOURCE -->
                <Grid Grid.Row="0" 
                      HorizontalAlignment="Stretch" 
                      Margin="{StaticResource GridBorderBottom}" 
                      Width="{Binding ElementName=GridContainer, Path=ActualWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <!-- SOURCE HEADER -->
                    <StackPanel Grid.Row="0" 
                             Grid.Column="0" 
                             Background="{StaticResource WareWolfMenuBrush}" 
                             HorizontalAlignment="Stretch" 
                             Orientation="Horizontal">
                        <TextBlock Text="1" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Select a Source" 
                               Style="{StaticResource SourceHeader}"></TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="{StaticResource ElementBorderTop}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="SourcesComboBox" 
                                  Grid.Column="0"
                                  DisplayMemberPath="Name" 
                                  Width="250" 
                                  ItemsSource="{Binding Sources}"
                                  SelectedItem="{Binding SelectedSource}"
                                  Margin="{StaticResource ControlBorderRight}"
                                  Focusable="True" >
                            <!--<customControls:WatermarkTextBox.Watermark>
                                <StackPanel VerticalAlignment="Top">
                                    <Label Style="{StaticResource WatermarkLabelStyle}">Choose...</Label>
                                </StackPanel>
                            </customControls:WatermarkTextBox.Watermark>-->
                            <i:Interaction.Behaviors>
                                <core:HelpSetter Text="{x:Static languages:Core.PluginServiceSourcesHelp}"
                                                         DataContext="{Binding}" />
                            </i:Interaction.Behaviors>
                        </ComboBox>
                        <Button Width="25" 
                                Grid.Column="1"
                                Height="26"
                                Content=" ... " 
                                IsEnabled="{Binding CanEditNamespace}"
                                Command="{Binding EditSourceCommand}"
                                Margin="0,-1,3,0">
                            <i:Interaction.Behaviors>
                                <core:HelpSetter Text="{x:Static languages:Core.PluginServiceEditSourceHelp}"
                                                         DataContext="{Binding}" />
                            </i:Interaction.Behaviors>
                        </Button>
                        <Button Content="New" 
                                Height="26"
                                Grid.Column="2"
                                Margin="0,-1,0,0"
                                Command="{Binding CreateNewSourceCommand}"
                                Style="{StaticResource ButtonOrangeStyle}" 
                                Width="100" >
                            <i:Interaction.Behaviors>
                                <core:HelpSetter Text="{x:Static languages:Core.PluginServiceNewSourceHelp}"
                                                         DataContext="{Binding}" />
                            </i:Interaction.Behaviors>
                        </Button>
                    </Grid>
                </Grid>
                <!-- SELECT NAMESPACE -->
                <Grid x:Name="NamespaceGrid" 
                      Grid.Row="1" 
                      Margin="{StaticResource GridBorderBottom}"
                      Grid.Column="0" 
                      Visibility="{Binding Path=CanEditNamespace, Converter={StaticResource BoolToVis}}"
                      Width="{Binding ElementName=GridContainer, Path=ActualWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- NAMESPACE HEADER -->
                    <StackPanel Grid.Row="0" 
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="2" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Select a Namespace" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                        <ig:XamComboEditor x:Name="NamespaceComboBox" 
                                           ItemsSource="{Binding NameSpaces}"
                                           DisplayMemberPath="FullName" 
                                           SelectedItem="{Binding SelectedNamespace}"
                                           MinWidth="250"
                                           AllowDrop="True"
                                           MaxDropDownHeight="200"
                                           IsEditable="True"
                                           CustomValueEnteredAction="Allow"
                                           Padding="{StaticResource ComboBoxItemPadding}"
                                           Focusable="True"
                                           Margin="{StaticResource ElementBorderTop}" 
                                           Width="{Binding RelativeSource={RelativeSource Self}, Converter={StaticResource ComboEditorToMaxItemWidthConverter }, UpdateSourceTrigger=PropertyChanged}">
                            <ig:XamComboEditor.ItemFilters>
                                <ig:ComboItemFilter FieldName="FullName" LogicalOperator="And">
                                    <ig:ComboItemFilter.Conditions>
                                        <ig:ComparisonCondition Operator="Contains" />
                                    </ig:ComboItemFilter.Conditions>
                                </ig:ComboItemFilter>
                            </ig:XamComboEditor.ItemFilters>
                            <i:Interaction.Behaviors>
                                <core:HelpSetter Text="{x:Static languages:Core.PluginServiceNamespaceHelp}"
                                                         DataContext="{Binding}" />
                            </i:Interaction.Behaviors>
                        </ig:XamComboEditor>
                    </StackPanel>
                </Grid>
                <!-- SELECT ACTION -->
                <Grid x:Name="ActionGrid" 
                      Grid.Row="2" 
                      Margin="{StaticResource GridBorderBottom}"
                      Visibility="{Binding Path=CanSelectMethod, Converter={StaticResource BoolToVis}}"
                      Grid.Column="0" 
                      Width="{Binding ElementName=GridContainer, Path=ActualWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="7" ></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- ACTION HEADER -->
                    <StackPanel Grid.Row="0" 
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="3" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Select an Action" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Choose data Source Action-->
                            <ig:XamComboEditor x:Name="ActionsComboBox"
                                               Grid.Column="0" 
                                               Margin="0,5,3,0"
                                               IsEditable="True"
                                               MinWidth="250"
                                               AllowDrop="True"
                                               MaxDropDownHeight="200"
                                               CustomValueEnteredAction="Allow"
                                               ItemsSource="{Binding AvalaibleActions}"
                                               DisplayMemberPath="Method"
                                               SelectedItem="{Binding SelectedAction,UpdateSourceTrigger=PropertyChanged}"
                                               views:FocusExtension.IsFocused="True">
                                <ig:XamComboEditor.ItemFilters>
                                    <ig:ComboItemFilter FieldName="Method" LogicalOperator="And">
                                        <ig:ComboItemFilter.Conditions>
                                            <ig:ComparisonCondition Operator="Contains" />
                                        </ig:ComboItemFilter.Conditions>
                                    </ig:ComboItemFilter>
                                </ig:XamComboEditor.ItemFilters>
                                <i:Interaction.Behaviors>
                                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceSelectActionHelp}"
                                 DataContext="{Binding}" />
                                </i:Interaction.Behaviors>
                            </ig:XamComboEditor>
                            <!-- NEED TO ADD LOGIC TO REFRESH COMMAND AND VISIBILITY -->
                            <Button Margin="0,5,0,0"
                                    Grid.Column="1"
                                    Command="{Binding RefreshCommand}"
                                    Visibility="{Binding IsRefreshing,Converter={StaticResource NotConverter}}">
                                <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                            FontSize="16" 
                                            Icon="Refresh" 
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                <i:Interaction.Behaviors>
                                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceRefreshHelp}"
                                                         DataContext="{Binding}" />
                                </i:Interaction.Behaviors>
                            </Button>
                            <!-- NEED TO ADD LOGIC TO VISIBILITY -->
                            <views:CircularProgressBar Grid.Column="1"
                                                   Width="25"
                                                   Height="25"
                                                   Padding="2.5"
                                                       Visibility="{Binding IsRefreshing,Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </Grid>
                <!-- TEST VALUES -->
                <Grid x:Name="TestGrid" 
                      Grid.Row="3" 
                      Margin="{StaticResource GridBorderBottom}"
                      Visibility="{Binding Path=CanTest,Converter={StaticResource BoolToVis}}"
                      Grid.Column="0" 
                      Width="{Binding ElementName=GridContainer, Path=ActualWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="7"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- TEST VALUES HEADER -->
                    <StackPanel Grid.Row="0" 
                                Background="{StaticResource WareWolfMenuBrush}" 
                                HorizontalAlignment="Stretch" 
                                Orientation="Horizontal">
                        <TextBlock Text="4" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Provide Test Values" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0" Margin="{StaticResource ControlBorderTop}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="TestButton" 
                                    Grid.Column="0"
                                    Margin="{StaticResource ControlBorderRight}" 
                                    Command="{Binding TestPluginCommand}"
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Bottom" 
                                    Width="100">Test</Button>
                            <views:CircularProgressBar Grid.Column="1"
                                                       Width="25"
                                                       HorizontalAlignment="Right" 
                                                       Height="25"
                                                       Margin="0,2,0,0"
                                                       Padding="2.5" 
                                                       Visibility="{Binding IsTesting,Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                        <ScrollViewer Grid.Row="1" 
                                      Grid.Column="0" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="{StaticResource ControlBorderTop}"
                                      MaxHeight="110">
                            <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" >
                                <xamGridEx:XamGridEx x:Name="InputGrid" 
                                                     Style="{StaticResource XamGridStyle}"
                                                     ItemsSource="{Binding Path=InputValues}"
                                                     AutoGenerateColumns="False"
                                                     IsAlternateRowsEnabled="False"
                                                     ColumnLayoutHeaderVisibility="Never"
                                                     DeleteKeyAction="DeleteRowOfActiveCell"
                                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                     ColumnWidth="*" 
                                                     MinWidth="400">
                                    <ig:XamGrid.Columns>
                                        <ig:TextColumn Key="Name" HeaderText="Name" MinimumWidth="100" IsReadOnly="True">
                                            <ig:TextColumn.AddNewRowEditorTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" >
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ig:TextColumn.AddNewRowEditorTemplate>
                                        </ig:TextColumn>
                                        <xamGridEx:TextBoxColumn Key="Value" HeaderText="Value" MinimumWidth="100" IsResizable="False" Watermark="Value">
                                        </xamGridEx:TextBoxColumn>
                                    </ig:XamGrid.Columns>
                                    <ig:XamGrid.SortingSettings>
                                        <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                                    </ig:XamGrid.SortingSettings>
                                    <ig:XamGrid.EditingSettings>
                                        <ig:EditingSettings AllowEditing="Cell"
                                                    IsMouseActionEditingEnabled="SingleClick"
                                                    IsEnterKeyEditingEnabled="True" 
                                                    IsF2EditingEnabled="True" 
                                                            IsOnCellActiveEditingEnabled="False" />
                                    </ig:XamGrid.EditingSettings>
                                    <ig:XamGrid.ConditionalFormattingSettings>
                                        <ig:ConditionalFormattingSettings AllowConditionalFormatting="True"/>
                                    </ig:XamGrid.ConditionalFormattingSettings>
                                    <xamGridEx:XamGridEx.ContextMenuSettings>
                                        <xamGridEx:ContextMenuSettings AllowContextMenu="True">
                                            <xamGridEx:ContextMenuSettings.ContextMenu>
                                                <ig:XamContextMenu >
                                                    <ig:XamMenuItem Header="Insert Row" Command="{Binding  Path=AddRowCommand}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Source="{x:Null}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Header="Delete Row"  Command="{Binding  Path=RemoveRowCommand}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Source="{x:Null}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                </ig:XamContextMenu>
                                            </xamGridEx:ContextMenuSettings.ContextMenu>
                                        </xamGridEx:ContextMenuSettings>
                                    </xamGridEx:XamGridEx.ContextMenuSettings>
                                </xamGridEx:XamGridEx>
                            </Grid>
                        </ScrollViewer>
                        <Grid Grid.Row="2" 
                              Grid.Column="0" 
                              Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0"
                                Margin="{StaticResource ControlBorderTop}" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Width="100">Test Results</TextBlock>
                        </Grid>
                        <ScrollViewer Grid.Row="3"
                                      Grid.Column="0" 
                                      Grid.ColumnSpan="2"
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto"
                                      MaxHeight="110">
                            <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" >
                                <TextBox HorizontalAlignment="Stretch"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="90"
                                         VerticalScrollBarVisibility="Auto"
                                         VerticalContentAlignment="Stretch"
                                         VerticalAlignment="Stretch">
                                    <i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:Core.PluginServiceTestResultsHelp}"
                                                         DataContext="{Binding}" />
                                    </i:Interaction.Behaviors>
                                </TextBox>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
                <Grid x:Name="MappingsGrid" 
                  Grid.Row="4" 
                  Grid.Column="0" 
                      Visibility="{Binding Path=CanEditMappings,Converter={StaticResource BoolToVis}}">
                    <!-- Mappings-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Background="{StaticResource WareWolfMenuBrush}" 
                            HorizontalAlignment="Stretch" 
                            Orientation="Horizontal">
                        <TextBlock Text="5" 
                               Style="{StaticResource TextBlockOrangeNumberStyle}"></TextBlock>
                        <TextBlock Margin="5" 
                               Text="Defaults and Mappings" 
                               Style="{StaticResource SourceHeader}" ></TextBlock>
                    </StackPanel>
                    <views:MappingsView x:Name="MappingsView" Grid.Row="1"></views:MappingsView>
                </Grid>
                <!-- SAVE -->
                <Grid Grid.Row="5" 
                      Width="{Binding ElementName=GridContainer, Path=ActualWidth}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="" 
                               HorizontalAlignment="Left" 
                               TextWrapping="WrapWithOverflow" 
                               x:Name="ErrorTextBlock" ></TextBlock>
                    <Button x:Name="SaveButton" 
                            Grid.Column="2" 
                            Margin="{StaticResource ControlBorderTopRight}" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            Command="{Binding SaveCommand}" 
                            Width="100">OK
                        <i:Interaction.Behaviors>
                            <core:HelpSetter Text="{x:Static languages:Core.PluginServiceSaveCommandHelp}"
                                                         DataContext="{Binding}" />
                        </i:Interaction.Behaviors>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             x:Name="ExplorerViewControl"
             KeyUp="ExplorerView_OnKeyUp"
             PreviewMouseLeftButtonDown="ExplorerView_OnPreviewMouseLeftButtonDown"
             d:DataContext="{d:DesignInstance Type=interfaces:IExplorerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <core:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
            <core:ResourceTypeToIconVisibility x:Key="ResourceTypeToVisibilityConverter" />
            <views:NotConverter x:Key="NotConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="F" Command="{Binding Path=CreateFolderCommand}" Modifiers="Control+Shift" />
    </UserControl.InputBindings>
    <Grid >
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.Background>
        </Grid>

        <Grid x:Name="LayoutRoot" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="422*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  URI LOOKUP  -->
            <StackPanel HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="{Binding ShowConnectControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <views:ConnectControl x:Name="ConnectControl" DataContext="{Binding ConnectControlViewModel}" />
            </StackPanel>
            <!--  SERVICE FILTER  -->
            <Grid Grid.Row="1" Margin="0,-1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <!--  Margin="{StaticResource ElementBorderRight}"  -->
                <customControls:SearchTextBox x:Name="SearchTextBox"
                                              Grid.Row="0"
                                              Grid.Column="0"
                                              Margin="{StaticResource ControlBorderTopRight}"
                                              HorizontalAlignment="Stretch"
                                              ClearSearchCommand="{Binding ClearSearchTextCommand}"
                                              ClearSearchToolTip="{Binding ExplorerClearSearchTooltip}"
                                              LabelText="Filter"
                                              Style="{StaticResource SearchTextboxStyle}"
                                              Text="{Binding SearchText, Delay=450, UpdateSourceTrigger=PropertyChanged}"
                                              ToolTip="{Binding SearchToolTip}">
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.ExplorerViewFilterSearchHelp}" />
                    </i:Interaction.Behaviors>
                </customControls:SearchTextBox>
                <Button Grid.Row="0"
                        Grid.Column="1"
                        x:Name="FilterRefreshButton"
                        Width="25"
                        Height="25"
                        Margin="0,3,0,-1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding RefreshCommand}"
                        ToolTip="{Binding Path=RefreshToolTip}"
                        Visibility="{Binding Path=IsRefreshing,
                                             Converter={StaticResource NotConverter}}">
                    <fa:FontAwesome HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Icon="Refresh"
                                    TextOptions.TextFormattingMode="Display" />
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.ExplorerViewRefreshHelp}" />
                    </i:Interaction.Behaviors>
                </Button>
                <views:CircularProgressBar Grid.Row="0"
                                           Grid.Column="1"
                                           x:Name="FilterRefreshProgressBar"
                                           Width="25"
                                           Height="25"
                                           Padding="2.5"
                                           Visibility="{Binding Path=IsRefreshing,
                                                                Converter={StaticResource BoolToVisibilityConverter}}" />

            </Grid>
            <TreeView x:Name="ExplorerTree"
                      Grid.Row="2"
                      Margin="{StaticResource ControlBorderTop}"
                      ItemsSource="{Binding Environments}"
                      Style="{StaticResource TreeViewStyle}"
                      PreviewMouseLeftButtonUp="ExplorerTree_OnPreviewMouseLeftButtonUp"
                      customControls:DragDropExtension.ScrollOnDragDrop="True"
                      PreviewMouseMove="Tree_MouseMove"
                      SelectedItemChanged="ExplorerTree_OnSelectedItemChanged"
                      KeyboardNavigation.TabNavigation="Continue"
                      KeyUp="ExplorerTree_OnKeyUp"
                      Drop="DropTree_Drop"
                      DragOver="ExplorerTree_OnDragOver"
                      DragLeave="ExplorerTree_OnDragLeave"
                      DragEnter="ExplorerTree_OnDragEnter">
                <TreeView.Resources>
                    <ContextMenu x:Key="ExplorerEnvironmentMenu" Style="{StaticResource ContextMenuStyle}"  StaysOpen="true"
                                             Visibility="{Binding ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                        <MenuItem Name="NewService"
                                              Command="{Binding NewServiceCommand}"
                                              Header="New Workflow Service"
                                              Style="{StaticResource MenuItemStyle}"
                                              InputGestureText="[Ctrl+W]"
                                              IsEnabled="{Binding CanCreateWorkflowService}"
                                  FontWeight="SemiBold"
                                              ToolTip="{Binding NewServiceTooltip}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource NewServiceIcon}"/>
                            </MenuItem.Icon>
                            <MenuItem.InputBindings>
                                <KeyBinding Key="W" Command="{Binding NewServiceCommand}" Modifiers="Control" />
                            </MenuItem.InputBindings>
                        </MenuItem>

                        <MenuItem Name="NewFolder"
                                              Command="{Binding CreateFolderCommand}"
                                              CommandParameter="Folder"
                                              Style="{StaticResource MenuItemStyle}"
                                              Header="{x:Static languages:Core.NewFolderLabel}"
                                              InputGestureText="[Ctrl+Shift+F]"
                                              IsEnabled="{Binding CanCreateFolder}" 
                                              ToolTip="{Binding NewFolderTooltip}"/>

                        <Separator />

                        <!--Set Visibility to collapsed until we add functionality for deploy on server-->
                        <MenuItem Name="Deploy"
                                              Command="{Binding DeployCommand}"
                                              CommandParameter="{Binding Path=Data}"
                                              Header="Deploy"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanDeploy}"
                                              ToolTip="{Binding DeployTooltip}">
                            <MenuItem.Icon>
                                <fa:FontAwesome FontSize="12" FontWeight="Light" Icon="PaperPlaneOutline" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="ServerVersion"
                                              Command="{Binding ShowServerVersionCommand}"
                                              Header="Server Version"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanShowServerVersion}" 
                                              ToolTip="{Binding ServerVersionTooltip}"/>

                        <MenuItem Name="ViewApisJson"
                                              Command="{Binding ViewApisJsonCommand}"
                                              Header="View Apis.Json"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanViewApisJson}" 
                                              ToolTip="{Binding ViewApisJsonTooltip}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource ViewApisJsonIcon}"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator />

                        <MenuItem Header="Sources" Style="{StaticResource MenuItemStyle}">
                            <MenuItem Name="NewServerSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewServerCommand}"
                                                  Header="New Server Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewServerSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewServerSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewDataBaseSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewDatabaseSourceCommand}"
                                                  Header="New Database Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewDataBaseSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewDataBaseSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewWebSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewWebSourceSourceCommand}"
                                                  CommandParameter="WebSource"
                                                  Header="New Web Service Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewWebSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewWebSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewPluginSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewPluginSourceCommand}"
                                                  Header="New DotNet Plugin Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewPluginSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewComPluginSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewComPluginSourceCommand}"
                                                  Header="New COM Plugin Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewComPluginSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewEmailSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewEmailSourceSourceCommand}"
                                                  Header="New Email Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewEmailSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewExchangeSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewExchangeSourceSourceCommand}"
                                                  Header="New Exchange Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewExchangeSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewRabbitMqSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewRabbitMQSourceSourceCommand}"
                                                  Header="New RabbitMQ Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewRabbitMqSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewRabbitMqSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewDropboxSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewDropboxSourceSourceCommand}"
                                                  Header="New Dropbox Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewDropboxSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewDropboxSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewSharepointSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding NewSharepointSourceSourceCommand}"
                                                  Header="New Sharepoint Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding NewSharepointSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewSharepointSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </ContextMenu>

                    <ContextMenu x:Key="ExplorerContextMenuManager" Style="{StaticResource ContextMenuStyle}"  StaysOpen="true"
								 Visibility="{Binding ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                        <MenuItem Name="Open"
								  Command="{Binding OpenCommand}"
								  CommandParameter="WorkflowService"
								  ToolTip="{Binding OpenTooltip}">
                            <MenuItem.Style>
                                <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}">
                                    <Setter Property="Header" Value="Open"></Setter>
                                    <Setter Property="FontWeight" Value="SemiBold"></Setter>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsFolder}" Value="True"/>
                                                <Condition Binding="{Binding IsExpanded}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Header" Value="Collapse" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsFolder}" Value="True"/>
                                                <Condition Binding="{Binding IsExpanded}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Header" Value="Expand" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </MenuItem.Style>
                        </MenuItem>

                        <MenuItem Name="NewServiceItem"
								  Command="{Binding NewServiceCommand}"
								  Header="New Workflow Service"
								  Style="{StaticResource MenuItemStyle}"
								  InputGestureText="[Ctrl+W]"
								  IsEnabled="{Binding CanCreateWorkflowService}"
								  ToolTip="{Binding NewServiceTooltip}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource NewServiceIcon}"/>
                            </MenuItem.Icon>
                            <MenuItem.InputBindings>
                                <KeyBinding Key="W" Command="{Binding NewServiceCommand}" Modifiers="Control" />
                            </MenuItem.InputBindings>
                        </MenuItem>

                        <Separator Visibility="{Binding IsDebugInputsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Name="DebugInputs"
								  Command="{Binding DebugCommand}"
								  Header="Debug Inputs"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDebugInputs}"
								  ToolTip="{Binding DebugInputsTooltip}"
								  Visibility="{Binding IsDebugInputsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="DebugStudio"
								  Command="{Binding DebugStudioCommand}"
								  Header="Debug Studio"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDebugStudio}"
								  ToolTip="{Binding DebugStudioTooltip}"
								  Visibility="{Binding IsDebugStudioVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="DebugBrowser"
								  Command="{Binding DebugBrowserCommand}"
								  Header="Debug Browser"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDebugBrowser}"
								  ToolTip="{Binding DebugBrowserTooltip}"
								  Visibility="{Binding IsDebugBrowserVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="Schedule"
								  Command="{Binding ScheduleCommand}"
								  Header="Schedule"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanCreateSchedule}"
								  ToolTip="{Binding ScheduleTooltip}"
								  Visibility="{Binding IsScheduleVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="History" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator Visibility="{Binding IsNewFolderVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Name="NewFolderFromItem"
								  Command="{Binding CreateFolderCommand}"
								  CommandParameter="Folder"
								  Header="New Folder"
								  Style="{StaticResource MenuItemStyle}"
								  InputGestureText="[Ctrl+Shift+F]"
								  IsEnabled="{Binding CanCreateFolder}" 
								  ToolTip="{Binding NewFolderTooltip}"
								  Visibility="{Binding IsNewFolderVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Name="Rename"
								  Command="{Binding RenameCommand}"
								  CommandParameter="{Binding Data}"
								  Header="Rename"
								  Style="{StaticResource MenuItemStyle}"
								  InputGestureText="[F2]"
								  IsEnabled="{Binding CanRename}"
								  ToolTip="{Binding RenameTooltip}">
                            <i:Interaction.Behaviors>
                                <views:RenameTreeNode DataContext="{Binding Data}" Node="{Binding Node}" Tree="{Binding Path=Node.Manager.NodeLayout.Tree}" />
                            </i:Interaction.Behaviors>
                        </MenuItem>
                        <MenuItem Name="Delete"
								  Command="{Binding DeleteCommand}"
								  CommandParameter="{Binding Data}"
								  Header="Delete"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDelete}"
								  ToolTip="{Binding DeleteTooltip}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="TrashOutline" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="Duplicate"
								  Command="{Binding DuplicateCommand}"
								  CommandParameter="{Binding Path=Data}"
								  Header="Duplicate"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDuplicate}"
								  ToolTip="{Binding DuplicateTooltip}"
								  Visibility="{Binding IsDuplicateVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Clone" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator />

                        <MenuItem Name="Test"
								  Command="{Binding CreateTestCommand}"
								  CommandParameter="{Binding Path=Data}"
								  Header="Tests"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanCreateTest}"
								  ToolTip="{Binding CreateTestTooltip}"
								  Visibility="{Binding IsCreateTestVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome FontSize="14" FontWeight="Light" Icon="Flask" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="RunAllTests"
								  Command="{Binding RunAllTestsCommand}"
								  Header="Run All Tests"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanViewRunAllTests}"
								  ToolTip="{Binding RunAllTestsTooltip}"
								  Visibility="{Binding IsRunAllTestsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        </MenuItem>

                        <MenuItem Name="DeployItem"
								  Command="{Binding DeployCommand}"
								  CommandParameter="{Binding Path=Data}"
								  InputGestureText="[Ctrl+D]"
								  Header="Deploy"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanDeploy}"
								  ToolTip="{Binding DeployTooltip}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="PaperPlaneOutline" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Name="Dependencies"
								  Command="{Binding ShowDependenciesCommand}"
								  CommandParameter="{Binding Data}"
								  Header="Show Dependencies"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanShowDependencies}"
								  ToolTip="{Binding DependenciesTooltip}"
								  Visibility="{Binding IsDependenciesVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Sitemap" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="ViewSwagger"
								  Command="{Binding ViewSwaggerCommand}"
								  Header="View Swagger"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanViewSwagger}" 
								  ToolTip="{Binding ViewSwaggerTooltip}"
								  Visibility="{Binding IsViewSwaggerVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource ViewSwaggerIcon}" Margin="-2,0,0,0"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="ViewApisJsonItem"
								  Command="{Binding ViewApisJsonCommand}"
								  Header="View Apis.Json"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanViewApisJson}" 
								  ToolTip="{Binding ViewApisJsonTooltip}"
								  Visibility="{Binding IsViewJsonApisVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource ViewApisJsonIcon}"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator Visibility="{Binding IsShowVersionHistoryVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Name="ShowHideVersions"
								  Command="{Binding ShowVersionHistory}"
								  Header="{Binding VersionHeader}"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding CanShowVersions}"
								  ToolTip="{Binding ShowHideVersionsTooltip}"
								  Visibility="{Binding IsShowVersionHistoryVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <Image Style="{StaticResource ShowHideVersionsIcon}"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Name="Rollback"
								  Command="{Binding RollbackCommand}"
								  CommandParameter="{Binding Data}"
								  Header="Make Current Version"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding IsVersion}" 
								  ToolTip="{Binding RollbackTooltip}"
								  Visibility="{Binding IsRollbackVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Name="OpenVersion"
								  Command="{Binding OpenVersionCommand}"
								  CommandParameter="{Binding Data}"
								  Header="Open Version"
								  Style="{StaticResource MenuItemStyle}"
								  IsEnabled="{Binding IsVersion}" 
								  ToolTip="{Binding OpenVersionTooltip}"
								  Visibility="{Binding IsOpenVersionVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Separator Visibility="{Binding IsFolder, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <MenuItem Header="Sources" Style="{StaticResource MenuItemStyle}" Visibility="{Binding IsFolder, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem Name="NewServerSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewServerCommand}"
									  Header="New Server Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewServerSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewServerSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewDataBaseSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewDatabaseSourceCommand}"
									  Header="New Database Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewDataBaseSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewDataBaseSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewWebSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewWebSourceSourceCommand}"
									  CommandParameter="WebSource"
									  Header="New Web Service Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewWebSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewWebSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewPluginSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewPluginSourceCommand}"
									  Header="New DotNet Plugin Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewPluginSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewComPluginSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewComPluginSourceCommand}"
									  Header="New COM Plugin Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewComPluginSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewEmailSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewEmailSourceSourceCommand}"
									  Header="New Email Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewEmailSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewExchangeSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewExchangeSourceSourceCommand}"
									  Header="New Exchange Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewExchangeSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewRabbitMqSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewRabbitMQSourceSourceCommand}"
									  Header="New RabbitMQ Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewRabbitMqSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewRabbitMqSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewDropboxSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewDropboxSourceSourceCommand}"
									  Header="New Dropbox Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewDropboxSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewDropboxSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Name="NewSharepointSourceItem"
									  Style="{StaticResource MenuItemStyle}"
									  Command="{Binding NewSharepointSourceSourceCommand}"
									  Header="New Sharepoint Source"
									  IsEnabled="{Binding CanCreateSource}"
									  ToolTip="{Binding NewSharepointSourceTooltip}">
                                <MenuItem.Icon>
                                    <Image Style="{StaticResource NewSharepointSourceIcon}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                        <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="RequestBringIntoView" Handler="TreeViewItem_RequestBringIntoView"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate x:Name="EnvironmentDataTemplate"  DataType="{x:Type interfaces:IEnvironmentViewModel}" ItemsSource="{Binding Children}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource ExplorerTreeEnvironmentButtonStyle}"
                                    Visibility="{Binding ElementName=FilterRefreshButton, Path=Visibility}">
                                <Grid>
                                    <Image Width="18"
                                            Height="18"
                                            Source="{StaticResource System-Logo}"
                                            Visibility="{Binding IsServerIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <Image Width="18"
                                            Height="18"
                                            Source="{StaticResource System-Logo-Mono}"
                                            Visibility="{Binding IsServerUnavailableIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </Grid>
                            </Button>

                            <views:CircularProgressBar Grid.Column="0" Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <views:CircularProgressBar Grid.Column="0" Visibility="{Binding ElementName=FilterRefreshProgressBar, Path=Visibility}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox x:Name="EnvironmentNameCheckBox"
                                           ClickMode="Press"
                                           IsChecked="{Binding IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           IsEnabled="{Binding IsResourceCheckedEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           ToolTip="{Binding DeployResourceCheckboxTooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           ToolTipService.ShowOnDisabled="True"
                                           Style="{StaticResource DeployCheckBoxStyle}"
                                          Margin="2,0,0,0"
                                           Visibility="{Binding AllowResourceCheck, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <TextBlock Margin="4,0,0,0"
                                           FontSize="12"
                                           Padding="0,4,0,4"
                                           Text="{Binding DisplayName}" />

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Expand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </StackPanel>
                            <TextBlock Margin="4,0,5,0"
                                       Grid.Column="2"
                                       FontSize="12"
                                       Padding="0,4,0,4"
                                       Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}">
                                <Run Text=" (" />
                                <Run Text="{Binding ChildrenCount, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                        </Grid>

                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate x:Name="ExplorerItemDataTemplate"  DataType="{x:Type interfaces:IExplorerItemViewModel}" ItemsSource="{Binding Children}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <Image x:Name="ResourceImage"
                                               Width="14"
                                               Height="14"
                                               Source="{Binding ResourceType, Converter={StaticResource ResourceTypeToIconConverter}}"
                                               Visibility="{Binding ResourceType, Converter={StaticResource ResourceTypeToVisibilityConverter}}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                                    <i:InvokeCommandAction Command="{Binding Path=Expand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Image>
                                        <CheckBox x:Name="ResourceNameCheckBox"
                                                    ClickMode="Press"
                                                    IsChecked="{Binding Path=IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    IsEnabled="{Binding Path=IsResourceCheckedEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ToolTip="{Binding Path=DeployResourceCheckboxTooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ToolTipService.ShowOnDisabled="True"
                                                    Style="{StaticResource DeployCheckBoxStyle}"
                                                  Margin="{StaticResource ControlBorderLeft}"
                                                    Visibility="{Binding Path=AllowResourceCheck, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock x:Name="ResourceNameTextBlock"
                                                    MinWidth="5"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    Focusable="True"
                                                   Visibility="{Binding IsRenaming, Converter={StaticResource BoolToVisibilityConverterNegative}}"
                                                    Text="{Binding ResourceName}"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding ResourceName}">
                                            <TextBlock.InputBindings>
                                                <MouseBinding Command="{Binding OpenCommand}" Gesture="LeftDoubleClick" MouseAction="LeftDoubleClick" />
                                            </TextBlock.InputBindings>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                        <i:InvokeCommandAction Command="{Binding Path=Expand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                        </TextBlock>
                                        <TextBox Style="{StaticResource ExplorerEditTextBoxStyle}"
                                                 Visibility="{Binding IsRenaming, Converter={StaticResource BoolToVisibilityConverter}}"
                                                 HorizontalAlignment="Stretch"
                                                 HorizontalContentAlignment="Stretch"
                                                 IsVisibleChanged="UIElement_OnIsVisibleChanged"
                                                 LostFocus="UIElement_OnLostFocus"
                                                 KeyDown="UIElement_OnKeyDown"
                                                 Text="{Binding ResourceName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

                                        <StackPanel.Style>
                                            <Style TargetType="{x:Type StackPanel}" >
                                                <Setter Property="Margin" Value="0"></Setter>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsFolder}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="-14,0,0,0" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1"
                                               Margin="4,0,5,0"
                                               FontSize="12"
                                               Padding="0,4,0,4"
                                               Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}">
                                        <Run Text="(" />
                                        <Run Text="{Binding ChildrenCount, Mode=OneWay}" />
                                        <Run Text=")" />
                                    </TextBlock>
                                </Grid>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
    </Grid>
</UserControl>
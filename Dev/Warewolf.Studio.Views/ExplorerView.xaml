                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="Open"
                                                                    InputGestureText="[Ctrl+W]"
                                                                    Command="{Binding Path=Data.OpenCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WorkflowService}"
                                                                    Header="Open"
                                                                    Visibility="{Binding Path=Data.CanView, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewService"
                                                                InputGestureText="[Ctrl+W]"
                                                                Command="{Binding Path=Data.NewCommand}"

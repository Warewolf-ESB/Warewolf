                                        </MultiBinding>
                                    </Grid.Width>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="22"></ColumnDefinition>
                                        <ColumnDefinition Width="22"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

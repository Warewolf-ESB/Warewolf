                    <ig:NodeLayout Key="Children"
                                   DisplayMemberPath="ResourceName"
                                   IsExpandedMemberPath="IsExpanded"
                                   IsDropTarget="True"
                                   IsDraggable="False"
                                   TargetTypeName="IExplorerItemViewModel" 
                                   Visibility="{Binding Path=Data.IsVisible,  Converter={StaticResource BoolToVisibilityConverter}}">
                        <ig:NodeLayout.EditorTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBox MaxWidth="200" Height="20" Padding="0,0,0,0" 
                                         Text="{Binding Data.ResourceName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" GotKeyboardFocus="UIElement_OnGotKeyboardFocus"></TextBox>
                                </Grid>
                            </DataTemplate>
                        </ig:NodeLayout.EditorTemplate>
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <DataTemplate.Triggers>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0" 
                                                                               Storyboard.TargetName="EditPermissionImageEnabled" 
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </DataTemplate.Triggers>
                                <!-- ADD NEW GRID LAYOUT TO ALIGN DATA TREE ITEMS -->

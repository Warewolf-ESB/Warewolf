                                                                    CommandParameter="{Binding Data}"
                                                                    Header="Rename"
                                                                    Visibility="{Binding Path=Data.CanRename, Converter={StaticResource BoolToVisibilityConverter}}" >
                                                        <i:Interaction.Behaviors>
                                                            <views:RenameTreeNode DataContext="{Binding Data}" Node="{Binding Node}" Tree="{Binding Path=Node.Manager.NodeLayout.Tree}"/>
                                                        </i:Interaction.Behaviors>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="Delete"
                                                                    Command="{Binding Path=Data.DeleteCommand}"
                                                                    CommandParameter="{Binding Data}"
                                                                    Header="Delete"
                                                                    Visibility="{Binding Path=Data.CanDelete, Converter={StaticResource BoolToVisibilityConverter}}" >
                                                        <ig:XamMenuItem.Icon>
                                                            <fa:FontAwesome FontSize="12" Margin="0,2,0,0" FontWeight="Light" Icon="TrashOutlined" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuSeparator Visibility="{Binding Path=Data.CanDeploy, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    <ig:XamMenuItem Name="Deploy"
                                                                    Command="{Binding Path=Data.DeployCommand}"
                                                                    CommandParameter="{Binding Path=Data}"
                                                                    Header="Deploy"
                                                                    Visibility="{Binding Path=Data.CanDeploy, Converter={StaticResource BoolToVisibilityConverter}}" >
                                                        <ig:XamMenuItem.Icon>
                                                            <fa:FontAwesome FontSize="12" Margin="0,2,0,0" FontWeight="Light" Icon="PaperPlaneOutlined" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

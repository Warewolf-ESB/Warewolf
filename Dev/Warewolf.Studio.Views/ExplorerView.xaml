                                    <Button x:Name="EditButton"
                                            Width="22"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,-22,0"
                                            Command="{Binding Path=Data.OpenCommand}"
                                            Style="{StaticResource ExplorerTreeButtonStyle}"
                                            Visibility="{Binding Data.CanView, Converter={StaticResource BoolToVisibilityConverter}}"
                                            ToolTip="{Binding Path=Data.EditToolTip}">
                                        <Button.Content>
                                            <StackPanel>
                                                <!-- CHANGE TOP MARGIN TO ALIGN EDIT IMAGE WITH TEXTBLOCK -->
                                                <Image x:Name="EditPermissionImageDisabled"
                                                       Width="14"
                                                       Height="15"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource System-Spacer}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Image x:Name="EditPermissionImageEnabled"
                                                       Width="14"
                                                       Height="15"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource Explorer-Permission-Enabled}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>

                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                    <!-- PLAY ICON -->
                                    <Button x:Name="ExecuteButton"
                                            Width="22"
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,-22,0"
                                            Style="{StaticResource ExplorerTreeButtonStyle}"
                                            Command="{Binding Path=Data.DebugCommand}"
                                            Visibility="{Binding Data.CanExecute, Converter={StaticResource BoolToVisibilityConverter}}"
                                            ToolTip="{Binding Path=Data.EditToolTip}">
                                        <Button.Content>
                                            <StackPanel>
                                                <!-- CHANGE TOP MARGIN TO ALIGN EDIT IMAGE WITH TEXTBLOCK -->
                                                <Image x:Name="ExecutePermissionImageDisabled"
                                                       Height="11"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource System-Spacer}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">

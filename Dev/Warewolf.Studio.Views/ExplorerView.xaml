<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:converters="clr-namespace:Dev2.Studio.Core.AppResources.Converters;assembly=Dev2.Studio.Core"
             xmlns:igPrim="http://schemas.infragistics.com/xaml/primitives"
             xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
             MouseLeftButtonUp="ExplorerView_OnMouseLeftButtonUp"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=interfaces:IExplorerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
              <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <core:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
        <views:WidthConverter x:Key="WidthConverter" />
        <core:ResourceTypeToIconVisibility x:Key="ResourceTypeToVisibilityConverter" />
        <views:NotConverter x:Key="NotConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />       
        <Style TargetType="ig:XamDataTreeNodeControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{StaticResource TreeNodeBorderBrush}" />
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
            <Setter Property="FontSize" Value="{StaticResource FontSize-Normal}" />
            <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ig:XamDataTreeNodeControl">
                        <Grid Background="Transparent">
                            <ig:DragDropManager.DragSource>
                                <ig:DragSource DragOver="DragSource_OnDragOver"
                                               DragLeave="DragSource_OnDragLeave"
                                               Drop="DragSource_OnDrop"
                                               DragStart="DragSource_OnDragStart"                                                   
                                               DragChannels="1"
                                               IsDraggable="True">
                                    <!-- Custom Copy Cursor -->
                                    <ig:DragSource.CopyCursorTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ig:DragSource.CopyCursorTemplate>
                                    <ig:DragSource.DragTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ig:DragSource.DragTemplate>
                                    <!-- Custom Drop Not Allowed Cursor -->
                                    <ig:DragSource.DropNotAllowedCursorTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ig:DragSource.DropNotAllowedCursorTemplate>
                                    <!-- Custom Move Cursor -->
                                    <ig:DragSource.MoveCursorTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ig:DragSource.MoveCursorTemplate>
                                </ig:DragSource>
                            </ig:DragDropManager.DragSource>
                            <ig:DragDropManager.DropTarget>
                                <ig:DropTarget IsDropTarget="True" DropChannels="1"/>
                            </ig:DragDropManager.DropTarget>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="hoverBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="contentControl"
                                                                       Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource WareWolfOrangeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="main" Storyboard.TargetProperty="Opacity">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.35" />
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ExpandedIconStates">
                                    <VisualState x:Name="HideIcons" />
                                    <VisualState x:Name="ShowCollapsedIcon">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="CollapsedIcon"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="ShowExpandedIcon">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="ExpandedIcon"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ActiveStates">
                                    <VisualState x:Name="Inactive" />
                                    <VisualState x:Name="Active">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="ActiveBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectedStates">
                                    <VisualState x:Name="NotSelected" />
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="SelectedBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="contentControl"
                                                                       Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource WareWolfOrangeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="EndLines">
                                    <VisualState x:Name="None">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="LineTerminator"
                                                                       Storyboard.TargetProperty="NodeLineEnd">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <ig:NodeLineTemination>None</ig:NodeLineTemination>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="TShape">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="LineTerminator"
                                                                       Storyboard.TargetProperty="NodeLineEnd">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <ig:NodeLineTemination>TShape</ig:NodeLineTemination>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="LShape">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="LineTerminator"
                                                                       Storyboard.TargetProperty="NodeLineEnd">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <ig:NodeLineTemination>LShape</ig:NodeLineTemination>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="DropStates">
                                    <VisualState x:Name="NoDrop" />
                                    <VisualState x:Name="DropOnto">
                                        <Storyboard>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DropOntoElem" Storyboard.TargetProperty="Opacity">
                                                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="1" />
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="DropBefore">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DropBeforeElem" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="DropAfter">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DropAfterElem" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid x:Name="main">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="28" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.ColumnSpan="6" Fill="{StaticResource TransparentBrush}" />
                                <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="1" />
                                <igPrim:NodeLineControl x:Name="lineControl" Grid.Column="0" Node="{Binding Node}" />
                                <igPrim:NodeLineTerminator x:Name="LineTerminator" Grid.Column="1" Node="{Binding Node, RelativeSource={RelativeSource TemplatedParent}}" />
                                <igPrim:ExpansionIndicator x:Name="ExpansionIndicator"
                                                           Grid.Column="1"
                                                           Margin="-5,0,0,0"
                                                           VerticalAlignment="Center"
                                                           VerticalContentAlignment="Center"
                                                           IsExpanded="{Binding Node.IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                           IsTabStop="False"
                                                           Style="{StaticResource ExpansionIndicatorStyle}"
                                                           Visibility="{Binding Node.Data.IsExpanderVisible, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource TemplatedParent}}" />
                                <CheckBox x:Name="Checkbox"
                                          Grid.Column="2"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding Node.IsChecked, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          IsTabStop="False"
                                          IsThreeState="{Binding Node.NodeLayout.CheckBoxSettings.IsCheckBoxThreeStateResolved}"
                                          Style="{DynamicResource CheckBoxStyle}"
                                          Visibility="{Binding Node.NodeLayout.CheckBoxSettings.CheckBoxVisibilityResolved}" />
                                <ContentControl x:Name="ExpandedIcon"
                                                Grid.Column="4"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                IsTabStop="False"
                                                Visibility="Collapsed" />
                                <ContentControl x:Name="CollapsedIcon"
                                                Grid.Column="4"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                IsTabStop="False"
                                                Visibility="Collapsed" />
                                <Border x:Name="hoverBorder"
                                        Grid.Column="5"
                                        Background="Transparent"
                                        BorderBrush="{StaticResource TreeNodeHoverBackgroundBrush}"
                                        BorderThickness="0"
                                        Visibility="Collapsed" />
                                <Border x:Name="SelectedBorder"
                                        Grid.Column="5"
                                        Background="Transparent"
                                        BorderBrush="{StaticResource WareWolfOrangeBrush}"
                                        BorderThickness="0"
                                        Visibility="Collapsed" />
                                <igPrim:ActiveNodeIndicator x:Name="ActiveBorder"
                                                          Grid.Column="5"
                                                          IsTabStop="false"
                                                          Style="{StaticResource ActiveNodeIndicatorStyle}"
                                                          Visibility="Collapsed" />
                                <!--  Text on Variables  -->
                                <ContentControl x:Name="contentControl"
                                                Grid.Column="5"
                                                Margin="-5,0,0,0"
                                                Background="Transparent"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Foreground="{StaticResource WareWolfButtonBrush}">
                                    <ContentPresenter x:Name="ContentPresenter" />
                                </ContentControl>
                            </Grid>
                            <Grid x:Name="DropBeforeElem"
                                  VerticalAlignment="Top"
                                  RenderTransformOrigin="0.5,0.5"
                                  Visibility="Collapsed">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform />
                                        <TranslateTransform Y="-3" />
                                    </TransformGroup>
                                </Grid.RenderTransform>
                                <Rectangle x:Name="bar"
                                           Height="1"
                                           Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                           StrokeThickness="0" />
                                <Path x:Name="arrowLeft"
                                      Width="6"
                                      Height="7"
                                      HorizontalAlignment="Left"
                                      Data="M 166,184 C166,184 166,194 166,194 166,194 171,189 171,189 171,189 166,184 166,184 z"
                                      Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                      Stretch="Fill" />
                                <Path x:Name="arrowRight"
                                      Width="6"
                                      Height="7"
                                      HorizontalAlignment="Right"
                                      Data="M 178,194 C178,194 178,184 178,184 178,184 173,189 173,189 173,189 178,194 178,194 z"
                                      Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                      Stretch="Fill" />
                            </Grid>
                            <Grid x:Name="DropAfterElem"
                                  VerticalAlignment="Bottom"
                                  RenderTransformOrigin="0.5,0.5"
                                  Visibility="Collapsed">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform />
                                        <TranslateTransform Y="4" />
                                    </TransformGroup>
                                </Grid.RenderTransform>
                                <Rectangle x:Name="bar1"
                                       Height="1"
                                       Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                       StrokeThickness="0" />
                                <Path x:Name="arrowLeft1"
                                  Width="6"
                                  Height="7"
                                  HorizontalAlignment="Left"
                                  Data="M 166,184 C166,184 166,194 166,194 166,194 171,189 171,189 171,189 166,184 166,184 z"
                                  Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                  Stretch="Fill" />
                                <Path x:Name="arrowRight1"
                                  Width="6"
                                  Height="7"
                                  HorizontalAlignment="Right"
                                  Data="M 178,194 C178,194 178,184 178,184 178,184 173,189 173,189 173,189 178,194 178,194 z"
                                  Fill="{StaticResource DropIndicatorBackgroundBrush}"
                                  Stretch="Fill" />
                            </Grid>
                            <Rectangle x:Name="DropOntoElem"
                                       IsHitTestVisible="False"
                                       Opacity="0"
                                       RadiusX="2"
                                       RadiusY="2"
                                       Stroke="{StaticResource DropIndicatorBorderBrush}"
                                       StrokeThickness="2" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding Path=CreateFolderCommand}" Key="F"  Modifiers="Control+Shift" />
    </UserControl.InputBindings>
    <Grid>
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".5"/>
            </Grid.Background>
        </Grid>

        <Grid x:Name="LayoutRoot" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="422*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- URI LOOKUP-->
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        Visibility="{Binding ShowConnectControl, Converter={StaticResource BoolToVisibilityConverter}}" >
                <views:ConnectControl DataContext="{Binding ConnectControlViewModel}" x:Name="ConnectControl"/>
            </StackPanel>
            <!--  SERVICE FILTER  -->
            <Grid Grid.Row="1" Margin="0,-1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <!--Margin="{StaticResource ElementBorderRight}"-->
                <customControls:SearchTextBox Grid.Row="0" 
                                              Margin="{StaticResource ControlBorderTopRight}"
                                              Grid.Column="0"
                                              x:Name="SearchTextBox" 
                                              Style="{StaticResource SearchTextboxStyle}"
                                              ClearSearchToolTip="{Binding ExplorerClearSearchTooltip}"
                                              ClearSearchCommand="{Binding ClearSearchTextCommand}"
                                              ToolTip="{Binding SearchToolTip}"
                                              LabelText="Filter"
                                              HorizontalAlignment="Stretch"
                                              Text="{Binding SearchText, Delay=300, UpdateSourceTrigger=PropertyChanged}" >
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.ExplorerViewFilterSearchHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </customControls:SearchTextBox>
                <Button Grid.Row="0"
                        Grid.Column="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,3,0,-1"
                        Command="{Binding RefreshCommand}"
                        ToolTip="{Binding Path=RefreshToolTip}"
                        Visibility="{Binding Path=IsRefreshing, Converter={StaticResource NotConverter}}">
                    <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                    FontSize="16" 
                                    Icon="Refresh" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Center"/>
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.ExplorerViewRefreshHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </Button>
                <views:CircularProgressBar Grid.Row="0"
                                           Grid.Column="1"
                                           Width="25"
                                           Height="25"
                                           Padding="2.5"
                                           Visibility="{Binding Path=IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}" />

            </Grid>
            <!--  EXPLORER TREE  -->
            <ig:XamDataTree Margin="{StaticResource ElementBorderTop}" 
                            x:Name="ExplorerTree"
                            Grid.Row="2"
                            ActiveDataItem="{Binding SelectedItem, Mode=TwoWay}"
                            IsSelectedMemberPath="IsSelected"
                            DisplayMemberPath="DisplayName"
                            IsDropTarget="True"
                            GiveFeedback="ExplorerTree_OnGiveFeedback"
                            MouseUp="ExplorerTree_OnMouseUp"
                            InitializeNode="ExplorerTree_OnInitializeNode"
                            NodeExitedEditMode="ExplorerTree_OnNodeExitedEditMode"
                            MouseLeftButtonDown="ExplorerTree_OnMouseLeftButtonDown"
                            MouseLeftButtonUp="ExplorerTree_OnMouseLeftButtonUp"
                            SelectedDataItems="{Binding SelectedDataItems}"
                            ItemsSource="{Binding Environments}"
                            NodeLineVisibility="Hidden" >
                <ig:XamDataTree.EditingSettings>
                    <ig:TreeEditingSettings AllowDeletion="False"
                                            AllowEditing="True"
                                            IsEnterKeyEditingEnabled="False"
                                            IsF2EditingEnabled="True"
                                            IsMouseActionEditingEnabled="None"
                                            IsOnNodeActiveEditingEnabled="False" />
                </ig:XamDataTree.EditingSettings>

                <ig:XamDataTree.GlobalNodeLayouts>
                    <ig:NodeLayout Key="Environments"
                                   DisplayMemberPath="DisplayName"
                                   IsDropTarget="True"
                                   IsDraggable="False"
                                   IsExpandedMemberPath="IsExpanded"
                                   TargetTypeName="IEnvironmentViewModel">
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0"
                                            Grid.Column="0"
                                            Width="20"
                                            Height="20"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding Path=Data.RefreshCommand}"
                                            Padding="-4"
                                            Style="{StaticResource ExplorerTreeButtonStyle}">
                                        <Grid>
                                            <Image Width="18" Height="18" Source="{StaticResource System-Logo}"
                                                   Visibility="{Binding Path=Data.IsServerIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            <Image Width="18" Height="18" Source="{StaticResource System-Logo-Mono}"
                                                   Visibility="{Binding Path=Data.IsServerUnavailableIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        </Grid>
                                    </Button>

                                    <views:CircularProgressBar Grid.Row="0" Grid.Column="0" Visibility="{Binding Path=Data.IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}" />

                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="1,0,0,0">
                                        <CheckBox x:Name="EnvironmentNameCheckBox"
                                                  Style="{StaticResource DeployCheckBoxStyle}" ClickMode="Press"
                                                  IsChecked="{Binding Path=Data.IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Visibility="{Binding Path=Data.AllowResourceCheck, Converter={StaticResource BoolToVisibilityConverter}}"
                                                  IsThreeState="True"/>
                                        <TextBlock FontSize="12" Padding="0,4,0,4" Margin="4,0,0,0"  Text="{Binding Data.DisplayName}" />
                                        <TextBlock FontSize="12" Padding="0,4,0,4" Margin="4,0,0,0" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}">
                                            <Run Text=" (" />
                                            <Run Text="{Binding Data.ChildrenCount, Mode=OneWay}" />
                                            <Run Text=")" />
                                        </TextBlock>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding Path=Data.Expand}"  />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </StackPanel>
                                    <ig:ContextMenuService.Manager>
                                        <ig:ContextMenuManager>
                                            <ig:ContextMenuManager.ContextMenu>
                                                <ig:XamContextMenu x:Name="ExplorerEnvironmentMenu" Visibility="{Binding Path=Data.ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ig:XamContextMenu.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="NewService"
                                                                    InputGestureText="[Ctrl+W]"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WorkflowService}"
                                                                    Header="New Workflow Service"
                                                                    Visibility="{Binding Path=Data.CanCreateWorkflowService, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-WorkflowService}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewServerSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.ServerSource}"
                                                                    Header="New Server Source"
                                                                    Visibility="{Binding Path=Data.CanCreateServerSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource System-Logo-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.DbSource}"
                                                                    Header="New Database Source"
                                                                    Visibility="{Binding Path=Data.CanCreateDbSource, Converter={StaticResource BoolToVisibilityConverter}}">

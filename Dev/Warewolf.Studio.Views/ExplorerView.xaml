                                                                    Command="{Binding Path=Data.ShowDependenciesCommand}"
                                                                    CommandParameter="{Binding Data}"
                                                                    Header="Show Dependencies"
                                                                    Visibility="{Binding Path=Data.CanShowDependencies, Converter={StaticResource BoolToVisibilityConverter}}" >
                                                        <ig:XamMenuItem.Icon>
                                                            <fa:FontAwesome FontSize="12" Margin="0,2,0,0" FontWeight="Light" Icon="Sitemap" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuSeparator Visibility="{Binding Path=Data.CanShowVersions, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                    <ig:XamMenuItem Name="ShowHideVersions"
                                                                    Command="{Binding Path=Data.ShowVersionHistory}"
                                                                    Header="{Binding Path=Data.VersionHeader}"
                                                                    Visibility="{Binding Path=Data.CanShowVersions, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-Permission-Menu}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="Rollback"
                                                                    Command="{Binding Path=Data.RollbackCommand}"
                                                                    CommandParameter="{Binding Data}"
                                                                    Header="Make Current Version"
                                                                    Visibility="{Binding Path=Data.IsVersion, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                    <ig:XamMenuItem Name="OpenVersion"
                                                                    Command="{Binding Path=Data.OpenVersionCommand}"
                                                                    CommandParameter="{Binding Data}"
                                                                    Header="Open Version"
                                                                    Visibility="{Binding Path=Data.IsVersion, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                </ig:XamContextMenu>
                                            </ig:ContextMenuManager.ContextMenu>
                                        </ig:ContextMenuManager>
                                    </ig:ContextMenuService.Manager>

                                    <!-- ADD TEXT TRIMMING TO DISPLAY ECLIPSE ON VIEW WIDTH SETTING -->

                                    <Grid Margin="0,1,-22,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox x:Name="ResourceNameCheckBox"
                                                      Style="{StaticResource DeployCheckBoxStyle}" ClickMode="Press"
                                                      IsChecked="{Binding Path=Data.IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      Visibility="{Binding Path=Data.AllowResourceCheck, Converter={StaticResource BoolToVisibilityConverter}}"
                                                      IsThreeState="True"/>
                                            <TextBlock x:Name="ResourceNameTextBlock"
                                                       MinWidth="5"
                                                       Height="20"
                                                       Focusable="True"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Path=Data.ResourceName}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch"
                                                       Text="{Binding Path=Data.ResourceName}">
                                                <TextBlock.InputBindings>
                                                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=Data.OpenCommand}" MouseAction="LeftDoubleClick"  />
                                                </TextBlock.InputBindings>
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                                    <i:InvokeCommandAction Command="{Binding Path=Data.Expand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" FontSize="12" Padding="0,4,0,4" Margin="4,0,0,0" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}">
                                            <Run Text="(" />
                                            <Run Text="{Binding Data.ChildrenCount, Mode=OneWay}" />
                                            <Run Text=")" />
                                        </TextBlock>
                                    </Grid>


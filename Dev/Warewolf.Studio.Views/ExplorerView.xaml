                                                                    Visibility="{Binding Path=Data.CanCreateFolder, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="Rename"
                                                                    InputGestureText="[F2]"

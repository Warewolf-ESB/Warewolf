                                                                    Visibility="{Binding Path=Data.CanCreateServerSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource System-Logo-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.DbSource}"
                                                                    Header="New Database Source"
                                                                    Visibility="{Binding Path=Data.CanCreateDbSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-DB-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewWebSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WebSource}"
                                                                    Header="New Web Service Source"
                                                                    Visibility="{Binding Path=Data.CanCreateWebSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-WebService-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewPluginSource"

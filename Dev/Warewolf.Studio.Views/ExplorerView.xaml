<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:interfaces="clr-namespace:Dev2.Studio.Interfaces;assembly=Dev2.Studio.Interfaces"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             x:Name="ExplorerViewControl"
             KeyUp="ExplorerView_OnKeyUp"
             d:DataContext="{d:DesignInstance Type=interfaces:IExplorerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <core:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
            <core:ResourceTypeToIconVisibility x:Key="ResourceTypeToVisibilityConverter" />
            <views:NotConverter x:Key="NotConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="F" Command="{Binding Path=CreateFolderCommand}" Modifiers="Control+Shift" />
    </UserControl.InputBindings>
    <Grid >
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.Background>
        </Grid>

        <Grid x:Name="LayoutRoot" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="422*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  URI LOOKUP  -->
            <StackPanel HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="{Binding ShowConnectControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <views:ConnectControl x:Name="ConnectControl" DataContext="{Binding ConnectControlViewModel}" />
            </StackPanel>
            <!--  SERVICE FILTER  -->
            <Grid Grid.Row="1" Margin="0,-1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <!--  Margin="{StaticResource ElementBorderRight}"  -->
                <customControls:SearchTextBox x:Name="SearchTextBox"
                                              Grid.Row="0"
                                              Grid.Column="0"
											  LostKeyboardFocus="SearchTextBox_LostKeyboardFocus"
                                              Margin="{StaticResource ControlBorderTopRight}"
                                              HorizontalAlignment="Stretch"
                                              ClearSearchCommand="{Binding ClearSearchTextCommand}"
                                              ClearSearchToolTip="{Binding ExplorerClearSearchTooltip}"
                                              LabelText="Search Resources and Examples"
                                              Style="{StaticResource SearchTextboxStyle}"
                                              Text="{Binding SearchText, Delay=450, UpdateSourceTrigger=PropertyChanged}"
                                              ToolTip="{Binding SearchToolTip}">
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:HelpText.ExplorerViewFilterSearchHelp}" />
                    </i:Interaction.Behaviors>
                </customControls:SearchTextBox>
                <Button Grid.Row="0"
                        Grid.Column="1"
                        x:Name="FilterRefreshButton"
                        Width="25"
                        Height="25"
                        Margin="0,3,0,-1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding RefreshCommand}"
                        ToolTip="{Binding Path=RefreshToolTip}"
                        Visibility="{Binding Path=IsRefreshing,
                                             Converter={StaticResource NotConverter}}">
                    <fa:FontAwesome HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Icon="Refresh"
                                    TextOptions.TextFormattingMode="Display" />
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:HelpText.ExplorerViewRefreshHelp}" />
                    </i:Interaction.Behaviors>
                </Button>
                <views:CircularProgressBar Grid.Row="0"
                                           Grid.Column="1"
                                           x:Name="FilterRefreshProgressBar"
                                           Width="25"
                                           Height="25"
                                           Padding="2.5"
                                           Visibility="{Binding Path=IsRefreshing,
                                                                Converter={StaticResource BoolToVisibilityConverter}}" />

            </Grid>
            <TreeView x:Name="ExplorerTree"
                      Grid.Row="2"
                      Margin="{StaticResource ControlBorderTop}"
                      ItemsSource="{Binding Environments}"
                      Style="{StaticResource TreeViewStyle}"
                      DataContextChanged="ExplorerTree_OnDataContextChanged"
                      PreviewMouseLeftButtonUp="ExplorerTree_OnPreviewMouseLeftButtonUp"
                      customControls:DragDropExtension.ScrollOnDragDrop="True"
                      PreviewMouseMove="TreeMouseMove"
                      SelectedItemChanged="ExplorerTree_OnSelectedItemChanged"
                      KeyboardNavigation.TabNavigation="Continue"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      KeyUp="ExplorerTree_OnKeyUp"
                      Drop="TryDropTreeDrop"
                      DragOver="ExplorerTree_OnDragOver"
                      DragLeave="ExplorerTree_OnDragLeave"
                      DragEnter="ExplorerTree_OnDragEnter">
                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource TreeViewItemStyle}" TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                        <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItemPreviewMouseRightButtonDown"/>
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TreeViewItemPreviewMouseLeftButtonDown"/>
                        <EventSetter Event="PreviewMouseDoubleClick" Handler="TreeViewItemPreviewMouseDoubleClick"/>
                        <EventSetter Event="RequestBringIntoView" Handler="TreeViewItemRequestBringIntoView"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate x:Name="EnvironmentDataTemplate"  DataType="{x:Type interfaces:IEnvironmentViewModel}" ItemsSource="{Binding Children}">
                        <Grid Background="Transparent">
                            <Grid.ContextMenu>
                                <ContextMenu Style="{StaticResource ContextMenuStyle}"
                                             StaysOpen="true"
                                             Visibility="{Binding ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}"
                                             KeyUp="ExplorerContextMenuView_OnKeyUp">
                                    <MenuItem Name="NewService"
                                              Command="{Binding ShellViewModel.NewServiceCommand}"
                                              CommandParameter="{Binding ResourcePath}"
                                              Header="New Workflow Service"
                                              Style="{StaticResource MenuItemStyle}"
                                              InputGestureText="[Ctrl+W]"
                                              IsEnabled="{Binding CanCreateWorkflowService}"
                                              ToolTip="{Binding ExplorerTooltips.NewServiceTooltip}"
                                              Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                        <MenuItem.Icon>
                                            <Image Style="{StaticResource NewServiceIcon}"/>
                                        </MenuItem.Icon>
                                        <MenuItem.InputBindings>
                                            <KeyBinding Key="W" Command="{Binding ShellViewModel.NewServiceCommand}" CommandParameter="{Binding ResourcePath}" Modifiers="Control" />
                                        </MenuItem.InputBindings>
                                    </MenuItem>

                                    <MenuItem Name="NewFolder"
                                              Command="{Binding CreateFolderCommand}"
                                              CommandParameter="Folder"
                                              Style="{StaticResource MenuItemStyle}"
                                              Header="{x:Static languages:Core.NewFolderLabel}"
                                              InputGestureText="[Ctrl+Shift+F]"
                                              IsEnabled="{Binding CanCreateFolder}" 
                                              ToolTip="{Binding ExplorerTooltips.NewFolderTooltip}"/>

                                    <Separator Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}"/>

                                    <!--Set Visibility to collapsed until we add functionality for deploy on server-->
                                    <MenuItem Name="Deploy"
                                              Command="{Binding DeployCommand}"
                                              CommandParameter="{Binding Path=Data}"
                                              Header="Deploy"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanDeploy}"
                                              ToolTip="{Binding ExplorerTooltips.DeployTooltip}"
                                              Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                        <MenuItem.Icon>
                                            <fa:FontAwesome FontSize="12" FontWeight="Light" Icon="PaperPlaneOutline" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Name="ServerVersion"
                                              Command="{Binding ShowServerVersionCommand}"
                                              Header="Server Version"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanShowServerVersion}" 
                                              ToolTip="{Binding ExplorerTooltips.ServerVersionTooltip}"
                                              Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}"/>

                                    <MenuItem Name="ViewApisJson"
                                              Command="{Binding ViewApisJsonCommand}"
                                              Header="View Apis.Json"
                                              Style="{StaticResource MenuItemStyle}"
                                              IsEnabled="{Binding CanViewApisJson}" 
                                              ToolTip="{Binding ExplorerTooltips.ViewApisJsonTooltip}"
                                              Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                        <MenuItem.Icon>
                                            <Image Style="{StaticResource ViewApisJsonIcon}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Name="ViewExecutionLogging"
                                              Command="{Binding ViewExecutionLoggingCommand}"
                                              Header="Execution Logging"
                                              Style="{StaticResource MenuItemStyle}"
                                              InputGestureText="[http://my.warewolf.io]"
                                              IsEnabled="{Binding CanViewExecutionLogging}" 
                                              ToolTip="{Binding ExplorerTooltips.ViewExecutionLoggingTooltip}"
                                              Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                    </MenuItem>

                                    <Separator Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}"/>

                                    <MenuItem Header="Sources" Style="{StaticResource MenuItemStyle}" Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                        <MenuItem Name="NewServerSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewServerSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Server Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewServerSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewServerSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewSqlServerSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewSqlServerSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New SQL Server Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewSqlServerSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewSqlServerSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewMySqlSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewMySqlSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New MySQL Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewMySqlSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewMySqlSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewPostgreSqlSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewPostgreSqlSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New PostgreSQL Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewPostgreSqlSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewPostgreSqlSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewOracleSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewOracleSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Oracle Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewOracleSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewOracleSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewOdbcSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewOdbcSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New ODBC Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewOdbcSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewOdbcSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewWebSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewWebSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Web Service Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewWebSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewWebSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewRedisSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewRedisSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Redis Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewRedisSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewRedisSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewPluginSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewPluginSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New DotNet Plugin Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewPluginSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewComPluginSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewComPluginSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New COM Plugin Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewComPluginSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewWcfSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewWcfSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Wcf Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewComPluginSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewEmailSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewEmailSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Email Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewEmailSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewExchangeSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewExchangeSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Exchange Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewExchangeSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewRabbitMqSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewRabbitMQSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New RabbitMQ Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewRabbitMqSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewRabbitMqSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewDropboxSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewDropboxSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Dropbox Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewDropboxSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewDropboxSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Name="NewSharepointSource"
                                                  Style="{StaticResource MenuItemStyle}"
                                                  Command="{Binding ShellViewModel.NewSharepointSourceCommand}"
                                                  CommandParameter="{Binding ResourcePath}"
                                                  Header="New Sharepoint Source"
                                                  IsEnabled="{Binding CanCreateSource}"
                                                  ToolTip="{Binding ExplorerTooltips.NewSharepointSourceTooltip}">
                                            <MenuItem.Icon>
                                                <Image Style="{StaticResource NewSharepointSourceIcon}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource ExplorerTreeEnvironmentButtonStyle}"
                                    Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                                <Grid>
                                    <Image Width="18" Height="18" Source="{StaticResource System-Logo}"
                                           Visibility="{Binding IsServerIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <Image Width="18" Height="18" Source="{StaticResource System-Logo-Mono}"
                                           Visibility="{Binding IsServerUnavailableIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </Grid>
                            </Button>

                            <views:CircularProgressBar Grid.Column="0" Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox x:Name="EnvironmentNameCheckBox"
                                          ClickMode="Press"
                                          Click="EnvironmentNameCheckBox_Click"
                                          IsChecked="{Binding IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding IsResourceCheckedEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          ToolTip="{Binding ExplorerTooltips.DeployResourceCheckboxTooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          ToolTipService.ShowOnDisabled="True"
                                          Style="{StaticResource DeployCheckBoxStyle}"
                                          Margin="2,0,0,0"
                                          Visibility="{Binding AllowResourceCheck, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <TextBlock Margin="4,0,0,0"
                                           FontSize="12"
                                           Padding="0,4,0,4"
                                           Text="{Binding DisplayName}" >
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Expand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </StackPanel>
                            <TextBlock Margin="4,0,5,0"
                                       Grid.Column="2"
                                       FontSize="12"
                                       Padding="0,4,0,4"
                                       Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text=" (" />
                                <Run Text="{Binding ChildrenCount, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                        </Grid>

                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate x:Name="ExplorerItemDataTemplate"  DataType="{x:Type interfaces:IExplorerItemViewModel}" ItemsSource="{Binding Children}">
                                <Grid Background="Transparent">
                                    <Grid.ContextMenu>
                                        <ContextMenu Style="{StaticResource ContextMenuStyle}"  StaysOpen="true"
								                     Visibility="{Binding ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <MenuItem Name="Open"
								                      Command="{Binding OpenCommand}"
								                      CommandParameter="WorkflowService"
                                                      IsEnabled="{Binding CanView}"
								                      ToolTip="{Binding ExplorerTooltips.OpenTooltip}">
                                                <MenuItem.Style>
                                                    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}">
                                                        <Setter Property="Header" Value="Open"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsFolder}" Value="True"/>
                                                                    <Condition Binding="{Binding IsExpanded}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Header" Value="Collapse" />
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsFolder}" Value="True"/>
                                                                    <Condition Binding="{Binding IsExpanded}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Header" Value="Expand" />
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsSaveDialog}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>

                                            <MenuItem Name="NewServiceItem"
                                                      Command="{Binding ShellViewModel.NewServiceCommand}"
                                                      CommandParameter="{Binding ResourcePath}"
								                      Header="New Workflow Service"
								                      InputGestureText="[Ctrl+W]"
								                      IsEnabled="{Binding CanCreateWorkflowService}"
								                      ToolTip="{Binding ExplorerTooltips.NewServiceTooltip}">
                                                <MenuItem.Style>
                                                    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsNewFolderVisible}" Value="True"/>
                                                                    <Condition Binding="{Binding IsSaveDialog}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                                <MenuItem.Icon>
                                                    <Image Style="{StaticResource NewServiceIcon}"/>
                                                </MenuItem.Icon>
                                                <MenuItem.InputBindings>
                                                    <KeyBinding Key="W" Command="{Binding ShellViewModel.NewServiceCommand}" CommandParameter="{Binding ResourcePath}" Modifiers="Control" />
                                                </MenuItem.InputBindings>
                                            </MenuItem>

                                            <Separator Visibility="{Binding IsDebugInputsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <MenuItem Name="DebugInputs"
								                      Command="{Binding DebugCommand}"
								                      Header="Debug Inputs"
								                      Style="{StaticResource MenuItemStyle}"
								                      IsEnabled="{Binding CanDebugInputs}"
								                      ToolTip="{Binding ExplorerTooltips.DebugInputsTooltip}"
								                      Visibility="{Binding IsDebugInputsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <MenuItem.Icon>
                                                    <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Bug" />
                                                </MenuItem.Icon>
                                            </MenuItem>

                                            <MenuItem Name="DebugStudio"
								                      Command="{Binding DebugStudioCommand}"
								                      Header="Debug Studio"
								                      Style="{StaticResource MenuItemStyle}"
								                      IsEnabled="{Binding CanDebugStudio}"
								                      ToolTip="{Binding ExplorerTooltips.DebugStudioTooltip}"
								                      Visibility="{Binding IsDebugStudioVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <MenuItem.Icon>
                                                    <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Bug" />
                                                </MenuItem.Icon>
                                            </MenuItem>

                                            <MenuItem Name="DebugBrowser"
								                      Command="{Binding DebugBrowserCommand}"
								                      Header="Debug Browser"
								                      Style="{StaticResource MenuItemStyle}"
								                      IsEnabled="{Binding CanDebugBrowser}"
								                      ToolTip="{Binding ExplorerTooltips.DebugBrowserTooltip}"
								                      Visibility="{Binding IsDebugBrowserVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <MenuItem.Icon>
                                                    <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Bug" />
                                                </MenuItem.Icon>
                                            </MenuItem>

                                            <MenuItem Name="Schedule"
								                      Command="{Binding ScheduleCommand}"
								                      Header="Schedule"
								                      Style="{StaticResource MenuItemStyle}"
								                      IsEnabled="{Binding CanCreateSchedule}"
								                      ToolTip="{Binding ExplorerTooltips.ScheduleTooltip}"
								                      Visibility="{Binding IsScheduleVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <MenuItem.Icon>
                                                    <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="History" />
                                                </MenuItem.Icon>
                                            </MenuItem>

                                            <Separator Visibility="{Binding IsSaveDialog, Converter={StaticResource BoolToVisibilityConverterNegative}}"/>

                                            <MenuItem Name="NewFolderFromItem"
								                      Command="{Binding CreateFolderCommand}"
								                      CommandParameter="Folder"
								                      Header="New Folder"
								                      Style="{StaticResource MenuItemStyle}"
								                      InputGestureText="[Ctrl+Shift+F]"
								                      IsEnabled="{Binding CanCreateFolder}" 
								                      ToolTip="{Binding ExplorerTooltips.NewFolderTooltip}"

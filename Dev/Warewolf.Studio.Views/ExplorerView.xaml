<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=interfaces:IExplorerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             MouseLeftButtonUp="ExplorerView_OnMouseLeftButtonUp"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <core:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
            <views:WidthConverter x:Key="WidthConverter" />
            <core:ResourceTypeToIconVisibility x:Key="ResourceTypeToVisibilityConverter" />
            <views:NotConverter x:Key="NotConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="F" Command="{Binding Path=CreateFolderCommand}" Modifiers="Control+Shift" />
    </UserControl.InputBindings>
    <Grid MouseLeave="UIElement_OnMouseLeave">
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.Background>
        </Grid>

        <Grid x:Name="LayoutRoot" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="422*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  URI LOOKUP  -->
            <StackPanel HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="{Binding ShowConnectControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <views:ConnectControl x:Name="ConnectControl" DataContext="{Binding ConnectControlViewModel}" />
            </StackPanel>
            <!--  SERVICE FILTER  -->
            <Grid Grid.Row="1" Margin="0,-1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <!--  Margin="{StaticResource ElementBorderRight}"  -->
                <customControls:SearchTextBox x:Name="SearchTextBox"
                                              Grid.Row="0"
                                              Grid.Column="0"
                                              Margin="{StaticResource ControlBorderTopRight}"
                                              HorizontalAlignment="Stretch"
                                              ClearSearchCommand="{Binding ClearSearchTextCommand}"
                                              ClearSearchToolTip="{Binding ExplorerClearSearchTooltip}"
                                              LabelText="Search Resources and Examples"
                                              Style="{StaticResource SearchTextboxStyle}"
                                              Text="{Binding SearchText, Delay=450, UpdateSourceTrigger=PropertyChanged}"
                                              ToolTip="{Binding SearchToolTip}">
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.ExplorerViewFilterSearchHelp}" />
                    </i:Interaction.Behaviors>
                </customControls:SearchTextBox>
                <Button Grid.Row="0"
                        Grid.Column="1"
                        x:Name="FilterRefreshButton"
                        Width="25"
                        Height="25"
                        Margin="0,3,0,-1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding RefreshCommand}"
                        ToolTip="{Binding Path=RefreshToolTip}"
                        Visibility="{Binding Path=IsRefreshing,
                                             Converter={StaticResource NotConverter}}">
                    <fa:FontAwesome HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    Icon="Refresh"
                                    TextOptions.TextFormattingMode="Display" />
                    <i:Interaction.Behaviors>
                        <core:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.ExplorerViewRefreshHelp}" />
                    </i:Interaction.Behaviors>
                </Button>
                <views:CircularProgressBar Grid.Row="0"
                                           Grid.Column="1"
                                           x:Name="FilterRefreshProgressBar"
                                           Width="25"
                                           Height="25"
                                           Padding="2.5"
                                           Visibility="{Binding Path=IsRefreshing,
                                                                Converter={StaticResource BoolToVisibilityConverter}}" />

            </Grid>
            <!--  EXPLORER TREE  -->
            <ig:XamDataTree x:Name="ExplorerTree"
                            Grid.Row="2"
                            Margin="{StaticResource ElementBorderTop}"
                            ActiveDataItem="{Binding SelectedItem, Mode=TwoWay}"
                            DisplayMemberPath="DisplayName"
                            InitializeNode="ExplorerTree_OnInitializeNode"
                            IsDraggable="True"
                            IsDropTarget="True"
                            AllowDragDropCopy="False"                             
                            NodeDraggingStart="ExplorerTree_OnNodeDraggingStart"
                            IsSelectedMemberPath="IsSelected"
                            ItemsSource="{Binding Environments}"
                            MouseUp="ExplorerTree_OnMouseUp"
                            NodeExitedEditMode="ExplorerTree_OnNodeExitedEditMode"
                            NodeEnteredEditMode="ExplorerTree_OnNodeEnteredEditMode"
                            NodeLineVisibility="Hidden"
                            SelectedDataItems="{Binding SelectedDataItems}"
                            customControls:DataPresenterHelpers.FilterText="{Binding ElementName=SearchTextBox, Path=Text}">
                <ig:DragDropManager.DropTarget>
                    <ig:DropTarget IsDropTarget="False"/>
                </ig:DragDropManager.DropTarget>
                <ig:XamDataTree.EditingSettings>
                    <ig:TreeEditingSettings AllowDeletion="False"
                                            AllowEditing="True"
                                            IsEnterKeyEditingEnabled="False"
                                            IsF2EditingEnabled="True"
                                            IsMouseActionEditingEnabled="None"
                                            IsOnNodeActiveEditingEnabled="False" />
                </ig:XamDataTree.EditingSettings>

                <ig:XamDataTree.GlobalNodeLayouts>
                    <ig:NodeLayout Key="Environments"
                                   DisplayMemberPath="DisplayName"
                                   IsExpandedMemberPath="IsExpanded"
                                   TargetTypeName="IEnvironmentViewModel">
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ig:ContextMenuService.Manager>
                                        <ig:ContextMenuManager>
                                            <ig:ContextMenuManager.ContextMenu>
                                                <ig:XamContextMenu x:Name="ExplorerEnvironmentMenu" Visibility="{Binding Path=Data.ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ig:XamContextMenu.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="NewService"
                                                                    Command="{Binding Path=Data.NewServiceCommand}"
                                                                    Header="New Workflow Service"
                                                                    InputGestureText="[Ctrl+W]"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateWorkflowService}"
                                                                    ToolTip="{Binding Path=Data.NewServiceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewServiceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewServerSource"
                                                                    Command="{Binding Path=Data.NewServerCommand}"
                                                                    Header="New Server Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewServerSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewServerSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                    Command="{Binding Path=Data.NewDatabaseSourceCommand}"
                                                                    Header="New Database Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewDataBaseSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewDataBaseSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewWebSource"
                                                                    Command="{Binding Path=Data.NewWebSourceSourceCommand}"
                                                                    CommandParameter="WebSource"
                                                                    Header="New Web Service Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewWebSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewWebSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewPluginSource"
                                                                    Command="{Binding Path=Data.NewPluginSourceCommand}"
                                                                    Header="New DotNet Plugin Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewPluginSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem> 
                                                    <ig:XamMenuItem Name="NewComPluginSource"
                                                                    Command="{Binding Path=Data.NewComPluginSourceCommand}"
                                                                    Header="New COM Plugin Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewComPluginSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewEmailSource"
                                                                    Command="{Binding Path=Data.NewEmailSourceSourceCommand}"
                                                                    Header="New Email Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewEmailSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewExchangeSource"
                                                                    Command="{Binding Path=Data.NewExchangeSourceSourceCommand}"
                                                                    Header="New Exchange Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewExchangeSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewEmailSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewRabbitMqSource"
                                                                    Command="{Binding Path=Data.NewRabbitMQSourceSourceCommand}"
                                                                    Header="New RabbitMQ Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewRabbitMqSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewRabbitMqSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDropboxSource"
                                                                    Command="{Binding Path=Data.NewDropboxSourceSourceCommand}"
                                                                    Header="New Dropbox Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewDropboxSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewDropboxSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewSharepointSource"
                                                                    Command="{Binding Path=Data.NewSharepointSourceSourceCommand}"
                                                                    Header="New Sharepoint Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewSharepointSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewSharepointSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuSeparator />
                                                    
                                                    <ig:XamMenuItem Name="NewFolder"
                                                                    Command="{Binding Path=Data.CreateFolderCommand}"
                                                                    CommandParameter="Folder"
                                                                    Header="{x:Static languages:Core.NewFolderLabel}"
                                                                    InputGestureText="[Ctrl+Shift+F]"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateFolder}" 
                                                                    ToolTip="{Binding Path=Data.NewFolderTooltip}"/>

                                                    <ig:XamMenuSeparator />

                                                    <!--Set Visibility to collapsed until we add functionality for deploy on server-->
                                                    <ig:XamMenuItem Name="Deploy"
                                                                    Command="{Binding Path=Data.DeployCommand}"
                                                                    CommandParameter="{Binding Path=Data}"
                                                                    Header="Deploy"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanDeploy}"
                                                                    ToolTip="{Binding Path=Data.DeployTooltip}"
                                                                    Visibility="Collapsed">
                                                        <ig:XamMenuItem.Icon>
                                                            <fa:FontAwesome FontSize="12"
                                                                            FontWeight="Light"
                                                                            Icon="PaperPlaneOutline" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="ServerVersion"
                                                                    Command="{Binding Path=Data.ShowServerVersionCommand}"
                                                                    Header="Server Version"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanShowServerVersion}" 
                                                                    ToolTip="{Binding Path=Data.ServerVersionTooltip}"/>

                                                    <ig:XamMenuItem Name="ViewApisJson"
                                                                    Command="{Binding Path=Data.ViewApisJsonCommand}"
                                                                    Header="View Apis.Json"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanViewApisJson}" 
                                                                    ToolTip="{Binding Path=Data.ViewApisJsonTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource ViewApisJsonIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                </ig:XamContextMenu>
                                            </ig:ContextMenuManager.ContextMenu>
                                        </ig:ContextMenuManager>
                                    </ig:ContextMenuService.Manager>

                                    <Button Grid.Row="0"
                                            Grid.Column="0"
                                            Command="{Binding Path=Data.RefreshCommand}"
                                            Style="{StaticResource ExplorerTreeEnvironmentButtonStyle}"
                                            Visibility="{Binding ElementName=FilterRefreshButton, Path=Visibility}">
                                        <Grid>
                                            <Image Width="18"
                                                   Height="18"
                                                   Source="{StaticResource System-Logo}"
                                                   Visibility="{Binding Path=Data.IsServerIconVisible,
                                                                        Converter={StaticResource BoolToVisibilityConverter}}" />
                                            <Image Width="18"
                                                   Height="18"
                                                   Source="{StaticResource System-Logo-Mono}"
                                                   Visibility="{Binding Path=Data.IsServerUnavailableIconVisible,
                                                                        Converter={StaticResource BoolToVisibilityConverter}}" />
                                        </Grid>
                                    </Button>

                                    <views:CircularProgressBar Grid.Row="0"
                                                               Grid.Column="0"
                                                               Visibility="{Binding Path=Data.IsConnecting,
                                                                                    Converter={StaticResource BoolToVisibilityConverter}}" />

                                    <views:CircularProgressBar Grid.Row="0"
                                                               Grid.Column="0"
                                                               Visibility="{Binding ElementName=FilterRefreshProgressBar, Path=Visibility}" />
                                    <StackPanel Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="1,0,0,0"
                                                Orientation="Horizontal">
                                        <CheckBox x:Name="EnvironmentNameCheckBox"
                                                  ClickMode="Press"
                                                  IsChecked="{Binding Path=Data.IsResourceChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  IsEnabled="{Binding Path=Data.IsResourceCheckedEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  ToolTip="{Binding Path=Data.DeployResourceCheckboxTooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  ToolTipService.ShowOnDisabled="True"
                                                  Style="{StaticResource DeployCheckBoxStyle}"
                                                  Visibility="{Binding Path=Data.AllowResourceCheck,
                                                                       Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock Margin="4,0,0,0"
                                                   FontSize="12"
                                                   Padding="0,4,0,4"
                                                   Text="{Binding Data.DisplayName}" />
                                        <TextBlock Margin="4,0,0,0"
                                                   FontSize="12"
                                                   Padding="0,4,0,4"
                                                   Visibility="{Binding Data.ChildrenCount,
                                                                        Converter={StaticResource IntToVisibilityConverter}}">
                                            <Run Text=" (" />
                                            <Run Text="{Binding Data.ChildrenCount, Mode=OneWay}" />
                                            <Run Text=")" />
                                        </TextBlock>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding Path=Data.Expand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </StackPanel>
                                </Grid>

                            </DataTemplate>
                        </ig:NodeLayout.ItemTemplate>
                    </ig:NodeLayout>

                    <ig:NodeLayout Key="Children"
                                   DisplayMemberPath="ResourceName"
                                   IsExpandedMemberPath="IsExpanded"
                                   TargetTypeName="IExplorerItemViewModel"
                                   Visibility="{Binding Path=Data.IsVisible,
                                                        Converter={StaticResource BoolToVisibilityConverter}}">

                        <ig:NodeLayout.EditorTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox GotKeyboardFocus="UIElement_OnGotKeyboardFocus"
                                             Style="{StaticResource ExplorerEditTextBoxStyle}"
                                             Text="{Binding Data.ResourceName,
                                                            Mode=TwoWay,
                                                            UpdateSourceTrigger=LostFocus}" />
                                </Grid>
                            </DataTemplate>
                        </ig:NodeLayout.EditorTemplate>
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <DataTemplate.Triggers>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </DataTemplate.Triggers>
                                <!--  ADD NEW GRID LAYOUT TO ALIGN DATA TREE ITEMS  -->
                                <Grid>
                                    <Grid.Width>
                                        <MultiBinding Converter="{StaticResource WidthConverter}">
                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTreeNodeControl}}" />
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTree}}" />
                                        </MultiBinding>
                                    </Grid.Width>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="22" />
                                        <ColumnDefinition Width="22" />
                                    </Grid.ColumnDefinitions>
                                    <!--  CONTEXT MENU FOR THE EXPLORER TREE  -->
                                    <ig:ContextMenuService.Manager>
                                        <ig:ContextMenuManager x:Name="ExplorerContextMenuManager">
                                            <ig:ContextMenuManager.ContextMenu >
                                                <ig:XamContextMenu  Opening="XamContextMenu_Opening"                                                                    
                                                                    x:Name="ExplorerMenu" 
                                                                    Visibility="{Binding Path=Data.ShowContextMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ig:XamContextMenu.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="Open"
                                                                    Command="{Binding Path=Data.OpenCommand}"
                                                                    CommandParameter="WorkflowService"
                                                                    Header="Open"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanView}" 
                                                                    ToolTip="{Binding Path=Data.OpenTooltip}"/>
                                                    
                                                    <ig:XamMenuItem Name="NewService"
                                                                    Command="{Binding Path=Data.NewServiceCommand}"
                                                                    Header="New Workflow Service"
                                                                    InputGestureText="[Ctrl+W]"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateWorkflowService}"
                                                                    ToolTip="{Binding Path=Data.NewServiceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewServiceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                        <ig:XamMenuItem.InputBindings>
                                                            <KeyBinding Key="W"
                                                                        Command="{Binding Path=Data.NewServiceCommand}"
                                                                        Modifiers="Control" />
                                                        </ig:XamMenuItem.InputBindings>
                                                    </ig:XamMenuItem>
                                                    
                                                    <ig:XamMenuItem Name="NewServerSource"
                                                                    Command="{Binding Path=Data.NewServerCommand}"
                                                                    Header="New Server Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewServerSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewServerSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                    Command="{Binding Path=Data.NewDatabaseSourceCommand}"
                                                                    Header="New Database Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewDataBaseSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewDataBaseSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewWebSource"
                                                                    Command="{Binding Path=Data.NewWebSourceSourceCommand}"
                                                                    Header="New Web Service Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewWebSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewWebSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewPluginSource"
                                                                    Command="{Binding Path=Data.NewPluginSourceCommand}"
                                                                    Header="New DotNet Plugin Source"
                                                                    ToolTipService.ShowOnDisabled="True"
                                                                    IsEnabled="{Binding Path=Data.CanCreateSource}"
                                                                    ToolTip="{Binding Path=Data.NewPluginSourceTooltip}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Style="{StaticResource NewPluginSourceIcon}"/>
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    
                                                    <ig:XamMenuItem Name="NewComPluginSource"
                                                                    Command="{Binding Path=Data.NewComPluginSourceCommand}"
                                                                    Header="New COM Plugin Source"

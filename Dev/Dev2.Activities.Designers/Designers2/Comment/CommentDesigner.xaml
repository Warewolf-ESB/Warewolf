<core:ActivityDesigner x:TypeArguments="local:CommentDesignerViewModel"
                       x:Class="Dev2.Activities.Designers2.Comment.CommentDesigner"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
                       xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core"
                       xmlns:local="clr-namespace:Dev2.Activities.Designers2.Comment"
                       mc:Ignorable="d"
                       d:DataContext="{d:DesignInstance local:CommentDesignerViewModel}"
                       Style="{DynamicResource ContentViewStyle}">

    <sap:ActivityDesigner.Resources>
        <local:Small x:Key="Small" AutomationProperties.AutomationId="SmallViewContent" />

        <Style x:Key="ContentViewStyle"
               BasedOn="{StaticResource ActivityDesignerStyle}"
               TargetType="{x:Type sap:ActivityDesigner}">
            <Setter Property="Content"
                    Value="{DynamicResource Small}" />
        </Style>
    </sap:ActivityDesigner.Resources>
    
    <sap:ActivityDesigner.Icon>
        <DrawingBrush Stretch="Uniform">
            <DrawingBrush.Drawing>
                <ImageDrawing Rect="0, 0, 16, 16" ImageSource="{StaticResource Utility-Comment}"/>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </sap:ActivityDesigner.Icon>
</core:ActivityDesigner>
<core:ActivityDesignerTemplate x:Class="Dev2.Activities.Designers2.Gate.Small"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core"
                               xmlns:local="clr-namespace:Dev2.Activities.Designers2.Gate"
                               xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
                               MinWidth="200"
                               MaxWidth="200"
                               mc:Ignorable="d"
                               d:DesignWidth="200"
                               d:DataContext="{d:DesignInstance local:GateDesignerViewModel}">

    <core:ActivityDesignerTemplate.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:ActivityDesignerTemplate.Resources>

    <Grid Margin="{StaticResource ElementBorder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TODO: Replace with binding to ImagePath in ViewModel -->
        <Image Grid.Row="0" 
               HorizontalAlignment="Center" 
               Source="pack://application:,,,/Warewolf Studio;component/Images/gate-open.png"/>
        <!-- TODO: Replace with binding to Text in ViewModel -->
        <TextBlock Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   Text="Rety [Gate] / Stop On Error"/>
    </Grid>
    
</core:ActivityDesignerTemplate>

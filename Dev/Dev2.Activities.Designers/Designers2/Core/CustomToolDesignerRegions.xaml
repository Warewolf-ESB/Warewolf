<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
                    xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:controls="clr-namespace:Dev2.Activities.Designers2.Core.Controls"
                    xmlns:core1="clr-namespace:Dev2.Activities.Designers2.Core"
                    xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
                    xmlns:help="clr-namespace:Dev2.Activities.Designers2.Core.Help"
                    xmlns:common="clr-namespace:System.Data.Common;assembly=System.Data"
                    xmlns:to="clr-namespace:Dev2.TO;assembly=Dev2.Activities"
                    xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    mc:Ignorable="d"
                    x:Class="CustomToolDesignerRegions"
                    d:DataContext="{d:DesignInstance core1:CustomToolWithRegionBase}">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="NewSelectionGrid">
        <Grid x:Name="SourcesGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SourceRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="SourceLabel" Text="Source" />
            <ComboBox x:Name="SourcesComboBox"
                          Grid.Column="1"
                          DisplayMemberPath="Name" 
                          Margin="{StaticResource ControlBorderRight}"
                          ToolTip="{x:Static languages:Core.ManageDbServiceSourcesTooltip}"
                          ItemsSource="{Binding SourceRegion.Sources}"
                          SelectedItem="{Binding SourceRegion.SelectedSource , Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.SourcesHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="SourceEditButton" 
                        Grid.Column="2"
                        Margin="{StaticResource ControlBorderRight}"
                        Content="..."
                        ToolTip="{x:Static languages:Core.ManageDbServiceEditSourceTooltip}"
                        Command="{Binding Path=SourceRegion.EditSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.EditSourceHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
            <Button x:Name="SourceNewButton" 
                        Grid.Column="3"
                        Content="{x:Static languages:Core.New}" 
                        Width="Auto"
                        Style="{StaticResource ButtonOrangeStyle}" 
                        ToolTip="{x:Static languages:Core.ManageDbServiceNewSourceTooltip}"
                        Command="{Binding Path=SourceRegion.NewSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.NewSourceHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewActionGrid">
        <Grid x:Name="ActionsGrid" Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActionRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="ActionsComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding ActionRegion.Actions}"
                              DisplayMemberPath="Name" 
                              IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                              ToolTip="{x:Static languages:Core.ManageDbServiceActionsTooltip}"
                              IsEditable="False"
                              SelectedItem="{Binding ActionRegion.SelectedAction}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceSelectActionHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="ActionRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding ActionRegion.RefreshActionsCommand, Mode=TwoWay}"
                            Visibility="{Binding ActionRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="25"
                                                        Height="25"
                                                        Visibility="{Binding ActionRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewDotNetActionGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActionRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="ActionsComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding ActionRegion.Actions}"
                              DisplayMemberPath="Method" 
                              IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                              ToolTip="{x:Static languages:Core.ManageDbServiceActionsTooltip}"
                              IsEditable="False"
                              SelectedItem="{Binding ActionRegion.SelectedAction}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceSelectActionHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="ActionRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=ActionRegion.RefreshActionsCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="25"
                                                        Height="25"
                                                        Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewNamespaceGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding NamespaceRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NamespaceLabel" Text="Namespace" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="NamespaceComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding NamespaceRegion.Namespaces}"
                              DisplayMemberPath="FullName" 
                              IsEnabled="{Binding NamespaceRegion.IsNamespaceEnabled}"
                              ToolTip="{x:Static languages:Core.ManageDbServiceActionsTooltip}"
                              IsEditable="False"
                              SelectedItem="{Binding NamespaceRegion.SelectedNamespace}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceSelectActionHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="NamespaceRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=NamespaceRegion.RefreshNamespaceCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.PluginServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="25"
                                                        Height="25"
                                                        Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewSelectionActionGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewActionGrid}" Grid.Row="1"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewSelectionNamespaceGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewNamespaceGrid}" Grid.Row="1"/>

            <Control Template="{StaticResource NewDotNetActionGrid}" Grid.Row="2"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewInputsGrid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" x:Name="UrlLabel" Text="Inputs" />
                <controls:Dev2DataGrid x:Name="LargeDataGrid"
                                   Grid.Row="1"
                                   ItemsSource="{Binding InputArea.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ActivityMapppingDataGridStyle}"
                                   Height="Auto"
                                   Margin="{StaticResource ControlBorderTop}">

                    <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Input Data or [[Variable]]"
                                        HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:IntellisenseTextBox DefaultText="[[Variable]]"
                                                    AllowMultilinePaste="True"
                                                    AcceptsReturn="True"
                                                    AllowUserInsertLine="True"
                                                    MaxHeight="80"
                                                    Margin="0,0,1,1"
                                                    TextWrapping="Wrap"
                                                    WrapInBrackets="False"
                                                    ToolTip="{x:Static help:HelpTextResources.SqlBulkInsertToolTipInputColumn}"
                                                    Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource ActivityMapppingDataGridIntellisenseTextBoxStyle}">
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.SQLBulkInsertHelpInputData}" DataContext="{Binding}" />
                                            <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="Value"
                                                         SourcePropertyValue="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_Row{1}_InputColumn_AutoID">
                                                <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                                <Binding Path="IndexNumber" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </ui:IntellisenseTextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="65"
                                            Header="Parameter"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <TextBlock Text="{Binding Path=Name}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Padding="3,0"
                                           ToolTip="{Binding OutputColumn.ColumnName}">                               
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="90"
                                            Header="Empty Is Null"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox IsChecked="{Binding Path=EmptyIsNull}" HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </controls:Dev2DataGrid>
                <TextBlock Grid.Row="1" Text="None" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,-5"
                       Style="{StaticResource MenuTextBlockStyle}"
                       Visibility="{Binding InputArea.IsInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
            <Button x:Name="TestInputButton"
                    Grid.Row="1" 
                    Content="Generate Outputs" 
                    Width="Auto" 
                    IsEnabled="{Binding InputArea.IsVisible}"
                    Margin="{StaticResource ControlBorderTop}"
                    ToolTip="{x:Static languages:Core.ManageDbServiceTestActionTooltip}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=TestInputCommand, Mode=TwoWay}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewOutputsGrid" d:DataContext="{d:DesignInstance core1:OutputsRegion}" >
        <Grid x:Name="OutputsTemplate" VerticalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" x:Name="UrlLabel" Text="Outputs" />
                <controls:Dev2DataGrid x:Name="OutputsMappingDataGrid"
                                       Grid.Row="1"
                                       ItemsSource="{Binding Outputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ActivityMapppingDataGridStyle}"
                                       Height="Auto"
                                       Margin="{StaticResource ControlBorderTop}">

                    <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="100"
                                            Header="Mapped From"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <TextBlock Text="{Binding Path=MappedFrom}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Padding="3,0"
                                           ToolTip="{Binding OutputColumn.ColumnName}">                               
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Mapped To"
                                        HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:IntellisenseTextBox DefaultText="[[Variable]]"
                                                    AllowMultilinePaste="True"
                                                    AcceptsReturn="True"
                                                    AllowUserInsertLine="True"
                                                    MaxHeight="80"
                                                    Margin="0,0,1,1"
                                                    TextWrapping="Wrap"
                                                    WrapInBrackets="False"
                                                    ToolTip="{x:Static languages:Core.MappingsDefaultValueHelp}"
                                                    Text="{Binding Path=MappedTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource ActivityMapppingDataGridIntellisenseTextBoxStyle}">
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.MappingsDefaultValueHelp}" DataContext="{Binding}" />
                                            <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="MappedTo"
                                                         SourcePropertyValue="{Binding Path=MappedTo, UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_Row{1}_InputColumn_AutoID">
                                                <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                                <Binding Path="IndexNumber" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </ui:IntellisenseTextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </controls:Dev2DataGrid>
                <TextBlock Text="None"
                           Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,-18"
                           Style="{StaticResource MenuTextBlockStyle}"
                           Visibility="{Binding IsOutputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
            <Grid Grid.Row="1" Margin="{StaticResource ControlBorderTop}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Recordset Name" ></TextBlock>
                <TextBox Grid.Column="1" x:Name="RecordSetTextBox" Text="{Binding RecordsetName, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding IsEnabled}">
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.MappingsRecordsetNameHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Grid>
    </ControlTemplate>


    <ControlTemplate x:Key="NewGenerateOutputsDataTableTemplate" d:DataContext="{d:DesignInstance core1:ManageDatabaseServiceInputViewModel}">
        <Grid x:Name="OutputsGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{x:Static languages:Core.OutputsLabel}" FontWeight="Bold" Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}" />
            <Border Grid.Row="1" 
                    Grid.Column="0"  BorderBrush="{StaticResource WarewolfHeaderWatermarkGreyBrush}" BorderThickness="1" 
                    Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" >
                        <ig:XamGrid x:Name="OutputsDataGrid" 
                                    ItemsSource="{Binding TestResults}" 
                                    AutoGenerateColumns="True" 
                                    RowHover="Row"
                                    IsAlternateRowsEnabled="False" 
                                    Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}" 
                                    DeleteKeyAction="DeleteRowOfActiveCell"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                    ColumnWidth="*" >
                            <ig:XamGrid.SelectionSettings>
                                <ig:SelectionSettings CellClickAction="SelectRow" CellSelection="None" />
                            </ig:XamGrid.SelectionSettings>
                            <ig:XamGrid.SortingSettings>
                                <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                            </ig:XamGrid.SortingSettings>
                            <ig:XamGrid.EditingSettings>
                                <ig:EditingSettings AllowEditing="None"
                                                    IsMouseActionEditingEnabled="None"
                                                    IsEnterKeyEditingEnabled="False" 
                                                    IsF2EditingEnabled="False" 
                                                    IsOnCellActiveEditingEnabled="False" />
                            </ig:XamGrid.EditingSettings>
                        </ig:XamGrid>
                    </Grid>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="1"
                       Text="None" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Visibility="{Binding IsTestResultsEmptyRows,Converter={StaticResource BoolToVis}}" />
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewGenerateOutputsViewDB"  d:DataContext="{d:DesignInstance core1:ManageDatabaseServiceInputViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=InputCountExpandAllowed}" Value="True">
                                    <Setter Property="RowDefinition.Height" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=InputCountExpandAllowed}" Value="False">
                                    <Setter Property="RowDefinition.Height" Value="Auto"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=OutputCountExpandAllowed}" Value="True">
                                    <Setter Property="RowDefinition.Height" Value="*"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=OutputCountExpandAllowed}" Value="False">
                                    <Setter Property="RowDefinition.Height" Value="Auto"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static languages:Core.InputsHeader}" FontWeight="Bold" />
                
                <controls:Dev2DataGrid x:Name="LargeDataGrid"
                                   Grid.Row="1"
                                   ItemsSource="{Binding InputArea.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ActivityMapppingDataGridStyle}"
                                   Height="Auto"
                                   MinHeight="100"
                                   Margin="{StaticResource ControlBorderTop}">

                    <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="65"
                                            Header="Parameter"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <TextBlock Text="{Binding Path=Name}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Padding="3,0"
                                           ToolTip="{Binding OutputColumn.ColumnName}">
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Test Data"
                                        HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:IntellisenseTextBox DefaultText="Test Data"
                                                    AllowMultilinePaste="True"
                                                    AcceptsReturn="True"
                                                    AllowUserInsertLine="True"
                                                    MaxHeight="80"
                                                    Margin="0,0,1,1"
                                                    TextWrapping="Wrap"
                                                    WrapInBrackets="False"
                                                    ToolTip="{x:Static help:HelpTextResources.SqlBulkInsertToolTipInputColumn}"
                                                    Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource ActivityMapppingDataGridIntellisenseTextBoxStyle}">
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:Core.SQLBulkInsertHelpInputData}" DataContext="{Binding}" />
                                            <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="Value"
                                                         SourcePropertyValue="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
                    xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
                    xmlns:customControls1="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
                    xmlns:interfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors;assembly=Dev2.Intellisense"
                    xmlns:controls="clr-namespace:Dev2.Activities.Designers2.Core.Controls"
                    xmlns:core1="clr-namespace:Dev2.Activities.Designers2.Core"
                    xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
                    xmlns:help="clr-namespace:Dev2.Activities.Designers2.Core.Help"
                    xmlns:common="clr-namespace:System.Data.Common;assembly=System.Data"
                    xmlns:to="clr-namespace:Dev2.TO;assembly=Dev2.Activities"
                    xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    mc:Ignorable="d"
                    x:Class="CustomToolDesignerRegions"
                    d:DataContext="{d:DesignInstance core1:CustomToolWithRegionBase}">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="SelectionGrid">
        <Grid x:Name="SourcesGrid"  
                  Visibility="{Binding SourceRegion.IsVisible, Converter={StaticResource BoolToVisibilityConverterPositive}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="SourceLabel" Text="Source" />
            <ComboBox x:Name="SourcesComboBox"
                          Grid.Column="1"
                          DisplayMemberPath="Name" 
                          Margin="{StaticResource ControlBorderRight}"
                          ToolTip="{x:Static languages:Core.ManageDbServiceSourcesTooltip}"
                          ItemsSource="{Binding SourceRegion.Sources}"
                          SelectedItem="{Binding SourceRegion.SelectedSource , Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceSourceTypesHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="SourceEditButton" 
                        Grid.Column="2"
                        Margin="{StaticResource ControlBorderRight}"
                        Content="..."
                        ToolTip="{x:Static languages:Core.ManageDbServiceEditSourceTooltip}"
                        Command="{Binding Path=SourceRegion.EditSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceEditSourceHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
            <Button x:Name="SourceNewButton" 
                        Grid.Column="3"
                        Content="{x:Static languages:Core.New}" 
                        Width="Auto"
                        Style="{StaticResource ButtonOrangeStyle}" 
                        ToolTip="{x:Static languages:Core.ManageDbServiceNewSourceTooltip}"
                        Command="{Binding Path= SourceRegion.NewSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceNewSourceHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="ActionGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="ActionsComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding ActionRegion.Actions}"
                              DisplayMemberPath="Name" 
                              IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                              ToolTip="{x:Static languages:Core.ManageDbServiceActionsTooltip}"
                              IsEditable="False"
                              SelectedItem="{Binding ActionRegion.SelectedAction}"/>
            <Button x:Name="ActionRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=ActionRegion.RefreshActionsCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="25"
                                                        Height="25"
                                                        Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NamespaceGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NamespaceLabel" Text="Namespace" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="NamespaceComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding NamespaceRegion.Namespaces}"
                              DisplayMemberPath="FullName" 
                              IsEnabled="{Binding NamespaceRegion.IsNamespaceEnabled}"
                              ToolTip="{x:Static languages:Core.ManageDbServiceActionsTooltip}"
                              IsEditable="False"
                              SelectedItem="{Binding NamespaceRegion.SelectedNamespace}"/>
            <Button x:Name="NamespaceRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=NamespaceRegion.RefreshNamespaceCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=NamespaceRegion.IsNamespaceRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="25"
                                                        Height="25"
                                                        Visibility="{Binding Path=NamespaceRegion.IsNamespaceRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    
    <ControlTemplate x:Key="SelectionActionGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource SelectionGrid}"/>

            <Control Template="{StaticResource ActionGrid}" Grid.Row="1"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="SelectionNamespaceGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource SelectionGrid}"/>

            <Control Template="{StaticResource NamespaceGrid}" Grid.Row="1"/>
            
            <Control Template="{StaticResource ActionGrid}" Grid.Row="2"/>
        </Grid>
    </ControlTemplate>
    
    <ControlTemplate x:Key="InputsGrid">
        <Grid Visibility="{Binding InputArea.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <controls:Dev2DataGrid x:Name="LargeDataGrid"
                                   Grid.Row="0"
                                   ItemsSource="{Binding InputArea.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ActivityMapppingDataGridStyle}"
                                   Height="Auto"
                                   MinHeight="{Binding InputArea.MinHeight}"
                                   MaxHeight="{Binding InputArea.MaxHeight}"
                                   Margin="{StaticResource ControlBorderTop}">

                <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Input Data or [[Variable]]"
                                        HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:IntellisenseTextBox DefaultText="[[Variable]]"
                                                    AllowMultilinePaste="True"
                                                    AcceptsReturn="True"
                                                    AllowUserInsertLine="True"
                                                    MaxHeight="80"
                                                    Margin="0,0,1,1"
                                                    TextWrapping="Wrap"
                                                    WrapInBrackets="False"
                                                    ToolTip="{x:Static help:HelpTextResources.SqlBulkInsertToolTipInputColumn}"
                                                    Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource ActivityMapppingDataGridIntellisenseTextBoxStyle}">
                                    <i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:Core.SQLBulkInsertHelpInputData}" DataContext="{Binding}" />
                                        <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="Value"
                                                         SourcePropertyValue="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_Row{1}_InputColumn_AutoID">
                                            <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                            <Binding Path="IndexNumber" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </ui:IntellisenseTextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="65"
                                            Header="Parameter"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                    <TextBlock Text="{Binding Path=Name}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Padding="3,0"
                                           ToolTip="{Binding OutputColumn.ColumnName}">                               
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="90"
                                            Header="Empty Is Null"
                                            HeaderStyle="{StaticResource ActivityMapppingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding Path=EmptyIsNull}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </controls:Dev2DataGrid>
            <TextBlock Grid.Row="0" Text="None" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,-5"
                       Style="{StaticResource MenuTextBlockStyle}"
                       Visibility="{Binding InputArea.IsInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button x:Name="TestInputButton"
                    Grid.Row="1" 
                    Content="Generate Outputs" 
                    Width="Auto" 
                    Margin="{StaticResource ControlBorderTop}"
                    ToolTip="{x:Static languages:Core.ManageDbServiceTestActionTooltip}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=TestInputCommand, Mode=TwoWay}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="OutputsGrid" d:DataContext="{d:DesignInstance core1:OutputsRegion}" >
        <Grid VerticalAlignment="Stretch" 
                      x:Name="OutputsTemplate"
                      Visibility="{Binding OutputsRegion.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="{StaticResource WarewolfHeaderWatermarkGreyBrush}" BorderThickness="1" Margin="{StaticResource ControlBorderTop}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ig:XamGrid x:Name="OutputsMappingDataGrid"
                                        ItemsSource="{Binding OutputsRegion.Outputs}"
                                        IsAlternateRowsEnabled="False"
                                        AutoGenerateColumns="False"
                                        IsEnabled="{Binding OutputsRegion.IsVisible}"
                                        Margin="-1,0,0,0"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Visibility="{Binding OutputsRegion.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        MinHeight="100"
                                        ColumnWidth="*">
                        <ig:XamGrid.Columns>
                            <ig:TextColumn x:Name="OutputColumn" Key="MappedFrom" HeaderText="Mapped From" MinimumWidth="100" IsReadOnly="True">
                                <ig:TextColumn.AddNewRowEditorTemplate>
                                    <DataTemplate DataType="db:IServiceOutputMapping">
                                        <ui:IntellisenseTextBox WrapInBrackets="True" IsEnabled="False" Text="{Binding MappedFrom}" ToolTip="{Binding Path=MappedFrom}"/>
                                    </DataTemplate>
                                </ig:TextColumn.AddNewRowEditorTemplate>
                            </ig:TextColumn>
                            <customControls1:IntellisenseTextBoxColumn Key="MappedTo" HeaderText="Mapped To"  MinimumWidth="100" Watermark="Mapped To">
                                <customControls1:IntellisenseTextBoxColumn.AddNewRowEditorTemplate>
                                    <DataTemplate DataType="db:IServiceOutputMapping">
                                        <ui:IntellisenseTextBox Text="{Binding MappedTo}" ToolTip="{Binding Path=MappedTo}">
                                            <ui:IntellisenseTextBox.IntellisenseProvider>
                                                <interfaceImplementors:CompositeIntellisenseProvider>
                                                    <interfaceImplementors:DefaultIntellisenseProvider />
                                                </interfaceImplementors:CompositeIntellisenseProvider>
                                            </ui:IntellisenseTextBox.IntellisenseProvider>
                                        </ui:IntellisenseTextBox>
                                    </DataTemplate>
                                </customControls1:IntellisenseTextBoxColumn.AddNewRowEditorTemplate>
                            </customControls1:IntellisenseTextBoxColumn>
                        </ig:XamGrid.Columns>
                        <ig:XamGrid.SortingSettings>
                            <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                        </ig:XamGrid.SortingSettings>
                        <ig:XamGrid.EditingSettings>
                            <ig:EditingSettings AllowEditing="Cell"
                                                        IsMouseActionEditingEnabled="SingleClick"
                                                        IsEnterKeyEditingEnabled="True"
                                                        IsF2EditingEnabled="True"
                                                        IsOnCellActiveEditingEnabled="True" />
                        </ig:XamGrid.EditingSettings>
                        <ig:XamGrid.ConditionalFormattingSettings>
                            <ig:ConditionalFormattingSettings AllowConditionalFormatting="True"/>
                        </ig:XamGrid.ConditionalFormattingSettings>
                    </ig:XamGrid>
                    <TextBlock Text="None"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,-18"
                                       Style="{StaticResource MenuTextBlockStyle}"
                                       Visibility="{Binding OutputsRegion.IsOutputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="{StaticResource ControlBorderTop}" Visibility="{Binding OutputsRegion.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Recordset Name" ></TextBlock>
                <TextBox Grid.Column="1" x:Name="RecordSetTextBox" Text="{Binding OutputsRegion.RecordsetName, UpdateSourceTrigger=PropertyChanged}" >
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.MappingsRecordsetNameHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="GenerateOutputsDataTableTemplate" d:DataContext="{d:DesignInstance core1:ManageDatabaseServiceInputViewModel}">
        <Grid x:Name="OutputsGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{x:Static languages:Core.OutputsLabel}" FontWeight="Bold" Visibility="{Binding ManageServiceInputViewModel.TestResultsAvailable,Converter={StaticResource BoolToVis}}" />
            <Border Grid.Row="1" 
                    Grid.Column="0"  BorderBrush="{StaticResource WarewolfHeaderWatermarkGreyBrush}" BorderThickness="1" 
                    Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" >
                        <ig:XamGrid x:Name="OutputsDataGrid" 
                                    ItemsSource="{Binding TestResults}" 
                                    AutoGenerateColumns="True" 
                                    RowHover="Row"
                                    IsAlternateRowsEnabled="False" 
                                    Visibility="{Binding TestResultsAvailable,Converter={StaticResource BoolToVis}}" 
                                    DeleteKeyAction="DeleteRowOfActiveCell"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                    ColumnWidth="*" >
                            <ig:XamGrid.SelectionSettings>
                                <ig:SelectionSettings CellClickAction="SelectRow" CellSelection="None" />
                            </ig:XamGrid.SelectionSettings>
                            <ig:XamGrid.SortingSettings>
                                <ig:SortingSettings AllowSorting="False" AllowMultipleColumnSorting="False" ShowSortIndicator="False"/>
                            </ig:XamGrid.SortingSettings>
                            <ig:XamGrid.EditingSettings>
                                <ig:EditingSettings AllowEditing="None"
                                                    IsMouseActionEditingEnabled="None"
                                                    IsEnterKeyEditingEnabled="False" 
                                                    IsF2EditingEnabled="False" 
                                                    IsOnCellActiveEditingEnabled="False" />
                            </ig:XamGrid.EditingSettings>
                        </ig:XamGrid>
                    </Grid>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="1"
                           Text="None" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding IsTestResultsEmptyRows,Converter={StaticResource BoolToVis}}" />
        </Grid>
    </ControlTemplate>
    
    <ControlTemplate x:Key="GenerateOutputsTextTemplate" d:DataContext="{d:DesignInstance core1:ManageWebServiceInputViewModel}">
        <Grid x:Name="OutputsGrid" Visibility="{Binding PasteResponseVisible,Converter={StaticResource BoolToVisibilityConverterNegative}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{x:Static languages:Core.OutputsLabel}" FontWeight="Bold" Visibility="{Binding ManageServiceInputViewModel.TestResultsAvailable,Converter={StaticResource BoolToVis}}" />
            <Border Grid.Row="1" 
                    Grid.Column="0"  BorderBrush="{StaticResource WarewolfHeaderWatermarkGreyBrush}" BorderThickness="1" 
                    Visibility="{Binding ManageServiceInputViewModel.TestResultsAvailable,Converter={StaticResource BoolToVis}}">
                <ScrollViewer VerticalAlignment="Top"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Height="110"
                              Visibility="{Binding ManageServiceInputViewModel.TestResultsAvailable,Converter={StaticResource BoolToVis}}">
                    <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth}" >
                        <TextBlock Text="{Binding ManageServiceInputViewModel.TestResults}" 
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Stretch" 
                                   VerticalAlignment="Stretch">
                            <i:Interaction.Behaviors>
                                <core:HelpSetter Text="{x:Static languages:Core.PluginServiceTestResultsHelp}" DataContext="{Binding}" />
                            </i:Interaction.Behaviors>
                        </TextBlock>
                    </Grid>
                </ScrollViewer>
            </Border>
            <TextBlock Grid.Row="1"
                           Text="None" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding ManageServiceInputViewModel.IsTestResultsEmptyRows,Converter={StaticResource BoolToVis}}" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="GenerateResponseTemplate" d:DataContext="{d:DesignInstance core1:ManageWebServiceInputViewModel}">
        <Grid x:Name="ResponseGrid" Visibility="{Binding PasteResponseVisible,Converter={StaticResource BoolToVisibilityConverterNegative}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Paste Response" FontWeight="Bold" />

            <TextBox Grid.Row="1"
                     Height="110"
                         Text="{Binding ManageServiceInputViewModel.TestResults}" 
                         x:Name="ResponseTextbox"
                         Style="{StaticResource StretchedTextBoxStyle}"
                         customControls:WatermarkTextBox.Watermark="Paste response here"
                         SnapsToDevicePixels="True" 
                         VerticalScrollBarVisibility="Auto"
                         ToolTip="{x:Static languages:Core.ManageWebPasteResponseTooltip}"
                         HorizontalScrollBarVisibility="Disabled" >
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.WebServicePasteInputHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </TextBox>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="GenerateOutputsView"  d:DataContext="{d:DesignInstance core1:ManageWebServiceInputViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static languages:Core.InputsHeader}" FontWeight="Bold" />

                <Border Grid.Row="1" 
                        Grid.Column="0"  BorderThickness="1" >
                    <Border.Style>
                        <Style>
                            <Setter Property="Border.BorderBrush" Value="{StaticResource WarewolfHeaderWatermarkGreyBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="Border.IsMouseOver" Value="True">
                                    <Setter Property="Border.BorderBrush" Value="{StaticResource WareWolfOrangeBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" CanContentScroll="True" >
                        <ItemsControl x:Name="InputsList" 
                                      Margin="{StaticResource ControlBorderTop}"
                                      Grid.IsSharedSizeScope="True" 
                                      ItemsSource="{Binding ManageServiceInputViewModel.InputArea.Inputs}" 
                                      BorderBrush="{StaticResource WareWolfWhiteBrush}" 
                                      HorizontalContentAlignment="Stretch"
                                      VerticalAlignment="Top"
                                      Background="{StaticResource WareWolfWhiteBrush}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="{Binding ElementName=InputsList, Path=ActualWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition SharedSizeGroup="True" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="InputName" 
                                                   Margin="{StaticResource ControlBorderTop}" 
                                                   Text="{Binding Path=Name}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   MinWidth="25"
                                                   MaxWidth="125"
                                                   HorizontalAlignment="Stretch" 
                                                   ToolTip="{Binding Path=Name}"/>
                                        <TextBox Margin="{StaticResource ControlBorderTopRight}" 
                                                 Grid.Column="1"
                                                 Text="{Binding Path=Value}" 
                                                 HorizontalAlignment="Stretch" 
                                                 AcceptsReturn="True"
                                                 Height="Auto"
                                                 MaxHeight="45"
                                                 MinWidth="50"
                                                 TextWrapping="Wrap"
                                                 VerticalAlignment="Stretch"
                                                 VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto"
                                                 customControls:WatermarkTextBox.Watermark="Test Data"
                                                 ToolTip="{x:Static languages:Core.ManageDbServiceInputValueTooltip}">
                                            <!--<i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceInputsHelp}" DataContext="{Binding}" />
                                    </i:Interaction.Behaviors>-->
                                        </TextBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <TextBlock Text="None"
                           Grid.Row="1" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,-3"
                           Style="{StaticResource MenuTextBlockStyle}"
                           Visibility="{Binding ManageServiceInputViewModel.IsGenerateInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="{StaticResource ControlBorderTop}">
                    <customControls:CircularProgressBar Width="25"
                                                    HorizontalAlignment="Right" 
                                                    Margin="{StaticResource ControlBorderRight}"
                                                    Height="25"
                                                    Padding="2.5"
                                                    Visibility="{Binding Path=ManageServiceInputViewModel.IsTesting,Converter={StaticResource BoolToVis}}" />
                    <Button Width="25" 
                        Height="25"
                        x:Name="PasteButton"
                        Margin="{StaticResource ControlBorderRight}"
                        Command="{Binding ManageServiceInputViewModel.PasteResponseCommand}" 
                        ToolTip="{x:Static languages:Core.ManageWebServicePasteTooltip}"
                        Visibility="{Binding ManageServiceInputViewModel.PasteResponseAvailable, Converter={StaticResource BoolToVis}}"
                        VerticalAlignment="Top">
                        <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                    FontSize="16" 
                                    FontWeight="DemiBold" 
                                    Icon="Pencil" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Center"/>
                        <i:Interaction.Behaviors>
                            <core:HelpSetter Text="{x:Static languages:Core.WebServicePasteHelp}" DataContext="{Binding}" />
                        </i:Interaction.Behaviors>
                    </Button>
                    <Button x:Name="TestActionButton" 
                        HorizontalAlignment="Right" 
                        Command="{Binding ManageServiceInputViewModel.TestCommand}" 
                        ToolTip="{x:Static languages:Core.ManageDbServiceTestActionTooltip}"
                        Content="Test"
                        Width="46">
                        <i:Interaction.Behaviors>
                            <core:HelpSetter Text="{x:Static languages:Core.DatabaseServiceTestHelp}" DataContext="{Binding}" />
                        </i:Interaction.Behaviors>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="{Binding ManageServiceInputViewModel.OutputsHeight}"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Control Grid.Row="0" Template="{StaticResource GenerateOutputsDataTableTemplate}" 
                     Visibility="{Binding ManageServiceInputViewModel.TestResultsAvailable,Converter={StaticResource BoolToVisibilityConverterPositive}}"/>
                
                <Control Grid.Row="0" Template="{StaticResource GenerateOutputsTextTemplate}" 
                     Visibility="{Binding ManageServiceInputViewModel.PasteResponseVisible,Converter={StaticResource BoolToVisibilityConverterPositive}}"/>

                <Control Grid.Row="0" Template="{StaticResource GenerateResponseTemplate}" 
                     Visibility="{Binding ManageServiceInputViewModel.PasteResponseVisible,Converter={StaticResource BoolToVisibilityConverterPositive}}"></Control>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="{StaticResource ControlBorderTop}" HorizontalAlignment="Right">
                    <Button x:Name="GenerateOutputsDoneButton" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="{StaticResource ControlBorderRight}"
                        Command="{Binding ManageServiceInputViewModel.OkCommand}"
                        Width="46"
                        Content="Done"/>
                    <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Command="{Binding ManageServiceInputViewModel.CloseCommand}"
                        Width="46"
                        Content="Cancel"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ControlTemplate>



</ResourceDictionary>
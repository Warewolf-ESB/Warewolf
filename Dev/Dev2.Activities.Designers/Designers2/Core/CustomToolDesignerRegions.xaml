<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
                    xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:controls="clr-namespace:Dev2.Activities.Designers2.Core.Controls"
                    xmlns:core1="clr-namespace:Dev2.Activities.Designers2.Core"
                    xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
                    xmlns:common="clr-namespace:System.Data.Common;assembly=System.Data"
                    xmlns:to="clr-namespace:Dev2.TO;assembly=Dev2.Activities"
                    xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:interfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors;assembly=Dev2.Intellisense"
                    xmlns:netDllEnhanced="clr-namespace:Dev2.Activities.Designers2.Net_Dll_Enhanced"
                    xmlns:actionRegion="clr-namespace:Dev2.Activities.Designers2.Core.ActionRegion"
                    xmlns:inputRegion="clr-namespace:Dev2.Activities.Designers2.Core.InputRegion"
                    mc:Ignorable="d"
                    x:Class="CustomToolDesignerRegions"
                    d:DataContext="{d:DesignInstance core1:CustomToolWithRegionBase}">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <core1:DotNetActionsWidthConverter x:Key="DotNetActionsWidthConverter" />

    <ControlTemplate x:Key="NewSelectionGrid">
        <Grid x:Name="SourcesGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SourceRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="SourceLabel" Text="Source" />
            <ComboBox x:Name="SourcesComboBox"
                          Grid.Column="1"
                          DisplayMemberPath="Name" 
                          Margin="{StaticResource ControlBorderRight}"
                          ToolTip="{Binding SourceRegion.SourcesTooltip}"
                          ItemsSource="{Binding SourceRegion.Sources}"
                          SelectedItem="{Binding SourceRegion.SelectedSource , Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.SourcesHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="SourceEditButton" 
                        Grid.Column="2"
                        Margin="{StaticResource ControlBorderRight}"
                        Content="..."
                        ToolTip="{Binding SourceRegion.EditSourceTooltip}"
                        Command="{Binding Path=SourceRegion.EditSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.EditSourceHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
            <Button x:Name="SourceNewButton" 
                        Grid.Column="3"
                        Content="{x:Static languages:Core.New}" 
                        Width="Auto"
                        Style="{StaticResource ButtonOrangeStyle}" 
                        ToolTip="{Binding SourceRegion.NewSourceTooltip}"
                        Command="{Binding Path=SourceRegion.NewSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{Binding SourceRegion.NewSourceHelpText}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="NewActionGrid">
        <Grid x:Name="ActionsGrid" Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActionRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="ActionsComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding ActionRegion.Actions}"
                              DisplayMemberPath="Name" 
                              IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                              ToolTip="{x:Static languages:Tooltips.ManageDbServiceActionsTooltip}"
                              IsEditable="False" Style="{StaticResource ComboBoxFixedDropDownWidthStyle}"
                              VirtualizingStackPanel.IsVirtualizing="True" 
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              SelectedItem="{Binding ActionRegion.SelectedAction}">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate >
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.DatabaseServiceSelectActionHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="ActionRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding ActionRegion.RefreshActionsCommand, Mode=TwoWay}"
                            Visibility="{Binding ActionRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.DatabaseServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="22"
                                                        Height="22"
                                                        Visibility="{Binding ActionRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewOdbcActionGrid">
        <Grid x:Name="ActionsGrid" Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActionRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ui:IntellisenseTextBox x:Name="ActionsComboBox"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    ToolTip="{x:Static languages:Tooltips.ManageOdbcServiceActionsTooltip}"
                                    Height="Auto"
                                    MinLines="5"
                                    VerticalContentAlignment="Top"
                                    VerticalScrollBarVisibility="Auto"
                                    AcceptsReturn="True" 
                                    AllowMultilinePaste="True" 
                                    AllowUserInsertLine="True"
                                    TextWrapping="Wrap"
                                    FilterType="All"                                    
                                    WrapInBrackets="False"
                                    Text="{Binding ActionRegion.CommandText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                                    Style="{StaticResource ActivityIntellisenseTextBoxStyle}"
                                    AutomationProperties.AutomationId="{Binding ModelItem.AutomationID, StringFormat=UI_{0}_FileOrFoldertxt_AutoID}">
                <ui:IntellisenseTextBox.DefaultText>
                    <TextBlock Text="[[Command]]" VerticalAlignment="Top" Margin="0,-3,0,0"></TextBlock>
                </ui:IntellisenseTextBox.DefaultText>
                <ui:IntellisenseTextBox.IntellisenseProvider>
                    <interfaceImplementors:CompositeIntellisenseProvider>
                        <interfaceImplementors:DefaultIntellisenseProvider />
                    </interfaceImplementors:CompositeIntellisenseProvider>
                </ui:IntellisenseTextBox.IntellisenseProvider>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.ManageOdbcServiceActionsHelpText}" DataContext="{Binding}" />
                    <errors:ErrorsSetter Source="{Binding}"
                                     SourcePropertyName="ActionRegion.CommandText"
                                     SourcePropertyValue="{Binding  ActionRegion.CommandText, UpdateSourceTrigger=PropertyChanged}"
                                     Target="{Binding}" />
                </i:Interaction.Behaviors>
            </ui:IntellisenseTextBox>
            <Button x:Name="TestInputButton"
                    Grid.Row="1" 
                    Grid.Column="1"
                    Content="Generate Outputs"
                    Width="Auto" 
                    IsEnabled="{Binding ActionRegion.IsGenerateOutputsEnabled}"
                    Margin="{StaticResource ControlBorderTop}"
                    ToolTip="{x:Static languages:Tooltips.ManageDbServiceTestActionTooltip}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=TestInputCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.InputGenerateOutputsDefaultHelp}" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewDotNetActionGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActionRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ActionLabel" Text="Action" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="ActionsComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding ActionRegion.Actions}"
                              DisplayMemberPath="Method" 
                              IsEnabled="{Binding ActionRegion.IsActionEnabled}"
                              ToolTip="{x:Static languages:Tooltips.PluginServiceSelectActionToolTip}"
                              IsEditable="False"
                              VirtualizingStackPanel.IsVirtualizing="True" 
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              SelectedItem="{Binding ActionRegion.SelectedAction}">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate >
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.PluginServiceSelectActionHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="ActionRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=ActionRegion.RefreshActionsCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.PluginServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="22"
                                                        Height="22"
                                                        Visibility="{Binding Path=ActionRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewNamespaceGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding NamespaceRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NamespaceLabel" Text="Namespace" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="NamespaceComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding NamespaceRegion.Namespaces}"
                              DisplayMemberPath="FullName" 
                              IsEnabled="{Binding NamespaceRegion.IsNamespaceEnabled}"
                              ToolTip="{x:Static languages:Tooltips.PluginServiceSelectNamespaceToolTip}"
                              IsEditable="False"
                              SelectedItem="{Binding NamespaceRegion.SelectedNamespace}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.PluginServiceSelectNamespaceHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="NamespaceRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=NamespaceRegion.RefreshNamespaceCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.PluginServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="22"
                                                        Height="22"
                                                        Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="NewDotNetNamespaceGrid">
        <Grid x:Name="ActionsGrid" 
                      Margin="{StaticResource ControlBorderTop}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding NamespaceRegion.LabelWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NamespaceLabel" Text="ClassName" Margin="{StaticResource ControlBorderRight}" />
            <ComboBox x:Name="NamespaceComboBox"
                              Grid.Column="1"
                              Margin="{StaticResource ControlBorderRight}"
                              ItemsSource="{Binding NamespaceRegion.Namespaces}"
                              DisplayMemberPath="FullName" 
                              IsEnabled="{Binding NamespaceRegion.IsNamespaceEnabled}"
                              ToolTip="{x:Static languages:Tooltips.DotNetPluginServiceSelectNamespaceToolTip}"
                              IsEditable="False"
                              SelectedItem="{Binding NamespaceRegion.SelectedNamespace}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.DotNetPluginServiceSelectNamespaceHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </ComboBox>
            <Button x:Name="NamespaceRefreshButton" 
                            Grid.Column="2"
                            Command="{Binding Path=NamespaceRegion.RefreshNamespaceCommand, Mode=TwoWay}"
                            Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVisibilityConverterNegative}}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.PluginServiceRefreshHelp}" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
                <Button.Content>
                    <fa:FontAwesome Icon="Refresh"/>
                </Button.Content>
            </Button>
            <customControls:CircularProgressBar Margin="{StaticResource ControlBorderLeft}"
                                                        Grid.Column="2"
                                                        Width="22"
                                                        Height="22"
                                                        Visibility="{Binding Path=NamespaceRegion.IsRefreshing, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="NewSelectionActionGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewActionGrid}" Grid.Row="1"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewWcfSelectionActionGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewDotNetActionGrid}" Grid.Row="1"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewOdbcSelectionActionGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewOdbcActionGrid}" Grid.Row="1"/>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewSelectionNamespaceGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Control Template="{StaticResource NewSelectionGrid}"/>

            <Control Template="{StaticResource NewNamespaceGrid}" Grid.Row="1"/>

            <Control Template="{StaticResource NewDotNetActionGrid}" Grid.Row="2"/>
        </Grid>
    </ControlTemplate>


    <ControlTemplate x:Key="NewInputsGrid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" x:Name="InputsLabel" Text="Inputs" />
                <controls:Dev2DataGrid x:Name="LargeDataGrid"
                                   Grid.Row="1"
                                   ItemsSource="{Binding InputArea.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ActivityMappingDataGridStyle}"
                                   Height="Auto"
                                   Margin="{StaticResource ControlBorderTop}">

                    <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="*"
                                        MinWidth="125"
                                        Header="Input Data or [[Variable]]"
                                        HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                        d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:IntellisenseTextBox DefaultText="[[Variable]]"
                                                    AllowMultilinePaste="True"
                                                    AcceptsReturn="True"
                                                    AllowUserInsertLine="True"
                                                    MaxHeight="80"
                                                    Margin="0,0,1,1"
                                                    TextWrapping="Wrap"
                                                    WrapInBrackets="False"
                                                    ToolTip="{x:Static languages:Tooltips.InputDefaultValueToolTip}"
                                                    Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource ActivityMappingDataGridIntellisenseTextBoxStyle}">
                                        <i:Interaction.Behaviors>
                                            <core:HelpSetter Text="{x:Static languages:HelpText.InputDefaultValueHelp}" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                            <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="Value"
                                                         SourcePropertyValue="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_Row{1}_InputColumn_AutoID">
                                                <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                                <Binding Path="IndexNumber" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </ui:IntellisenseTextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="65"
                                            Header="Parameter"
                                            HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <TextBlock Text="{Binding Path=Name}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Padding="3,0"
                                           ToolTip="{Binding OutputColumn.ColumnName}">                               
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="90"
                                            Header="Empty Is Null"
                                            HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox 
                                            IsChecked="{Binding Path=EmptyIsNull}" 
                                            HorizontalAlignment="Center"
                                            ToolTip="{x:Static languages:Tooltips.InputEmptyIsNullToolTip}">
                                            <i:Interaction.Behaviors>
                                                <core:HelpSetter Text="{x:Static languages:HelpText.InputEmptyIsNullDefaultValueHelp}" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                            </i:Interaction.Behaviors>
                                        </CheckBox>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </controls:Dev2DataGrid>
                <TextBlock Grid.Row="1" Text="None" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,-5"
                       Style="{StaticResource MenuTextBlockStyle}"
                       Visibility="{Binding InputArea.IsInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
            <Button x:Name="TestInputButton"
                    Grid.Row="1" 
                    Content="Generate Outputs" 
                    Width="Auto" 
                    IsEnabled="{Binding InputArea.IsEnabled}"
                    Margin="{StaticResource ControlBorderTop}"
                    ToolTip="{x:Static languages:Tooltips.ServiceTestActionTooltip}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=TestInputCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:HelpText.InputGenerateOutputsDefaultHelp}" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="NewDotNetConstructorInputsGrid" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" x:Name="InputsLabel" Text="Inputs - None" 
                       Visibility="{Binding InputArea.IsInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <controls:Dev2DataGrid x:Name="LargeDataGrid"
                                    ItemsSource="{Binding InputArea.Inputs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource TransparentActivityMappingDataGridStyle}"
                                    Height="Auto"
                                   BorderBrush="Transparent"
                                   Background="Transparent"
                                   Margin="3,0,3,0"
                                   AutoGenerateColumns="False"
                                   Visibility="{Binding InputArea.IsInputsEmptyRows, Converter={StaticResource BoolToVisibilityConverterNegative}}">

                <!-- DO NOT override ItemsPanel - doing so causes column sizing issues on first drop -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*"
                                            MinWidth="125"
                                            Header="Input Data or [[Variable]]"
                                            HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=common:DataColumnMapping}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ui:IntellisenseTextBox DefaultText="[[Variable]]"
                                                        AllowMultilinePaste="True"
                                                        AcceptsReturn="True"
                                                        AllowUserInsertLine="True"
                                                        FilterType="{Binding IntellisenseFilter}"
                                                        MaxHeight="80"
                                                        Margin="0,0,1,1"
                                                        TextWrapping="Wrap"
                                                        WrapInBrackets="False"
                                                        ToolTip="{x:Static languages:Tooltips.InputDefaultValueToolTip}"
                                                        IntellisenseProvider="{StaticResource CalculateCompositeIntellisenseProvider}"
                                                        Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Style="{StaticResource ActivityMappingDataGridIntellisenseTextBoxStyle}">
                                    <i:Interaction.Behaviors>
                                        <core:HelpSetter Text="{x:Static languages:HelpText.InputDefaultValueHelp}" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                        <errors:ErrorsSetter Source="{Binding}"
                                                            SourcePropertyName="Value"
                                                            SourcePropertyValue="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                            Target="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core1:ActivityDesignerTemplate}}" />
                                    </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_Row{1}_InputColumn_AutoID">
                                            <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                            <Binding Path="IndexNumber" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </ui:IntellisenseTextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="SizeToCells"
                                            MinWidth="65"
                                            Header="Parameter"
                                            HeaderStyle="{StaticResource ActivityMappingDataGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=to:DataColumnMapping}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Background="{StaticResource DataGridColumnHeaderBackgroundBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Path=FullName}"
                                                TextTrimming="CharacterEllipsis"
                                                VerticalAlignment="Center"
                                                Padding="3,0"
                                               Grid.Column="0"
                                                ToolTip="{Binding Path=FullName}">                               
                            <AutomationProperties.AutomationId>
                                <MultiBinding StringFormat="UI_{0}_Row{1}_OutputColumnName_AutoID">
                                    <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core1:ActivityDesignerTemplate}" />
                                    <Binding Path="IndexNumber" />
                                </MultiBinding>
                            </AutomationProperties.AutomationId>
                                    </TextBlock>
                                    <Button Width="Auto" 
                                            Content="..." 
                                            HorizontalAlignment="Right" 
                                            Grid.Column="1"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.InputArea.ViewObjectResult}"
                                            CommandParameter="{Binding .}"

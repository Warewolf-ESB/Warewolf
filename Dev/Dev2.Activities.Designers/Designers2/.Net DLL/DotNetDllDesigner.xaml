<sap:ActivityDesigner x:Class="Dev2.Activities.Designers2.Net_DLL.DotNetDllDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:sqlServerDatabase="clr-namespace:Dev2.Activities.Designers2.SqlServerDatabase">

    <sap:ActivityDesigner.Resources>
        <ResourceDictionary>
            <sqlServerDatabase:Small x:Key="Small" AutomationProperties.AutomationId="SmallViewContent" />
            <sqlServerDatabase:Large x:Key="Large" AutomationProperties.AutomationId="LargeViewContent" />

            <Style x:Key="ContentViewStyle" BasedOn="{StaticResource ActivityDesignerStyle}" TargetType="{x:Type sap:ActivityDesigner}">
                <Setter Property="Content" Value="{DynamicResource Small}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=ShowLarge, Mode=TwoWay}" Value="true">
                        <Setter Property="Content" Value="{DynamicResource Large}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </sap:ActivityDesigner.Resources>

    <sap:ActivityDesigner.Icon>
        <Binding Source="{StaticResource Explorer-DLL}"/>
    </sap:ActivityDesigner.Icon>
</sap:ActivityDesigner>

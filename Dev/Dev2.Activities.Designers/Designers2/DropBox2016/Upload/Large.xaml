<core:ActivityDesignerTemplate x:Class="Dev2.Activities.Designers2.DropBox2016.Upload.Large"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core"
		xmlns:upload="clr-namespace:Dev2.Activities.Designers2.DropBox2016.Upload"
		xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:interfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors;assembly=Dev2.Intellisense"
		xmlns:help="clr-namespace:Dev2.Activities.Designers2.Core.Help"
		xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
		xmlns:attachedProperties="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
		xmlns:provider="clr-namespace:Dev2.Intellisense.Provider;assembly=Dev2.Intellisense"
		Width="320"
		mc:Ignorable="d"
		d:DesignWidth="290"  
		d:DataContext="{d:DesignInstance upload:DropBoxUploadViewModel}">

	<core:ActivityDesignerTemplate.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</core:ActivityDesignerTemplate.Resources>
	<core:ActivityDesignerTemplate.RightButtons>
		<core:ActivityDesignerButton x:Name="DoneButton"
									 Content="Done"
									 Margin="0,0,9,12"
									 IsValidatedBefore="True"
									 IsClosedAfter="True"
									 Style="{StaticResource ActivityDesignerButtonStyle}" />
	</core:ActivityDesignerTemplate.RightButtons>
	<Grid Margin="{StaticResource ElementBorder}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Source Implemantation-->
		<TextBlock Grid.Column="0" Grid.Row="0" Text="Dropbox Source" FontWeight="Normal" VerticalAlignment="Top"/>

		<Grid Grid.Column="1" Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<ComboBox x:Name="InitialComboBox"
					  Grid.Row="0"
					  Grid.Column="0"
					  Margin="{StaticResource ControlBorderRight}"
					  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
					  SelectedItem="{Binding SelectedSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					  ItemsSource="{Binding Sources}"
					  ToolTip="{x:Static help:HelpTextResources.DropboxSourceToolTip}"
					  DisplayMemberPath="ResourceName">
				<i:Interaction.Behaviors>
					<help:HelpSetter Text="{x:Static help:HelpTextResources.DropboxSourceToolTip}" DataContext="{Binding}" />
					<errors:ErrorsSetter Source="{Binding}"
											SourcePropertyName="SelectedSource"
											SourcePropertyValue="{Binding SelectedSource, UpdateSourceTrigger=PropertyChanged}"
											Target="{Binding}" />
				</i:Interaction.Behaviors>
			</ComboBox>
			<Button Grid.Column="1"
					Content="..."
					Command="{Binding EditDropboxSourceCommand}"
					ToolTip="{x:Static help:HelpTextResources.DropBoxToolTipEditSource}" />
		</Grid>
		<!-- Local File Implemantation-->
		<TextBlock Grid.Column="0" Grid.Row="1" Text="Local File" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}"/>
		<TextBox 	Grid.Column="1" Grid.Row="1"  Text="{Binding FromPath}" FontWeight="Normal" VerticalAlignment="Top" />

		<TextBlock Grid.Column="0" Grid.Row="2" Text="Write Mode" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}"/>
		<Grid Grid.Column="1" Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<RadioButton GroupName="WriteMode" Grid.Column="0" Grid.Row="0" IsChecked="{Binding Path=OverWrite}"  Name="CheckBoxOverwriteMode" FlowDirection="RightToLeft" Content="Overwrite"></RadioButton>
            <RadioButton GroupName="WriteMode" Grid.Column="1" Grid.Row="0" IsChecked="{Binding Path=Update}"  Name="CheckBoxAddMode" FlowDirection="RightToLeft" Content="Add"></RadioButton>
            <RadioButton GroupName="WriteMode" Grid.Column="2" Grid.Row="0" IsChecked="{Binding Path=Add}"  Name="CheckBoxUpdateMode" FlowDirection="RightToLeft" Content="Update"></RadioButton>
		</Grid>

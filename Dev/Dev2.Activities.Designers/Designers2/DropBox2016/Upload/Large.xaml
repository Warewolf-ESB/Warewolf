<core:ActivityDesignerTemplate x:Class="Dev2.Activities.Designers2.DropBox2016.Upload.Large"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core"
                               xmlns:upload="clr-namespace:Dev2.Activities.Designers2.DropBox2016.Upload"
                               xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
                               xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:help="clr-namespace:Dev2.Activities.Designers2.Core.Help"
                               xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
                               Width="340"
                               MinWidth="340"
                               MinHeight="260"
                               mc:Ignorable="d"
                               d:DesignWidth="340"  
                               d:DataContext="{d:DesignInstance upload:DropBoxUploadViewModel}">

    <core:ActivityDesignerTemplate.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:ActivityDesignerTemplate.Resources>
    <core:ActivityDesignerTemplate.RightButtons>
        <core:ActivityDesignerButton x:Name="DoneButton"
									 Content="Done"
									 Margin="0,0,7,12"
									 IsValidatedBefore="True"
									 IsClosedAfter="True"
									 Style="{StaticResource ActivityDesignerButtonStyle}" />
    </core:ActivityDesignerTemplate.RightButtons>
    <Grid Margin="{StaticResource ElementBorder}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Source Implemantation-->
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Source" FontWeight="Normal" VerticalAlignment="Top"/>

        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="InitialComboBox"
					  Grid.Row="0"
					  Grid.Column="0"
					  Margin="{StaticResource ControlBorderRight}"
					  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
					  SelectedItem="{Binding SelectedSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					  ItemsSource="{Binding Sources}"
					  ToolTip="{x:Static help:HelpTextResources.DropboxSourceToolTip}"
					  DisplayMemberPath="ResourceName">
                <i:Interaction.Behaviors>
                    <help:HelpSetter Text="{x:Static help:HelpTextResources.DropboxSourceToolTip}" DataContext="{Binding}" />
                    <errors:ErrorsSetter Source="{Binding}"
											SourcePropertyName="SelectedSource"
											SourcePropertyValue="{Binding SelectedSource, UpdateSourceTrigger=PropertyChanged}"
											Target="{Binding}" />
                </i:Interaction.Behaviors>
               
            </ComboBox>
            <Button x:Name="SourceEditButton" 
                        Grid.Column="1"
                        Margin="{StaticResource ControlBorderRight}"
                        Content="..."
                        ToolTip=""
                        Command="{Binding Path=EditDropboxSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <help:HelpSetter Text="" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
            <Button x:Name="SourceNewButton" 
                        Grid.Column="2"
                        Content="new" 
                        Width="Auto"
                        Style="{StaticResource ButtonOrangeStyle}" 
                        ToolTip=""
                        Command="{Binding Path=NewSourceCommand, Mode=TwoWay}">
                <i:Interaction.Behaviors>
                    <help:HelpSetter Text="" DataContext="{Binding}" />
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
        <!-- Local File Implemantation-->
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Local File" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding FromPath}" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}" />

        <TextBlock Grid.Column="0" Grid.Row="2" Text="Write Mode" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}"/>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <RadioButton GroupName="WriteMode" Grid.Column="0" Grid.Row="0" IsChecked="{Binding Path=OverWriteMode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  Name="CheckBoxOverwriteMode" FlowDirection="LeftToRight" Content="Overwrite"></RadioButton>
            <RadioButton GroupName="WriteMode" Grid.Column="1" Grid.Row="0" IsChecked="{Binding Path=UpdateMode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  Name="CheckBoxAddMode" FlowDirection="LeftToRight" Content="AddMode"></RadioButton>
            <RadioButton GroupName="WriteMode" Grid.Column="2" Grid.Row="0" IsChecked="{Binding Path=AddMode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  Name="CheckBoxUpdateMode" FlowDirection="LeftToRight" Content="UpdateMode"></RadioButton>
        </Grid>

        <!--DropBox File Location-->
        <TextBlock Grid.Column="0" Grid.Row="4" Text="Dropbox File" FontWeight="Normal" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding ToPath}" FontWeight="Normal" VerticalAlignment="Top" />
       

        <!--Result Section-->
        <TextBlock Grid.Column="0" Grid.Row="5" Text="Result" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}"/>
        <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding ToPath}" FontWeight="Normal" VerticalAlignment="Top" Margin="{StaticResource ControlBorderTop}" />
       
        <errors:OnError Grid.Column="0"
						Grid.Row="6"
                        Margin="{StaticResource ControlBorderTop}"
						Grid.ColumnSpan="2" />

    </Grid>
</core:ActivityDesignerTemplate>

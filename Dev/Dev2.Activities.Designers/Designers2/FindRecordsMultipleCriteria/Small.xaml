<core:ActivityDesignerTemplate x:Class="Dev2.Activities.Designers2.FindRecordsMultipleCriteria.Small"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:activities="clr-namespace:Unlimited.Applications.BusinessDesignStudio.Activities;assembly=Dev2.Activities"
                               xmlns:controls="clr-namespace:Dev2.Activities.Designers2.Core.Controls"
                               xmlns:converters="clr-namespace:Dev2.CustomControls.Converters;assembly=Dev2.CustomControls"
                               xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core"
                               xmlns:core1="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:errors="clr-namespace:Dev2.Activities.Designers2.Core.Errors"
                               xmlns:help="clr-namespace:Dev2.Activities.Designers2.Core.Help"
                               xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                               xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
                               xmlns:local="clr-namespace:Dev2.Activities.Designers2.FindRecordsMultipleCriteria"
                               xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
                               Width="290"
                               MaxWidth="290"
                               d:DataContext="{d:DesignInstance local:FindRecordsMultipleCriteriaDesignerViewModel}"
                               d:DesignWidth="230"
                               mc:Ignorable="d">

    <core:ActivityDesignerTemplate.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </core:ActivityDesignerTemplate.Resources>

    <Grid Margin="{StaticResource ElementBorder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="In Field(s)" />
        <ui:IntellisenseTextBox x:Name="InitialFocusElement"
                                Grid.Row="0"
                                Grid.Column="1"
                                MaxHeight="52"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                AllowMultilinePaste="True"
                                AllowUserInsertLine="True"
                                AutomationProperties.AutomationId="{Binding ModelItem.AutomationID,
                                                                            StringFormat=UI_{0}_FieldsToSearch_AutoID}"
                                DefaultText="[[Recordset().Field]]"
                                FilterType="RecordsetFields"
                                IsUndoEnabled="True"
                                Style="{StaticResource ActivityIntellisenseTextBoxStyle}"
                                Text="{Binding Path=ModelItem.FieldsToSearch,
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                ToolTip="{x:Static help:HelpTextResources.FindToolTipInFields}"
                                VerticalScrollBarVisibility="Auto">
            <i:Interaction.Behaviors>
                <core1:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.FindHelpInFields}" />
                <errors:ErrorsSetter Source="{Binding}"
                                     SourcePropertyName="FieldsToSearch"
                                     SourcePropertyValue="{Binding ModelItem.FieldsToSearch,
                                                                   UpdateSourceTrigger=PropertyChanged}"
                                     Target="{Binding}" />
            </i:Interaction.Behaviors>
        </ui:IntellisenseTextBox>

        <controls:Dev2DataGrid x:Name="SmallDataGrid"
                               Grid.Row="1"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               MinHeight="56"
                               Margin="{StaticResource ControlBorderTop}"
                               ItemsSource="{Binding ModelItem.ResultsCollection,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource SpacedActivityDataGridStyle}">

            <!--  DO NOT override ItemsPanel - doing so causes column sizing issues on first drop  -->
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="25"
                                        d:DataContext="{d:DesignInstance Type=activities:FindRecordsTO}"
                                        IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ModelItem, NotifyOnTargetUpdated=True, Converter={converters:RowToIndexConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" d:DataContext="{d:DesignInstance Type=activities:FindRecordsTO}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Margin="0,0,1,1"
                                      ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                                      ItemsSource="{Binding DataContext.WhereOptions,
                                                            RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}"
                                      SelectedValue="{Binding SearchType,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged,
                                                              NotifyOnSourceUpdated=True}"
                                      ToolTip="{x:Static help:HelpTextResources.FindToolTipLookForMatchType}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SourceUpdated">
                                        <i:InvokeCommandAction Command="{Binding DataContext.SearchTypeUpdatedCommand, RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" CommandParameter="{Binding SelectedIndex, RelativeSource={RelativeSource AncestorType=controls:Dev2DataGrid}}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <i:Interaction.Behaviors>
                                    <core1:HelpSetter DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" Text="{x:Static languages:Core.FindHelpLookForMatchType}" />
                                    <errors:ErrorsSetter Source="{Binding}"
                                                         SourcePropertyName="SearchType"
                                                         SourcePropertyValue="{Binding SearchType,
                                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                         Target="{Binding DataContext,
                                                                          RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" />
                                </i:Interaction.Behaviors>
                                <AutomationProperties.AutomationId>
                                    <MultiBinding StringFormat="UI_{0}_Row{1}_SearchType_AutoID">
                                        <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core:ActivityDesignerTemplate}" />
                                        <Binding Path="IndexNumber" />
                                    </MultiBinding>
                                </AutomationProperties.AutomationId>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" d:DataContext="{d:DesignInstance Type=activities:FindRecordsTO}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <ui:IntellisenseTextBox Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        MaxHeight="52"
                                                        Margin="0,0,1,1"
                                                        AcceptsReturn="True"
                                                        AllowMultilinePaste="True"
                                                        AllowUserCalculateMode="False"
                                                        AllowUserInsertLine="True"
                                                        DefaultText="Match"
                                                        FilterType="All"
                                                        IsEnabled="{Binding IsSearchCriteriaEnabled,
                                                                            UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="3"
                                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                        Style="{StaticResource DatagridIntellisenseTextBoxStyle}"
                                                        Text="{Binding SearchCriteria,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextWrapping="Wrap"
                                                        ToolTip="{x:Static help:HelpTextResources.FindToolTipMatch}"
                                                        VerticalScrollBarVisibility="Hidden"
                                                        Visibility="{Binding IsSearchCriteriaVisible,
                                                                             Converter={StaticResource BoolToVisibilityConverter},
                                                                             UpdateSourceTrigger=PropertyChanged}">
                                    <i:Interaction.Behaviors>
                                        <core1:HelpSetter DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" Text="{x:Static languages:Core.FindHelpMatch}" />
                                        <errors:ErrorsSetter Source="{Binding}"
                                                             SourcePropertyName="SearchCriteria"
                                                             SourcePropertyValue="{Binding SearchCriteria,
                                                                                           UpdateSourceTrigger=PropertyChanged}"
                                                             Target="{Binding DataContext,
                                                                              RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_Row{1}_SearchCriteria_AutoID">
                                            <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core:ActivityDesignerTemplate}" />
                                            <Binding Path="IndexNumber" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </ui:IntellisenseTextBox>

                                <ui:IntellisenseTextBox Grid.Column="0"
                                                        MaxHeight="52"
                                                        Margin="0,0,1,1"
                                                        AcceptsReturn="False"
                                                        AllowUserCalculateMode="False"
                                                        DefaultText="From"
                                                        FilterType="All"
                                                        Padding="3"
                                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                        Style="{StaticResource DatagridIntellisenseTextBoxStyle}"
                                                        Text="{Binding From,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextWrapping="NoWrap"
                                                        ToolTip="{x:Static help:HelpTextResources.FindToolTipFrom}"
                                                        VerticalScrollBarVisibility="Hidden"
                                                        Visibility="{Binding IsSearchCriteriaVisible,
                                                                             Converter={StaticResource BoolToVisibilityConverterInverse},
                                                                             UpdateSourceTrigger=PropertyChanged}">
                                    <i:Interaction.Behaviors>
                                        <core1:HelpSetter DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" Text="{x:Static languages:Core.FindHelpFrom}" />
                                        <errors:ErrorsSetter Source="{Binding}"
                                                             SourcePropertyName="From"
                                                             SourcePropertyValue="{Binding From,
                                                                                           UpdateSourceTrigger=PropertyChanged}"
                                                             Target="{Binding DataContext,
                                                                              RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_Row{1}_From_AutoID">
                                            <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core:ActivityDesignerTemplate}" />
                                            <Binding Path="IndexNumber" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </ui:IntellisenseTextBox>

                                <ui:IntellisenseTextBox Grid.Column="1"
                                                        MaxHeight="52"
                                                        Margin="0,0,1,1"
                                                        AcceptsReturn="False"
                                                        AllowUserCalculateMode="False"
                                                        DefaultText="To"
                                                        FilterType="All"
                                                        Padding="3"
                                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                        Style="{StaticResource DatagridIntellisenseTextBoxStyle}"
                                                        Text="{Binding To,
                                                                       Mode=TwoWay,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextWrapping="NoWrap"
                                                        ToolTip="{x:Static help:HelpTextResources.FindToolTipTo}"
                                                        VerticalScrollBarVisibility="Hidden"
                                                        Visibility="{Binding IsSearchCriteriaVisible,
                                                                             Converter={StaticResource BoolToVisibilityConverterInverse},
                                                                             UpdateSourceTrigger=PropertyChanged}">
                                    <i:Interaction.Behaviors>
                                        <core1:HelpSetter DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" Text="{x:Static languages:Core.FindHelpTo}" />
                                        <errors:ErrorsSetter Source="{Binding}"
                                                             SourcePropertyName="To"
                                                             SourcePropertyValue="{Binding To,
                                                                                           UpdateSourceTrigger=PropertyChanged}"
                                                             Target="{Binding DataContext,
                                                                              RelativeSource={RelativeSource AncestorType=core:ActivityDesignerTemplate}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_Row{1}_To_AutoID">
                                            <Binding Path="DataContext.ModelItem.AutomationID" RelativeSource="{RelativeSource AncestorType=core:ActivityDesignerTemplate}" />
                                            <Binding Path="IndexNumber" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </ui:IntellisenseTextBox>
                            </Grid>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </controls:Dev2DataGrid>

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Margin="{StaticResource ControlBorderTop}"
                   Text="Result" />
        <ui:IntellisenseTextBox Grid.Row="2"
                                Grid.Column="1"
                                Margin="{StaticResource ControlBorderTop}"
                                AutomationProperties.AutomationId="{Binding ModelItem.AutomationID,
                                                                            StringFormat=UI_{0}_Result_AutoID}"
                                DefaultText="[[RowWithResult]]"
                                Style="{StaticResource ActivityIntellisenseTextBoxStyle}"
                                Text="{Binding ModelItem.Result,
                                               Mode=TwoWay,
                                               UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="{x:Static help:HelpTextResources.FindToolTipResult}"
                                WrapInBrackets="True">
            <i:Interaction.Behaviors>
                <core1:HelpSetter DataContext="{Binding}" Text="{x:Static languages:Core.FindHelpResult}" />
                <errors:ErrorsSetter Source="{Binding}"
                                     SourcePropertyName="Result"
                                     SourcePropertyValue="{Binding ModelItem.Result,
                                                                   UpdateSourceTrigger=PropertyChanged}"
                                     Target="{Binding}" />
            </i:Interaction.Behaviors>
        </ui:IntellisenseTextBox>
    </Grid>
</core:ActivityDesignerTemplate>

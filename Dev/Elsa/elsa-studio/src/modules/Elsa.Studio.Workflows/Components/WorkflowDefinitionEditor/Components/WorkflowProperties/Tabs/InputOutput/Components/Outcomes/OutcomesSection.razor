@using Variant = MudBlazor.Variant
@if (WorkflowDefinition != null!)
{
    <MudText Typo="Typo.overline">Outcomes</MudText>
    <MudChipField
        @ref="_chipField"
        T="string"
        Label="Outcomes"
        Lines="1"
        WrapChips="true"
        Margin="Margin.Dense"
        Values="Outcomes"
        Variant="Variant.Outlined"
        HelperText="Enter a list of possible outcomes for this workflow."
        Immediate="true"
        AutoSize="true"
        ForceShrink="true"
        ChipColor="Color.Primary"
        ChipSize="Size.Medium"
        ChipVariant="Variant.Filled"
        Placeholder="Add outcomes"
        InputMode="InputMode.text"
        InputType="InputType.Text"
        OnKeyDown="@OnKeyDown"
        ValuesChanged="@OnValuesChanges"/>
}
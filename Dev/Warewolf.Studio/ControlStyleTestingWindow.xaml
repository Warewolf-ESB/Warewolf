<Window x:Class="Warewolf.Studio.ControlStyleTestingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="ControlStyleTestingWindow" Height="500" Width="300">
    <WrapPanel Orientation="Vertical">
       
        <CheckBox></CheckBox>
        <ComboBox></ComboBox>
        <RadioButton></RadioButton>
        <TextBlock></TextBlock>
        <Label></Label>
        <Button>
            <fa:FontAwesome TextOptions.TextFormattingMode="Display" FontSize="18" Icon="Link" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
        <Button Style="{StaticResource RoundedButtonStyle}">
            <fa:FontAwesome TextOptions.TextFormattingMode="Display" FontSize="18" Icon="Link" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
        <Button Style="{StaticResource PopupButtonStyle}" Width="150">
            <StackPanel Background="Transparent" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <fa:FontAwesome Icon="LightningBolt" VerticalAlignment="Center" HorizontalAlignment="Center"></fa:FontAwesome>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Ask An Expert</TextBlock></StackPanel>
        </Button>
        <Button Style="{StaticResource PopupRoundedCornerButtonStyle}" Width="150">
            <StackPanel Background="Transparent" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <fa:FontAwesome Icon="LightningBolt" VerticalAlignment="Center" HorizontalAlignment="Center"></fa:FontAwesome>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Ask An Expert</TextBlock></StackPanel>
        </Button>  
        <TextBox Style="{StaticResource SearchTextboxStyle}"></TextBox>
        <TextBox Style="{StaticResource VariableListTextBox}"></TextBox>
        <TextBox ToolTip="Bob the builder">ToolTip</TextBox>
        <TextBox>
            <TextBox.ToolTip>
                <ToolTip Style="{StaticResource ToolTipStyleValidationStyle}"> Bad Bob the builder</ToolTip>
            </TextBox.ToolTip> Validation tool tip</TextBox>
        <DataGrid Width="400" Name="BobDataGrid" GridLinesVisibility="None" AutoGenerateColumns="False"    ItemsSource="{Binding}" >

        <DataGrid.Columns>
            <DataGridCheckBoxColumn Header="Is Load Shedded" Binding="{Binding IsLoadShedded}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridHyperlinkColumn Header="Site" Binding="{Binding Site}"></DataGridHyperlinkColumn>
        </DataGrid.Columns>
        </DataGrid>
    </WrapPanel>
</Window>

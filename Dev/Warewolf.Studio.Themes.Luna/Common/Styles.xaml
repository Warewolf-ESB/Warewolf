                    Background="{StaticResource ValidationToolTipTemplateShadowBrush}"
                    CornerRadius="3"
                    Opacity="0.15" />
            <Border Margin="1,1,-1,-1"
                    Background="{StaticResource ValidationToolTipTemplateShadowBrush}"
                    CornerRadius="2"
                    Opacity="0.21" />
            <Border Background="{StaticResource ValidationErrorElement}" CornerRadius="2" />

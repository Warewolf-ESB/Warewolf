<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <!--  *********************************  RESOURCES  *********************************  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Common/Colors.xaml" />
        <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Common/Brushes.xaml" />        
    </ResourceDictionary.MergedDictionaries>

    <!--  *********************************  FONTS   *********************************  -->


    <FontFamily x:Key="DefaultFontFamily">Source Sans Pro</FontFamily>
    <FontFamily x:Key="IconFont">FontAwesome</FontFamily>
    <FontWeight x:Key="DefaultFontWeight">Normal</FontWeight>
    
    <system:Double x:Key="FontSize-Smallest">8</system:Double>
    <system:Double x:Key="FontSize-Toolbox">9</system:Double>
    <system:Double x:Key="FontSize-Smaller">10</system:Double>
    <system:Double x:Key="FontSize-Normal">12</system:Double>
    <system:Double x:Key="FontSize-Large">16</system:Double>
    <system:Double x:Key="FontSize-Larger">17</system:Double>
    <system:Double x:Key="ExplorerFontSize">14</system:Double>
    <system:Double x:Key="DefaultElementBorderValue">5</system:Double>
    <system:Double x:Key="DefaultContainerBorderValue">5</system:Double>
    
    <Thickness x:Key="ContainerBorder">
        <Thickness.Bottom>7</Thickness.Bottom>
        <Thickness.Left>7</Thickness.Left>
        <Thickness.Right>7</Thickness.Right>
        <Thickness.Top>7</Thickness.Top>
    </Thickness>
    <Thickness x:Key="ElementBorder">
        <Thickness.Bottom>5</Thickness.Bottom>
        <Thickness.Left>5</Thickness.Left>
        <Thickness.Right>5</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>
    <Thickness x:Key="ElementBottomRightBorder">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>0</Thickness.Left>
        <Thickness.Right>7</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>
    

    <Thickness x:Key="ElementBorderLeftRight">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>5</Thickness.Left>
        <Thickness.Right>7</Thickness.Right>
        <Thickness.Top>0</Thickness.Top>
    </Thickness>

    <Thickness x:Key="ElementBorderLeftRightTop">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>7</Thickness.Left>
        <Thickness.Right>5</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>
    <Thickness x:Key="ElementBorderLeftTop">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>5</Thickness.Left>
        <Thickness.Right>0</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>
    <Thickness x:Key="ElementBorderLeftTopRight">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>5</Thickness.Left>
        <Thickness.Right>7</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>
    <Thickness x:Key="ElementBorderTop">
        <Thickness.Bottom>0</Thickness.Bottom>
        <Thickness.Left>0</Thickness.Left>
        <Thickness.Right>0</Thickness.Right>
        <Thickness.Top>5</Thickness.Top>
    </Thickness>

</ResourceDictionary>


<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  *********************************  FONTS   *********************************  -->
    <FontFamily x:Key="DefaultFontFamily">Source Sans Pro</FontFamily>
    <FontFamily x:Key="IconFont">FontAwesome</FontFamily>
    <FontWeight x:Key="DefaultFontWeight">Normal</FontWeight>

    <system:Double x:Key="FontSize-Smallest">8</system:Double>
    <system:Double x:Key="FontSize-Toolbox">9</system:Double>
    <system:Double x:Key="FontSize-Smaller">10</system:Double>
    <system:Double x:Key="FontSize-Normal">12</system:Double>
    <system:Double x:Key="FontSize-Medium">13</system:Double>
    <system:Double x:Key="FontSize-Large">16</system:Double>
    <system:Double x:Key="FontSize-Larger">17</system:Double>
    <system:Double x:Key="ExplorerFontSize">14</system:Double>
    <system:Double x:Key="DefaultElementBorderValue">5</system:Double>
    <system:Double x:Key="DefaultContainerBorderValue">5</system:Double>

    <!-- CONTAINER THICKNESS -->
    <Thickness x:Key="ContainerBorder" Left="7" Top="7" Right="7" Bottom="7"/>
    <!-- ELEMENT THICKNESS -->
    <Thickness x:Key="ElementBorder" Left="5" Top="5" Right="5" Bottom="5"/>
    <!-- LEFT -->
    <Thickness x:Key="ElementBorderLeft" Left="5" Top="0" Right="0" Bottom="0"/>
    <Thickness x:Key="ControlBorderLeft" Left="3" Top="0" Right="0" Bottom="0"/>
    <!-- TOP -->
    <Thickness x:Key="ElementBorderTop" Left="0" Top="5" Right="0" Bottom="0"/>
    <Thickness x:Key="ControlBorderTop" Left="0" Top="3" Right="0" Bottom="0"/>
    <!-- RIGHT -->
    <Thickness x:Key="ElementBorderRight" Left="0" Top="0" Right="5" Bottom="0"/>
    <Thickness x:Key="ControlBorderRight" Left="0" Top="0" Right="3" Bottom="0"/>
    <!-- BOTTOM -->
    <Thickness x:Key="ElementBorderBottom" Left="0" Top="0" Right="0" Bottom="5"/>
    <Thickness x:Key="ControlBorderBottom" Left="0" Top="0" Right="0" Bottom="3"/>

    <!-- OTHER THICKNESS -->
    <Thickness x:Key="ControlBorderTopRight" Left="0" Top="3" Right="3" Bottom="0"/>
    <Thickness x:Key="ControlBorderTopLeft" Left="3" Top="3" Right="0" Bottom="0"/>
    <Thickness x:Key="ControlBorderBottomRight" Left="0" Top="0" Right="3" Bottom="3"/>

    <!-- ACTIVITY THICKNESS -->
    <Thickness x:Key="ActivityBorderTop" Left="0" Top="2" Right="0" Bottom="0"/>

    <!-- COMBOBOX ITEM PADDING -->
    <Thickness x:Key="ComboBoxItemPadding" Left="6" Top="-5" Right="0" Bottom="0"/>

    <!-- GRID BOTTOM -->
    <Thickness x:Key="GridBorderBottom" Left="0" Top="0" Right="0" Bottom="8"/>

</ResourceDictionary>
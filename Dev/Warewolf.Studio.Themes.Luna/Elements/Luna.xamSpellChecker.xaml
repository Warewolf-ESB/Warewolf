                        <igPrim:DialogRootPanel x:Name="Root"
                                                IsHitTestVisible="{TemplateBinding IsEnabled}"
                                                Visibility="{Binding Visibility,
                                                                     Mode=TwoWay,
                                                                     RelativeSource={RelativeSource TemplatedParent}}">
                            <!--  Borders  -->
                            <Grid x:Name="BorderGrid">
                                <Border x:Name="Border1" BorderThickness="0" />
                                <Grid x:Name="ActiveResizeBorderGrid"
                                      Margin="0"
                                      Background="{x:Null}">
                                    <Border x:Name="ActiveResizeBorder"
                                            Background="{StaticResource DialogWindowActiveResizeBackgroundBrush}"
                                            BorderBrush="{StaticResource DialogWindowActiveResizeBorderBrush}" />
                                </Grid>
                                <Grid x:Name="NoActiveResizeBorderGrid"
                                      Margin="0"
                                      Background="{x:Null}"
                                      Visibility="Collapsed">
                                    <Border x:Name="NoActiveResizeBorder"
                                            Background="{StaticResource DialogWindowNoActiveResizeBackgroundBrush}"
                                            BorderBrush="{StaticResource DialogWindowNoActiveResizeBorderBrush}" />
                                </Grid>
                            </Grid>
                            <ContentControl x:Name="MaximizedContent"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            IsEnabled="{TemplateBinding IsEnabled}"
                                            IsTabStop="False"
                                            Visibility="Visible">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MinHeight="36" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <!--  Content  -->
                                    <Border x:Name="HeaderArea"
                                            Grid.Column="1"
                                            Margin="1,1,1,0"
                                            Background="{TemplateBinding HeaderBackground}">
                                        <Grid x:Name="WindowHeader"
                                              Margin="5,1,100,0"
                                              VerticalAlignment="Center">
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <ContentControl x:Name="SmallImage"
                                                                Grid.Column="0"
                                                                MinWidth="16"
                                                                MinHeight="16"
                                                                MaxWidth="16"
                                                                MaxHeight="16"
                                                                Margin="5,0,0,0"
                                                                VerticalAlignment="Center"
                                                                ContentTemplate="{TemplateBinding HeaderIconTemplate}"
                                                                IsTabStop="False"
                                                                Visibility="Visible" />
                                                <ContentControl x:Name="HeaderContent"
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                Content="{TemplateBinding Header}"
                                                                ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                                Foreground="{TemplateBinding HeaderForeground}"
                                                                IsTabStop="False" />
                                                <ContentControl x:Name="MinimizedHeaderContent"
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                Content="{TemplateBinding Header}"
                                                                ContentTemplate="{TemplateBinding MinimizedHeaderTemplate}"
                                                                Foreground="{TemplateBinding HeaderForeground}"
                                                                IsTabStop="False"
                                                                Visibility="Collapsed" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <Grid x:Name="ContentGrid"
                                          Grid.Row="1"
                                          Margin="2,0,2,2">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{StaticResource DialogWindowContentBorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid x:Name="Core"
                                                      Margin="{TemplateBinding Padding}"
                                                      DataContext="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                            Path=SpellChecker.CurrentBadWord}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" MinWidth="90" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                                            <TextBlock Margin="0,0,0,0"
                                                                       Style="{StaticResource TextBlockStyle}"
                                                                       Text="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                      Path=SpellChecker.DialogSettings.DialogStringResources.NotInDictionary}"
                                                                       TextWrapping="Wrap" />
                                                            <TextBlock Margin="8,0,0,0"
                                                                       Style="{StaticResource TextBlockStyle}"
                                                                       Text="{Binding Word}" />
                                                        </StackPanel>
                                                        <TextBlock Grid.Row="1"
                                                                   Margin="0,0,0,8"
                                                                   VerticalAlignment="Top"
                                                                   RenderTransformOrigin="1,1"
                                                                   Style="{StaticResource TextBlockStyle}"
                                                                   Text="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.Context}"
                                                                   TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="1" Margin="0,0,12,0">
                                                        <Border Margin="0"
                                                                Background="{StaticResource LightForegroundBrush}"
                                                                BorderBrush="{StaticResource DialogWindowContentInnerBorderBrush}"
                                                                BorderThickness="1">
                                                            <ScrollViewer Height="90" Style="{StaticResource ScrollViewerStyle}">
                                                                <TextBlock x:Name="Context"
                                                                           Margin="6,4"
                                                                           Style="{StaticResource ContentTextBlockStyle}"
                                                                           TextWrapping="Wrap" />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                                        <Button x:Name="Ignore"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.Ignore}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="Ignore" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="IgnoreAll"
                                                                Margin="0,8,0,0"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.IgnoreAll}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="IgnoreAll" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="2" Margin="0,12,12,0">
                                                        <TextBlock Margin="0,0,0,8"
                                                                   Style="{StaticResource TextBlockStyle}"
                                                                   Text="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.Suggestions}"
                                                                   TextWrapping="Wrap" />
                                                        <ListBox x:Name="Suggestions"
                                                                 Height="90"
                                                                 SelectedItem="{Binding Mode=TwoWay,
                                                                                        ElementName=ChangeTo,
                                                                                        Path=Text}"
                                                                 Style="{StaticResource ListBoxStyle}" />
                                                        <TextBlock Margin="0,12,0,8"
                                                                   Style="{StaticResource TextBlockStyle}"
                                                                   Text="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.UseThisInstead}" />
                                                        <TextBox x:Name="ChangeTo"
                                                                 Style="{StaticResource TextBoxStyle}"
                                                                 TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="2"
                                                                Grid.Column="1"
                                                                Margin="0,40,0,0">
                                                        <Button x:Name="Change"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.Change}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="Change" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="ChangeAll"
                                                                Margin="0,8,0,0"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.ChangeAll}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="ChangeAll" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="3"
                                                                Margin="0,12,12,0"
                                                                Orientation="Horizontal">
                                                        <Button x:Name="PreviousField"
                                                                MinWidth="120"
                                                                HorizontalAlignment="Stretch"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.PreviousField}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="PreviousField" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="NextField"
                                                                MinWidth="100"
                                                                Margin="8,0,0,0"
                                                                HorizontalAlignment="Stretch"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                                  Path=SpellChecker.DialogSettings.DialogStringResources.NextField}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="NextField" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                    <Button Grid.Row="3"
                                                            Grid.Column="1"
                                                            Margin="0,12,0,0"
                                                            VerticalAlignment="Top"
                                                            Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                              Path=SpellChecker.DialogSettings.DialogStringResources.Ok}"
                                                            Style="{StaticResource ButtonStyle}">
                                                        <igDW:Commanding.Command>
                                                            <igDW:XamSpellCheckerDialogCommandSource CommandType="CancelDialog" EventName="Click" />
                                                        </igDW:Commanding.Command>
                                                    </Button>
                                                </Grid>
                                                <Grid x:Name="SpellCheckCompleteGrid"
                                                      Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Visibility="Collapsed">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Margin="10,5"
                                                               HorizontalAlignment="Center"
                                                               Style="{StaticResource TextBlockStyle}"
                                                               Text="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                              Path=SpellChecker.DialogSettings.DialogStringResources.SpellCheckComplete}" />
                                                    <Button Grid.Row="1"
                                                            Width="120"
                                                            Margin="10,5"
                                                            Content="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                                              Path=SpellChecker.DialogSettings.DialogStringResources.Ok}"
                                                            Style="{StaticResource ButtonStyle}">
                                                        <igDW:Commanding.Command>
                                                            <igDW:XamSpellCheckerDialogCommandSource CommandType="CloseDialog" EventName="Click" />
                                                        </igDW:Commanding.Command>
                                                    </Button>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <!--  Header  -->
                                </Grid>
                            </ContentControl>
                            <Border x:Name="Resize"
                                    Margin="-18"
                                    BorderBrush="{StaticResource TransparentBrush}"
                                    BorderThickness="23" />
                            <!--  Buttons  -->
                            <Border Margin="0,4,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="Minimize"
                                            IsEnabled="{TemplateBinding IsEnabled}"
                                            IsTabStop="False"
                                            Padding="0"
                                            Style="{StaticResource DialogButtonStyle}">
                                        <igDW:Commanding.Command>
                                            <igDW:XamDialogWindowCommandSource CommandType="ToggleMinimize" EventName="Click" />
                                        </igDW:Commanding.Command>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Rectangle x:Name="MinimizeGlyph"
                                                       Width="14"
                                                       Height="3"
                                                       Margin="0 7 0 0"
                                                       VerticalAlignment="Bottom"
                                                       Fill="{StaticResource GlyphBackgroundBrush}" />
                                            <Grid x:Name="MinimizeRestoreGlyph" Visibility="Collapsed">
                                                <Path Width="17"
                                                      Height="12"
                                                      Data="M2.9999905,8 L2.9999905,13.189775 L11,13.189775 L11,8 z M10.936987,2.9552236 L10.936987,5.1449995 L14,5.1449995 L14,8.044776 L18.937006,8.044776 L18.937006,2.9552236 z M7.936996,0 L21.936996,0 L21.936996,10.999999 L14,10.999999 L14,16.144999 L0,16.144999 L0,5.1449995 L7.936996,5.1449995 z"
                                                      Fill="{StaticResource GlyphBackgroundBrush}"
                                                      Opacity="1"
                                                      Stretch="Fill" />
                                            </Grid>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="Maximize"
                                            IsEnabled="{TemplateBinding IsEnabled}"
                                            IsTabStop="False"
                                            Padding="0"
                                            Style="{StaticResource DialogButtonStyle}">
                                        <igDW:Commanding.Command>
                                            <igDW:XamDialogWindowCommandSource CommandType="ToggleMaximize" EventName="Click" />
                                        </igDW:Commanding.Command>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Grid x:Name="MaximizeGlyph">
                                                <Path Width="14"
                                                      Height="10"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M4.9999552,3.8333333 L4.9999552,9 L13,9 L13,3.8333333 z M1.9999549,0.83333331 L16,0.83333331 L16,12 L1.9999549,12 z"
                                                      Fill="{StaticResource GlyphBackgroundBrush}"
                                                      Stretch="Fill"
                                                      UseLayoutRounding="False" />
                                            </Grid>
                                            <Grid x:Name="RestoreGlyph" Visibility="Collapsed">
                                                <Path Width="17"
                                                      Height="12"
                                                      Data="M2.9999905,8 L2.9999905,13.189775 L11,13.189775 L11,8 z M10.936987,2.9552236 L10.936987,5.1449995 L14,5.1449995 L14,8.044776 L18.937006,8.044776 L18.937006,2.9552236 z M7.936996,0 L21.936996,0 L21.936996,10.999999 L14,10.999999 L14,16.144999 L0,16.144999 L0,5.1449995 L7.936996,5.1449995 z"
                                                      Fill="{StaticResource GlyphBackgroundBrush}"
                                                      Stretch="Fill" />
                                            </Grid>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="Close"
                                            Margin="1,0,0,0"
                                            IsEnabled="{TemplateBinding IsEnabled}"
                                            IsTabStop="False"
                                            Style="{StaticResource DialogButtonStyle}">
                                        <igDW:Commanding.Command>
                                            <igDW:XamDialogWindowCommandSource CommandType="Close" EventName="Click" />
                                        </igDW:Commanding.Command>
                                        <Path Width="12"
                                              Height="12"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Data="M8.4446707,-0.6250003 L10.625006,1.5604857 L7.1956725,4.9880161 L10.625,8.4285631 L8.5070467,10.625005 L5.0209293,7.1613607 L1.5554626,10.625 L-0.62499386,8.4862156 L2.8442898,5.0018182 L-0.625,1.5548685 L1.602536,-0.62499505 L5.0254283,2.8090899 z"
                                              Fill="{StaticResource GlyphBackgroundBrush}"
                                              Stretch="Fill" />
                                    </Button>
                                </StackPanel>
                            </Border>
                        </igPrim:DialogRootPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


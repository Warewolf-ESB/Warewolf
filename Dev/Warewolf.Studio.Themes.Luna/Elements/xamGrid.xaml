                                        <!--  Arrow indicator presenter  -->
                                        <Grid x:Name="ArrowPanel"
                                              Grid.Column="2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="Collapsed">
                                            <Path x:Name="ArrowPanelPath"

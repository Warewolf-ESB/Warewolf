                                <VisualState x:Name="NotSorted" />
                                <VisualState x:Name="Ascending">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames BeginTime="0"
                                                                       Storyboard.TargetName="SortedAscending"

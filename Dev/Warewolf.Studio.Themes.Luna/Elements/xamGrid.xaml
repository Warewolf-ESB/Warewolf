                                    <ColumnDefinition MinWidth="30" MaxWidth="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!--  LeftVerticalBackground  -->
                                <Border Grid.RowSpan="8"

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:igReporting="clr-namespace:Infragistics.Windows.Reporting"  
    xmlns:MappingPIGen1="clr-namespace:System;assembly=Mscorlib" 
	xmlns:MappingPIGen3="clr-namespace:System.Windows.Input;assembly=PresentationCore"  
    >
	<ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DocumentViewer.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ======================================================================================== -->      
    <!-- _________________________ ReportPagePresenter __________________________________________ -->
    <!-- ======================================================================================== -->
    <Style TargetType="{x:Type igReporting:ReportPagePresenter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type igReporting:ReportPagePresenter}">
                    <Border BorderBrush="{TemplateBinding Border.BorderBrush}" 
                              BorderThickness="{TemplateBinding Border.BorderThickness}" 
                              Background="{TemplateBinding Panel.Background}" 
                              SnapsToDevicePixels="True"
                              Padding="{TemplateBinding Padding}">
                        <DockPanel SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <ContentPresenter x:Name="PART_Header" ContentSource="Header" DockPanel.Dock="Top"/>
                            <ContentPresenter x:Name="PART_Footer" ContentSource="Footer" DockPanel.Dock="Bottom"/>
                            <!-- AS 4/23/09 TFS17031 Added content alignment bindings -->
                            <ContentPresenter 
                                x:Name="PART_Content" 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                ContentSource="Content" />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- ======================================================================================== -->      
    <!-- _________________________ ProgressWindow _______________________________________________ -->
    <!-- ======================================================================================== -->
    <Style TargetType="{x:Type igReporting:ReportProgressControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type igReporting:ReportProgressControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel>
                            <Button Margin="0,0,0,15" 
                                    DockPanel.Dock="Bottom"
                                    HorizontalAlignment="Center"
                                    Command="{x:Static igReporting:ReportProgressControl.CancelCommand}" 
                                    Content="{x:Static igReporting:Resources.ProgressCancelButton}" />
                            <ProgressBar x:Name="PART_ProgressBar" 
                                         DockPanel.Dock="Bottom"
                                         Margin="10,43,10,57" 
                                         Height="22" />
                            <Label x:Name="PART_Description" 
                                   Margin="10,13,10,0" 
                                   VerticalAlignment="Top" 
                                   Content="{x:Static igReporting:Resources.ProgressInitialDescription}"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

     <!-- Combo Box Brushes -->
     <SolidColorBrush x:Key="ComboBoxButtonNormalBorderBrush" Color="#FFabbad0"/>
     <LinearGradientBrush x:Key="ComboBoxButtonNormalBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
          <LinearGradientBrush.GradientStops>
               <GradientStopCollection>
                    <GradientStop Offset="0" Color="#FFe1edfa"/>
                    <GradientStop Offset="1" Color="#FFd0dfee"/>
               </GradientStopCollection>
          </LinearGradientBrush.GradientStops>
     </LinearGradientBrush>
     
     
     
     <SolidColorBrush x:Key="ComboBoxButtonHoverBorderBrush" Color="#FFeac656"/>
     <LinearGradientBrush x:Key="ComboBoxButtonHoverBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
          <LinearGradientBrush.GradientStops>
               <GradientStopCollection>
                    <GradientStop Offset="0" Color="#FFf7eab2"/>
                    <GradientStop Offset="0.40" Color="#FFf7e18c"/>
                    <GradientStop Offset="0.60" Color="#FFf7e59c"/>
                    <GradientStop Offset="0.89" Color="#FFfaf7df"/>
                    <GradientStop Offset="0.99" Color="#FFfdfded"/>
                    <GradientStop Offset="1" Color="#FFfdfded"/>
               </GradientStopCollection>
          </LinearGradientBrush.GradientStops>
     </LinearGradientBrush>
     <SolidColorBrush x:Key="ComboBoxButtonHoverHighlightBrush" Color="#A5FFFFFF"/>
     
     
     
     <LinearGradientBrush x:Key="ComboBoxButtonPressedBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
          <LinearGradientBrush.GradientStops>
               <GradientStopCollection>
                    <GradientStop Offset="0" Color="#FFfbd678"/>
                    <GradientStop Offset="0.10" Color="#FFfcda7e"/>
                    <GradientStop Offset="0.25" Color="#FFfee287"/>
                    <GradientStop Offset="1" Color="#FFfddf84"/>
               </GradientStopCollection>
          </LinearGradientBrush.GradientStops>
     </LinearGradientBrush>
     <LinearGradientBrush x:Key="ComboBoxButtonPressedBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
          <LinearGradientBrush.GradientStops>
               <GradientStopCollection>
                    <GradientStop Offset="0" Color="#FFc2762b"/>
                    <GradientStop Offset="1" Color="#FFc29e47"/>
               </GradientStopCollection>
          </LinearGradientBrush.GradientStops>
     </LinearGradientBrush>
     <SolidColorBrush x:Key="ComboBoxButtonPressedHighlightBrush" Color="#fff8d172"/>

     <SolidColorBrush x:Key="SeparatorFillBrush" Color="#FF7186A1"/>
     <SolidColorBrush x:Key="TextForegroundBrush" Color="#FF1E395B"/>
     <SolidColorBrush x:Key="EditorNormalBorderBrush" Color="#FF8BA0BC"/>
     

</ResourceDictionary>

						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsDataChanged" Value="True"/>
								<Condition Property="IsFilterRecord" Value="False"/>
							</MultiTrigger.Conditions>
							<Setter TargetName="dataChanged" Property="Visibility" Value="Visible"/>

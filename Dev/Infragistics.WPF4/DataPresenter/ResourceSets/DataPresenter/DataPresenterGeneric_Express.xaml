                    <GradientStop Offset="1" Color="#BF545454"/>
                </LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="BorderAlternateBrush" Value="#00000000"/>
		<Setter Property="BackgroundSelected">
			<Setter.Value>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">

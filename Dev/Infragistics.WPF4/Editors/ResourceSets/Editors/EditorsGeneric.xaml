                <!--SSP 10/1/09 NAS10.1 - Spin Buttons -->
                <Grid x:Name="PART_SpinButtons" DockPanel.Dock="Right" Visibility="{TemplateBinding SpinButtonVisibilityResolved}" Margin="0,1" >

    <!-- Thumb Styles -->
    <Style TargetType="ig:XamSliderThumbBase" x:Key="XamSliderThumbBase" >
        <Setter Property="Background" Value="{StaticResource BaseBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ig:XamSliderThumbBase">
                    <Grid x:Name="RootElement">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="ThumbToolTip" 
                                     ContentTemplate="{TemplateBinding ToolTipTemplate}"
                                     Visibility="{TemplateBinding ToolTipVisibility}"/>
                        </ToolTipService.ToolTip>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="OrientationStates">
                                <VisualState x:Name="Horizontal"></VisualState>

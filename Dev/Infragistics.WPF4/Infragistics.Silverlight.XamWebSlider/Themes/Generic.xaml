    <!-- Numberic Slider Style -->
    <Style TargetType="ig:XamNumericSlider" BasedOn="{StaticResource SliderBase}">
        <Setter Property="MaxValue" Value="100"></Setter>
        <Setter Property="MinValue" Value="0"></Setter>
        <Setter Property="SmallChange" Value="1"></Setter>
        <Setter Property="LargeChange" Value="10"></Setter>
        <Setter Property="TrackClickAction" Value="None"></Setter>
    </Style>
    <!-- Date Time Slider Style-->
    <Style TargetType="ig:XamDateTimeSlider" BasedOn="{StaticResource SliderBase}">
        <Setter Property="SmallChange" Value="1"></Setter>
        <Setter Property="LargeChange" Value="10"></Setter>
        <Setter Property="SmallChangeType" Value="Days"></Setter>
        <Setter Property="LargeChangeType" Value="Days"></Setter>
        <Setter Property="TrackClickAction" Value="None"></Setter>
    </Style>

    <Style TargetType="igPrim:ColorPickerDialog">
        <Setter Property="Background" Value="{StaticResource PopupBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SilverlightDarkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="igPrim:ColorPickerDialog">
                    <Grid>
                        <Popup x:Name="Popup">
                            <Border x:Name="RootElement" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="3">                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Border Background="{StaticResource DialogHeaderBackgroundBrush}" BorderBrush="{StaticResource LightBorderBrush}" BorderThickness="0,0,0,1" CornerRadius="2,2,0,0">
                                        <Grid>
                                            <Grid x:Name="HeaderElem" Background="Transparent" Grid.ColumnSpan="2">
                                                <TextBlock Text="{Binding DialogCaption, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" Margin="10,0,33,0"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <Grid Margin="{TemplateBinding Padding}" Grid.Row="1">
                                        <igPrim:AdvancedColorShadePicker SelectedColor="{Binding Path=ColorPicker.SelectedColor, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay }" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="igPrim:TransparencyBackgroundControl">

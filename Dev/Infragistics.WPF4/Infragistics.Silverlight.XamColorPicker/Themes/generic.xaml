                                                </Button.Content>
                                            </Button>
                                            <igPrim:ColorStrip x:Name="CurrentColorStrip"  igPrim:ColorStripManager.Manager="{StaticResource StripManager}" ColorPalette="{Binding CurrentPalette, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                        </Grid>
                                    </Grid>
                                    <TextBlock x:Name="DerivedColorCaption" Text="{TemplateBinding DerivedColorPalettesCaption}" Margin="0,10,0,0"/>
                                    <StackPanel Orientation="Vertical"  x:Name="DerivedPalettes"/>
                                    <TextBlock x:Name="RecentColorCaption" Text="{TemplateBinding RecentColorPaletteCaption}" Margin="0,10,0,0" />
                                    <igPrim:ColorStrip x:Name="RecentColorStrip" igPrim:ColorStripManager.Manager="{StaticResource StripManager}"  />
                                    <Border Background="{StaticResource LightBorderBrush}" BorderBrush="White" BorderThickness="0,0,0,1" Height="2" Margin="0,10"/>
                                    <Button x:Name="AdvancedEditorButton" Content="{TemplateBinding AdvancedButtonCaption}" Cursor="Hand"  IsTabStop="False" igPrimBase:XamlHelper.Focusable="False" >
                                        <ig:Commanding.Commands>
                                            <ig:CommandSourceCollection>
                                                <igCP:XamPickerCommandSource CommandType="Toggle" EventName="Click" />
                                                <igCP:XamPickerCommandSource CommandType="OpenAdvanceEditor" EventName="Click"/>
                                            </ig:CommandSourceCollection>
                                        </ig:Commanding.Commands>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- XamColorPicker END -->

    <!-- ColorStrip START-->
    <Style TargetType="igPrim:ColorStrip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="igPrim:ColorStrip">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">

										Margin="1,0,1,0"/>
						</Grid>


						<Grid
							x:Name="TabSelected"
							Height="Auto"
							Visibility="Collapsed"
							Margin="0,0,0,-1"
							VerticalAlignment="Stretch"
							Grid.ColumnSpan="2">
							<Border
								SnapsToDevicePixels="True"
								Margin="3,1,3,0"
								CornerRadius="4,3,0,0"
								x:Name="InnerBorder1"
								Background="{DynamicResource {x:Static igWindows:PrimitivesBrushKeys.TabItemIsSelectedHighlightLightFillKey}}"/>
							<Path
								Height="4"
								Width="4"
								Stretch="Fill"
								Opacity="1"

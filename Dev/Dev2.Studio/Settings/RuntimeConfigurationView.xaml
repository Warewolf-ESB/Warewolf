<UserControl x:Class="Dev2.Settings.RuntimeConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dev2="clr-namespace:Dev2.UI"
             xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
             xmlns:local="clr-namespace:Dev2.Settings"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:RuntimeConfigurationViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="3">
            <dev2:ConnectControl
                                 Width="250"
                                 LabelText="Server:"                                 
                                 NewButtonAutomationID="UI_SourceServerConnectbtn_AutoID"
                                 EditButtonAutomationID="UI_SourceServerConnectbtn_AutoID"
                                 ServerComboBoxAutomationID="UI_SourceServercbx_AutoID"
                                 Context="{Binding Context}" />
            <customControls:CircularProgressBar Height="15"
                                                Width="15"
                                                VerticalAlignment="Center"
                                                Margin="5,0,0,0"
                                                Visibility="{Binding IsWorking, Converter={StaticResource BoolToVisConverter}}"
                                                AutomationProperties.AutomationId="UI_Progress_Indicator" />
        </StackPanel>

        <ContentControl Grid.Row="1"
                        Content="{Binding RuntimeConfigurationUserControl}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="3" />
    </Grid>
</UserControl>

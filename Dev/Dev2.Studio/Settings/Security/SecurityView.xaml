                                        </AutomationProperties.AutomationId>
                                    </CheckBox>
                                    <Path Grid.ColumnSpan="2"
                                          Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                          Data="M0,0.5 L1,0.5"
                                          Stretch="Fill"
                                          Stroke="Red"
                                          StrokeThickness="1" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn CellStyle="{StaticResource ResourcePermissionsRemoveRowCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Grid.Column="1"
                                        AutomationProperties.AutomationId="UI_AddRemovebtn_AutoID"
                                        Margin="0,0,2,0"
                                        Command="{Binding RemoveRow}"
                                        ToolTip="Removes Permissions">
                                    <Image Source="{StaticResource RemoveUnusedVariable-32}"
                                           Height="15"
                                           Width="15" />
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>
        </Grid>

        <help:HelpControl Grid.Row="0"
                          Grid.Column="1"
                          VerticalAlignment="Top"
                          Width="175"
                          Visibility="{Binding IsServerHelpVisible, Mode=TwoWay, Converter={StaticResource BoolToVisibilityConverterPositive}}" />

        <help:HelpControl Grid.Row="2"
                          Grid.Column="1"
                          VerticalAlignment="Top"
                          Width="175"
                          Visibility="{Binding IsResourceHelpVisible, Mode=TwoWay, Converter={StaticResource BoolToVisibilityConverterPositive}}" />

    </Grid>

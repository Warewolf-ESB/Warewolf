<UserControl x:Class="Dev2.Settings.Security.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Dev2.Settings.Security"
             xmlns:security="clr-namespace:Dev2.Services.Security;assembly=Dev2.Infrastructure"
             xmlns:core="clr-namespace:Dev2.Activities.Designers2.Core;assembly=Dev2.Activities.Designers"
             xmlns:help="clr-namespace:Dev2.Help"
             xmlns:help1="clr-namespace:Dev2.Activities.Designers2.Core.Help;assembly=Dev2.Activities.Designers"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:SecurityViewModel}">

    <UserControl.Resources>
        <Style x:Key="PermissionsGridStyle"
               TargetType="{x:Type DataGrid}">
            <Setter Property="GridLinesVisibility"
                    Value="All" />
            <Setter Property="HorizontalGridLinesBrush"
                    Value="{StaticResource DataGridBorderBrush}" />
            <Setter Property="VerticalGridLinesBrush"
                    Value="{StaticResource DataGridBorderBrush}" />
            <Setter Property="HeadersVisibility"
                    Value="Column" />
            <Setter Property="BorderThickness"
                    Value="1,1,0,0" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource DataGridBorderBrush}" />
            <Setter Property="AutoGenerateColumns"
                    Value="False" />
            <Setter Property="CanUserAddRows"
                    Value="False" />
            <Setter Property="CanUserDeleteRows"
                    Value="False" />
            <Setter Property="CanUserReorderColumns"
                    Value="False" />
            <Setter Property="CanUserResizeColumns"
                    Value="True" />
            <Setter Property="CanUserResizeRows"
                    Value="False" />
            <Setter Property="CanUserSortColumns"
                    Value="True" />
            <Setter Property="Background"
                    Value="#C1C3C5" />
        </Style>

        <Style x:Key="PermissionsGridHeaderStyle"
               TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background"
                    Value="{StaticResource ShellBarViewBackground}" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="3,0" />
            <Setter Property="BorderThickness"
                    Value="0,0,1,1" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource DataGridBorderBrush}" />
            <Setter Property="Foreground"
                    Value="{StaticResource BrushDarkForeground}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Height"
                    Value="Auto" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Cursor"
                            Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PermissionsGridCheckBoxHeaderStyle"
               TargetType="{x:Type DataGridColumnHeader}"
               BasedOn="{StaticResource PermissionsGridHeaderStyle}">
            <Setter Property="Width"
                    Value="83" />
            <Setter Property="MinWidth"
                    Value="83" />
        </Style>

        <Style x:Key="PermissionsGridRowStyle"
               TargetType="{x:Type DataGridRow}">
            <Setter Property="AutomationProperties.AutomationId">
              <Setter.Value>
                <MultiBinding StringFormat="UI_PermissionsGrid_Row_{0}_AutoID">
                  <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                </MultiBinding>
              </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PermissionsGridRowServerStyle"
               TargetType="{x:Type DataGridRow}"
               BasedOn="{StaticResource PermissionsGridRowStyle}">
            <Style.Triggers>
                <DataTrigger Value="0">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource DataGridRowNumberConverter}">
                            <Binding />
                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="IsEnabled"
                            Value="False" />
                </DataTrigger>                
            </Style.Triggers>
            <Setter Property="AutomationProperties.AutomationId">
              <Setter.Value>
                <MultiBinding StringFormat="UI_ServerPermissionsGrid_Row_{0}_AutoID">
                  <Binding Path="Tag" RelativeSource="{RelativeSource Mode=Self}" />
                </MultiBinding>
              </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PermissionsGridCellServerStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Style.Triggers>
                <DataTrigger Value="1">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource DataGridRowNumberConverter}">
                            <Binding />
                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="IsEnabled"
                            Value="False" /> 
                </DataTrigger>            
            </Style.Triggers>
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerPermissionsColumn_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ResourceColumnCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ResourcePermissionsColumn_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ResourceWindowsGroupColumnCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ResourcePermissionsWindowsGroupColumn_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsDeployToCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerDeployToPermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsDeployFromCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerDeployFromPermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsAdministratorCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerAdministratorPermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsViewCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerViewPermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsExecuteCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerExecutePermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsContributeCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerContributePermissions_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ServerPermissionsRemoveRowCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ServerPermissionsRemoveRow_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResourcePermissionsRemoveRowCellStyle"
               TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource DefaultDataGridCellStyle}">
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_ResourcePermissionsRemoveRow_Row_{0}_Cell_AutoID">
                        <Binding Path="(DataGridRow.Tag)" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
       
        <Style x:Key="PermissionsGridTextBlockStyle"
               TargetType="{x:Type TextBlock}"
               BasedOn="{StaticResource TextBlockStyle}">
            <Setter Property="FontSize"
                    Value="{StaticResource DefaultFontSize}" />
            <Setter Property="FontWeight"
                    Value="{StaticResource DefaultFontWeight}" />
            <Setter Property="FontFamily"
                    Value="{StaticResource DefaultFontFamily}" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="3,1,3,1" />
        </Style>

        <Style x:Key="PermissionsGridTextBoxStyle"
               TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="FontSize"
                    Value="{StaticResource DefaultFontSize}" />
            <Setter Property="FontWeight"
                    Value="{StaticResource DefaultFontWeight}" />
            <Setter Property="FontFamily"
                    Value="{StaticResource DefaultFontFamily}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="AcceptsReturn"
                    Value="False" />
            <Setter Property="Width"
                    Value="Auto" />
        </Style>

        <Style x:Key="PermissionsGridCheckBoxStyle"
               TargetType="{x:Type CheckBox}"
               BasedOn="{StaticResource CheckBoxStyle}">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
        </Style>

        <Style x:Key="PermissionsGridWindowsGroupButtonStyle"
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Content"
                    Value="..." />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="Command"
                    Value="{Binding DataContext.PickWindowsGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Setter Property="CommandParameter"
                    Value="{Binding}" />
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_Security_Row{1}_PickWindowsGroupButton"
                                  Converter="{StaticResource DataGridRowNumberConverter}">
                        <Binding />
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PermissionsGridResourceButtonStyle"
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Content"
                    Value="..." />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="Command"
                    Value="{Binding DataContext.PickResourceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Setter Property="CommandParameter"
                    Value="{Binding}" />
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_Security_Row{1}_PickResourceButton"
                                  Converter="{StaticResource DataGridRowNumberConverter}">
                        <Binding />
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid Margin="-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"
                           MinHeight="150" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*"
                           MinHeight="150" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Server Permissions"
                       HorizontalAlignment="Left"
                       Margin="5,0,0,0"
                       Grid.Row="0"
                       Style="{StaticResource Dev2HeadingTextBlockStyle}" />

            <core:ActivityDesignerToggleButton x:Name="ServerHelpToggleButton"
                                               Grid.Row="0"
                                               Width="20"
                                               Height="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Bottom"
                                               Margin="0,0,0,1"
                                               ToolTip="{Binding ServerHelpToggle.ToolTip}"
                                               IsChecked="{Binding ServerHelpToggle.IsChecked, Mode=TwoWay}"
                                               Content="{Binding ServerHelpToggle.Image, Mode=TwoWay}"
                                               Style="{StaticResource ActivityToggleButtonStyle}" />

            <DataGrid Grid.Row="1"
                      x:Name="ServerPermissionsDataGrid"
                      ItemsSource="{Binding ServerPermissions}"
                      Style="{StaticResource PermissionsGridStyle}"
                      RowStyle="{StaticResource PermissionsGridRowServerStyle}"
                      Height="Auto"
                      Sorting="OnDataGridSorting"
                      LoadingRow="DataGrid_LoadingRow">
                <DataGrid.Columns>

                    <DataGridTemplateColumn Header="Windows Group"
                                            SortMemberPath="WindowsGroup"
                                            Width="*"
                                            HeaderStyle="{StaticResource PermissionsGridHeaderStyle}"                                            
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource PermissionsGridCellServerStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding WindowsGroup, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             IsEnabled="{Binding EnableCellEditing}"
                                             Style="{StaticResource PermissionsGridTextBoxStyle}"
                                             ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipWindowsGroup}">
                                        <i:Interaction.Behaviors>
                                            <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpWindowsGroup}"
                                                              DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_AddWindowsGroupTextBox_AutoID">
                                                <Binding Path="WindowsGroup"
                                                         FallbackValue="New" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </TextBox>
                                    <Button Grid.Column="1"
                                            Style="{StaticResource PermissionsGridWindowsGroupButtonStyle}"
                                            IsEnabled="{Binding EnableCellEditing}"
                                            ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipWindowsGroup}">
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_AddWindowsGroupButton_AutoID">
                                                <Binding Path="WindowsGroup"
                                                         FallbackValue="New" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </Button>
                                    <Path Grid.ColumnSpan="2"
                                          Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                          Data="M0,0.5 L1,0.5"
                                          Stretch="Fill"
                                          Stroke="Red"
                                          StrokeThickness="1" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Deploy To"
                                            SortMemberPath="DeployTo"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsDeployToCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <CheckBox IsChecked="{Binding DeployTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                              IsEnabled="{Binding EnableCellEditing}"
                                              ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipDeployTo}">
                                        <i:Interaction.Behaviors>
                                            <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpDeployTo}"
                                                              DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_DeployToPermissionCheckBox_AutoID">
                                                <Binding Path="WindowsGroup"
                                                         FallbackValue="New" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </CheckBox>
                                    <Path Grid.ColumnSpan="2"
                                              Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                              Data="M0,0.5 L1,0.5"
                                              Stretch="Fill"
                                              Stroke="Red"
                                              StrokeThickness="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Deploy From"
                                            SortMemberPath="DeployFrom"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsDeployFromCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <CheckBox IsChecked="{Binding DeployFrom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                              IsEnabled="{Binding EnableCellEditing}"
                                              ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipDeployFrom}">
                                        <i:Interaction.Behaviors>
                                            <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpDeployFrom}"
                                                              DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_DeployFromPermissionCheckBox_AutoID">
                                                <Binding Path="WindowsGroup"
                                                            FallbackValue="New" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </CheckBox>
                                <Path Grid.ColumnSpan="2"
                                              Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                              Data="M0,0.5 L1,0.5"
                                              Stretch="Fill"
                                              Stroke="Red"
                                              StrokeThickness="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Administrator"
                                            SortMemberPath="Administrator"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsAdministratorCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <CheckBox IsChecked="{Binding Administrator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                              IsEnabled="{Binding EnableCellEditing}"
                                              ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipAdministrator}">
                                        <i:Interaction.Behaviors>
                                            <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpAdministrator}"
                                                              DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:Interaction.Behaviors>
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}_AdministratorPermissionCheckBox_AutoID">
                                                <Binding Path="WindowsGroup"
                                                            FallbackValue="New" />
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                    </CheckBox>
                                <Path Grid.ColumnSpan="2"
                                              Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                              Data="M0,0.5 L1,0.5"
                                              Stretch="Fill"
                                              Stroke="Red"
                                              StrokeThickness="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="View"
                                            SortMemberPath="View"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsViewCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                <CheckBox IsChecked="{Binding View, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                          IsEnabled="{Binding EnableCellEditing}"
                                          ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipView}">
                                    <i:Interaction.Behaviors>
                                        <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpView}"
                                                          DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_ViewPermissionCheckBox_AutoID">
                                            <Binding Path="WindowsGroup"
                                                        FallbackValue="New" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </CheckBox>
                                <Path Grid.ColumnSpan="2"
                                              Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                              Data="M0,0.5 L1,0.5"
                                              Stretch="Fill"
                                              Stroke="Red"
                                              StrokeThickness="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Execute"
                                            SortMemberPath="Execute"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsExecuteCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                <CheckBox IsChecked="{Binding Execute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                          IsEnabled="{Binding EnableCellEditing}"
                                          ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipExecute}">
                                    <i:Interaction.Behaviors>
                                        <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpExecute}"
                                                          DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_ExecutePermissionCheckBox_AutoID">
                                            <Binding Path="WindowsGroup"
                                                        FallbackValue="New" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </CheckBox>
                                <Path Grid.ColumnSpan="2"
                                              Visibility="{Binding IsDeleted, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                              Data="M0,0.5 L1,0.5"
                                              Stretch="Fill"
                                              Stroke="Red"
                                              StrokeThickness="1"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Contribute"
                                            SortMemberPath="Contribute"
                                            CanUserResize="False"
                                            Width="83"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=security:WindowsGroupPermission}"
                                            CellStyle="{StaticResource ServerPermissionsContributeCellStyle}">
                        <DataGridTemplateColumn.CellTemplate>                            
                            <DataTemplate>
                                <Grid>
                                <CheckBox IsChecked="{Binding Contribute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}"
                                          IsEnabled="{Binding EnableCellEditing}"
                                          ToolTip="{x:Static help:HelpTextResources.SettingsSecurityServerToolTipContribute}">
                                    <i:Interaction.Behaviors>
                                        <help1:HelpSetter Text="{x:Static help:HelpTextResources.SettingsSecurityServerHelpContribute}"
                                                          DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </i:Interaction.Behaviors>
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_{0}_ContributePermissionCheckBox_AutoID">
                                            <Binding Path="WindowsGroup"
                                                        FallbackValue="New" />
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                </CheckBox>
                                <Path Grid.ColumnSpan="2"

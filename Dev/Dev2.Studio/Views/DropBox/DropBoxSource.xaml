<Window x:Class="Dev2.Views.DropBox.DropBoxViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
        Height="450" Width="550"
        Title="{Binding Title}"
        Icon="{StaticResource HelpAbout-32}"
        >
    <Grid>
        <customControls:CircularProgressBar x:Name="CircularProgressBar"
                                            Grid.Column="1"
                                            Height="150"
                                            Width="150"
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Visibility="Visible" />
        <ScrollViewer>
            <WebBrowser Name="WebBrowserHost"
                        Margin="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="Collapsed" />
        </ScrollViewer>
    </Grid>
</Window>

<UserControl x:Class="Dev2.Views.Merge.MergeWorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customcontrols="clr-namespace:Dev2.CustomControls"
             xmlns:customcontrols1="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:workflow="clr-namespace:Dev2.Studio.Views.Workflow"
             xmlns:datalist="clr-namespace:Dev2.Studio.Views.DataList"
             xmlns:merge="clr-namespace:Dev2.ViewModels.Merge"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance interfaces:IMergeWorkflowViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <customcontrols:ActivityTemplateSelector x:Key="ActivitySelector" />
            <customcontrols1:MergeWidthConverter x:Key="MergeWidthConverter" />
            <customcontrols1:MergeHeaderTemplateWidthConverter x:Key="MergeHeaderTemplateWidthConverter" />
            <customcontrols1:ExpanderToBooleanConverter x:Key="ExpanderToBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="{StaticResource ElementBorder}" 
          x:Name="MainGrid" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" MinWidth="486"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="40*" MinWidth="324"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Stretch" >
            <ScrollViewer x:Name="ScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Hidden" 
                          CanContentScroll="True"
                          Height="{Binding ElementName=MainGrid, Path=ActualHeight}">
                <Grid x:Name="MergeGrid" 
                      HorizontalAlignment="Stretch" 
                      Width="{Binding ElementName=ScrollViewer, Path=ActualWidth}" 
                      ScrollViewer.CanContentScroll="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" SharedSizeGroup="MergeCurrentColumnWidth"/>
                        <ColumnDefinition Width="50*" SharedSizeGroup="MergeDifferenceColumnWidth"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" BorderThickness="0,0,1,0" Background="#C1C3C5">
                        <StackPanel  Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch" DataContext="{Binding CurrentConflictViewModel}">
                            <TextBlock Margin="5" Text="{Binding WorkflowName}" Style="{StaticResource SourceHeader}" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderThickness="1,0,0,0" Background="#C1C3C5">
                        <StackPanel Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch" DataContext="{Binding DifferenceConflictViewModel}">
                            <TextBlock Margin="5" Text="{Binding WorkflowName}" Style="{StaticResource SourceHeader}" />
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"  HorizontalAlignment="Stretch" Orientation="Horizontal" Visibility="{Binding HasMergeStarted}">
                        <TextBlock Text="To start the Merge process, select a radio button below." 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding HasWorkflowNameConflict, Converter={StaticResource BoolToVisibilityConverterPositive}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="MergeCurrentColumnWidth"/>
                            <ColumnDefinition SharedSizeGroup="MergeCurrentColumnWidth"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel x:Name="MergeCurrentWorkflowDockPanel" 
                                   Grid.Column="0" 
                                   Grid.Row="1" 
                                   LastChildFill="False" 
                                   DataContext="{Binding CurrentConflictViewModel}">
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" >
                                <TextBlock Text="{Binding WorkflowName}" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" >
                                <RadioButton x:Name="VariablesCurrentRB" 
                                             IsChecked="{Binding IsWorkflowNameChecked}" 
                                             HorizontalAlignment="Right"
                                             Margin="0,0,5,0"
                                             GroupName="MergeActivities"
                                             Style="{StaticResource MergeRadioButtonStyle}">
                                </RadioButton>
                            </StackPanel>
                        </DockPanel>

                        <DockPanel x:Name="MergeDifferenceWorkflowDockPanel" 
                                   Grid.Column="1" 
                                   Grid.Row="1" 
                                   LastChildFill="False" 
                                   DataContext="{Binding DifferenceConflictViewModel}">
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <TextBlock Text="{Binding WorkflowName}" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" >
                                <RadioButton x:Name="VariablesDifferenceRB" 
                                             IsChecked="{Binding IsWorkflowNameChecked}" 
                                             HorizontalAlignment="Right"
                                             Margin="0,0,5,0"
                                             GroupName="MergeActivities"
                                             Style="{StaticResource MergeRadioButtonStyle}">
                                </RadioButton>
                            </StackPanel>
                        </DockPanel>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="{StaticResource ElementBorderTop}" Visibility="{Binding HasVariablesConflict, Converter={StaticResource BoolToVisibilityConverterPositive}}">
                        <Expander x:Name="MergeWorkflowVariables"
                                  Style="{StaticResource MergeExpander}"
                                  AutomationProperties.AutomationId="UI_MergeVariablesExpander_AutoID">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.Width>
                                            <MultiBinding Converter="{StaticResource MergeHeaderTemplateWidthConverter}">
                                                <Binding RelativeSource="{RelativeSource AncestorType={x:Type ContentPresenter}}" />
                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                            </MultiBinding>
                                        </Grid.Width>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*" />
                                            <ColumnDefinition Width="50*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" BorderBrush="#CFD6E1" BorderThickness="0,0,2,0" Margin="0,0,7,0">
                                            <DockPanel x:Name="MergeCurrentDockPanel" LastChildFill="False">
                                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                    <TextBlock Text="Variables" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                                                </StackPanel>
                                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                                    <RadioButton x:Name="VariablesCurrentRB" 
                                                                 IsChecked="{Binding IsVariablesChecked}" 
                                                                 HorizontalAlignment="Right"
                                                                 Margin="0,0,5,0"
                                                                 GroupName="MergeActivities"
                                                                 Style="{StaticResource MergeRadioButtonStyle}">
                                                    </RadioButton>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>

                                        <Border Grid.Column="1" BorderBrush="#CFD6E1" BorderThickness="0" Margin="-7,0,0,0">
                                            <DockPanel x:Name="MergeDifferenceDockPanel" LastChildFill="False">
                                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                    <RadioButton x:Name="VariablesDifferenceRB" 
                                                                 IsChecked="{Binding IsVariablesChecked}" 
                                                                 HorizontalAlignment="Left"
                                                                 GroupName="MergeActivities"
                                                                 Margin="5,0,5,0"
                                                                 Style="{StaticResource MergeRadioButtonStyle}">
                                                    </RadioButton>
                                                    <TextBlock Text="Variables" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <Grid Width="{Binding ElementName=MergeWorkflowVariables, Path=ActualWidth}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="MergeCurrentColumnWidth"/>
                                    <ColumnDefinition SharedSizeGroup="MergeDifferenceColumnWidth"/>
                                </Grid.ColumnDefinitions>
                                <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1" DataContext="{Binding CurrentConflictViewModel}">
                                    <datalist:DataListView DataContext="{Binding DataListViewModel}" 
                                                           Margin="0,-10,0,0"
                                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                           ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                                </Border>
                                <Border Grid.Column="1" BorderBrush="#CFD6E1" BorderThickness="1,0,1,1" DataContext="{Binding DifferenceConflictViewModel}">
                                    <datalist:DataListView DataContext="{Binding DataListViewModel}" 
                                                           Margin="0,-10,0,0"
                                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                           ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                                </Border>
                            </Grid>
                        </Expander>
                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                        <TreeView x:Name="MergeDifferenceDataTree"
			                      ItemsSource="{Binding Conflicts, Mode=TwoWay, IsAsync=True}"
			                      HorizontalAlignment="Stretch"
			                      Focusable="False"
			                      HorizontalContentAlignment="Stretch"
			                      Style="{StaticResource MergeTreeViewStyle}"
			                      Grid.IsSharedSizeScope="True"
			                      AutomationProperties.AutomationId="UI_MergeTreeView_AutoID"
			                      ScrollViewer.CanContentScroll="True"
			                      VirtualizingStackPanel.IsVirtualizing="True"
			                      VirtualizingStackPanel.VirtualizationMode="Recycling"
			                      VirtualizingStackPanel.ScrollUnit="Pixel"
			                      VirtualizingStackPanel.CacheLength="2,1"
			                      VirtualizingStackPanel.CacheLengthUnit="Item"
			                      VirtualizingStackPanel.IsVirtualizingWhenGrouping="True"
			                      VirtualizingStackPanel.IsContainerVirtualizable="True">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate  DataType="{x:Type merge:CompleteConflict}">
                                    <Grid Width="{Binding ElementName=MergeDifferenceDataTree, Path=ActualWidth}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*" />
                                            <ColumnDefinition Width="50*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource WarewolfPanelGreyBrush}" BorderBrush="#CFD6E1" BorderThickness="0,0,2,0" Margin="0,0,-2,0" DataContext="{Binding CurrentViewModel}">
                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Visibility="{Binding HasParent, Converter={StaticResource BoolToVisibilityConverterPositive}}">
                                                <TextBlock Margin="20,0,0,0" Text="{Binding ParentDescription}" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource WarewolfPanelGreyBrush}" BorderBrush="#CFD6E1" BorderThickness="0" Margin="2,0,0,0" DataContext="{Binding DiffViewModel}">
                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Visibility="{Binding HasParent, Converter={StaticResource BoolToVisibilityConverterPositive}}">
                                                <TextBlock Margin="30,0,0,0" Text="{Binding ParentDescription}" FontWeight="Bold" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                        </Border>

                                        <Expander Name="MergeExpander"
                                                  Grid.Row="1"
                                                  Grid.Column="0"
                                                  Grid.ColumnSpan="2"
							                      Visibility="{Binding IsMergeExpanderEnabled, Converter={StaticResource BoolToVisibilityConverterPositive}}"
							                      Header="{Binding .}"                                                  
							                      IsExpanded="{Binding IsExpanded, Mode=TwoWay, Converter={StaticResource ExpanderToBooleanConverter}, ConverterParameter=1}"
							                      Style="{StaticResource MergeExpander}"
							                      AutomationProperties.AutomationId="{Binding StringFormat=UI_MergeExpander_{0}_AutoID, Path=MergeDescription}">
                                            <Expander.HeaderTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="50*" />
                                                            <ColumnDefinition Width="50*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0" BorderBrush="#CFD6E1" BorderThickness="0,0,2,0" Margin="0,0,7,0">
                                                            <DockPanel Name="MergeCurrentDockPanel" LastChildFill="False" DataContext="{Binding CurrentViewModel}">
                                                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                                    <Image Source="{Binding MergeIcon}" Margin="5,0,3,0" Height="16" Width="16"/>
                                                                    <TextBlock Text="{Binding MergeDescription}"
												                               ToolTip="{Binding MergeDescription}"
												                               TextTrimming="CharacterEllipsis"
												                               FontWeight="Bold"
												                               HorizontalAlignment="Stretch"/>
                                                                </StackPanel>
                                                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                                                    <RadioButton Name="MergeCurrentRB" 
                                                                                 IsChecked="{Binding IsMergeChecked}" 
                                                                                 HorizontalAlignment="Right"
                                                                                 Margin="0,0,5,0"
                                                                                 GroupName="MergeActivities"
                                                                                 Style="{StaticResource MergeRadioButtonStyle}">
                                                                    </RadioButton>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </Border>
                                                        <Border Grid.Column="1" BorderBrush="#CFD6E1" BorderThickness="0" Margin="-7,0,0,0">
                                                            <DockPanel Name="MergeDifferenceDockPanel" LastChildFill="False" DataContext="{Binding DiffViewModel}">
                                                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                                    <RadioButton Name="MergeDifferenceRB" 
                                                                             IsChecked="{Binding IsMergeChecked}" 
                                                                             HorizontalAlignment="Left"
                                                                                 Margin="5,0,5,0"
                                                                             GroupName="MergeActivities"
                                                                             Style="{StaticResource MergeRadioButtonStyle}">
                                                                    </RadioButton>
                                                                    <Image Source="{Binding MergeIcon}" Margin="5,0,3,0" Height="16" Width="16"/>
                                                                    <TextBlock Text="{Binding MergeDescription}"
												                           ToolTip="{Binding MergeDescription}"
												                           TextTrimming="CharacterEllipsis"
												                           FontWeight="Bold"
												                           HorizontalAlignment="Stretch"/>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </Expander.HeaderTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50*" />
                                                        <ColumnDefinition Width="50*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1" >
                                                        <Grid Name="MergeCurrentGrid">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <ContentPresenter Name="MergeCurrentContentPresenter" 
                                                                              Content="{Binding CurrentViewModel}"
												                              ContentTemplateSelector="{StaticResource ActivitySelector}"
												                              ScrollViewer.VerticalScrollBarVisibility="Auto"
												                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                                <ContentPresenter.Width>
                                                                    <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                    </MultiBinding>
                                                                </ContentPresenter.Width>
                                                            </ContentPresenter>
                                                        </Grid>
                                                    </Border>
                                                    <Border Grid.Column="1" BorderBrush="#CFD6E1" BorderThickness="1,0,1,1" >
                                                        <Grid Name="MergeDifferenceGrid" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <ContentPresenter Grid.Row="1"
												                          Name="MergeDifferenceContentPresenter" 
                                                                          Content="{Binding DiffViewModel}"
												                          ContentTemplateSelector="{StaticResource ActivitySelector}"
												                          ScrollViewer.VerticalScrollBarVisibility="Auto"
												                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                                <ContentPresenter.Width>
                                                                    <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                    </MultiBinding>
                                                                </ContentPresenter.Width>
                                                            </ContentPresenter>
                                                        </Grid>
                                                    </Border>
                                                </Grid>

                                                <TreeView Name="MergeDifferenceDee"
                                                          Grid.Row="1"
                                                          ItemsSource="{Binding Children, Mode=TwoWay, IsAsync=True}"
                                                          HorizontalAlignment="Stretch"
                                                          Focusable="False"
                                                          HorizontalContentAlignment="Stretch"
                                                          Style="{StaticResource MergeTreeViewStyle}"
                                                          Grid.IsSharedSizeScope="True"
                                                          Margin="10,0,0,0"
                                                          AutomationProperties.AutomationId="UI_MergeTreeView_AutoID"
                                                          ScrollViewer.CanContentScroll="True"
                                                          VirtualizingStackPanel.IsVirtualizing="True"
                                                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                          VirtualizingStackPanel.ScrollUnit="Pixel"
                                                          VirtualizingStackPanel.CacheLength="2,1"
                                                          VirtualizingStackPanel.CacheLengthUnit="Item"
                                                          VirtualizingStackPanel.IsVirtualizingWhenGrouping="True"
                                                          VirtualizingStackPanel.IsContainerVirtualizable="True">
                                                </TreeView>
                                            </Grid>

                                        </Expander>
                                    </Grid>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
        <GridSplitter Grid.Column="1"
                      Background="#C1C3C5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Width="5" />
        <Grid Grid.Column="2" x:Name="WorkflowGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch">
                <TextBlock Margin="5" Text="Merge" Style="{StaticResource SourceHeader}" />
                <Button Command="{Binding AddAnItem}">Add Something</Button>
            </StackPanel>
            <Grid Grid.Row="1">
                <workflow:WorkflowDesignerView DataContext="{Binding WorkflowDesignerViewModel}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

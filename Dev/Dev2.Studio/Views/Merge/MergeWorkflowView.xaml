<UserControl x:Class="Dev2.Views.Merge.MergeWorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customcontrols="clr-namespace:Dev2.CustomControls"
             xmlns:customcontrols1="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:workflow="clr-namespace:Dev2.Studio.Views.Workflow"
             xmlns:datalist="clr-namespace:Dev2.Studio.Views.DataList"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance interfaces:IMergeWorkflowViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <customcontrols:ActivityTemplateSelector x:Key="ActivitySelector" />
            <customcontrols1:MergeWidthConverter x:Key="MergeWidthConverter" />
            <customcontrols1:MergeHeaderTemplateWidthConverter x:Key="MergeHeaderTemplateWidthConverter" />
            <customcontrols1:ExpanderToBooleanConverter x:Key="ExpanderToBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="{StaticResource ElementBorder}" 
          x:Name="MainGrid" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" MinWidth="486"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="40*" MinWidth="324"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MergeGrid" Grid.Column="0" HorizontalAlignment="Stretch" >
            <ScrollViewer x:Name="ScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Hidden" 
                          CanContentScroll="True"
                          Height="{Binding ElementName=MainGrid, Path=ActualHeight}">
                <Grid HorizontalAlignment="Stretch" ScrollViewer.CanContentScroll="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch">
                        <TextBlock Margin="5" Text="Current" Style="{StaticResource SourceHeader}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch">
                        <TextBlock Margin="5" Text="Difference" Style="{StaticResource SourceHeader}" />
                    </StackPanel>
                    <Grid Grid.Row="1" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2" 
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" x:Name="MergeCurrentGeneral" DataContext="{Binding CurrentConflictViewModel}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="MergeCurrentWorkflowName" Text="{Binding WorkflowName}" />

                            <Expander x:Name="MergeCurrentWorkflowVariables"
                                      Grid.Row="1"
                                      Style="{StaticResource MergeExpander}"
                                      AutomationProperties.AutomationId="UI_MergeCurrentVariablesExpander_AutoID">
                                <Expander.HeaderTemplate>
                                    <DataTemplate>
                                        <DockPanel Grid.Column="1" x:Name="MergeDifferenceDockPanel" LastChildFill="False" >
                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                <RadioButton x:Name="VariablesCurrentRB" 
                                                             IsChecked="{Binding IsVariablesChecked}" 
                                                             GroupName="MergeActivities"
                                                             Style="{StaticResource MergeRadioButtonStyle}">
                                                </RadioButton>
                                                <TextBlock Text="Variables" FontWeight="Bold" HorizontalAlignment="Stretch">
                                                    <TextBlock.Width>
                                                        <MultiBinding Converter="{StaticResource MergeHeaderTemplateWidthConverter}">
                                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                        </MultiBinding>
                                                    </TextBlock.Width>
                                                </TextBlock>
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </Expander.HeaderTemplate>
                                <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1">
                                    <datalist:DataListView DataContext="{Binding DataListViewModel}" 
                                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                           ScrollViewer.HorizontalScrollBarVisibility="Auto">

                                    </datalist:DataListView>
                                </Border>
                            </Expander>

                            <TreeView x:Name="MergeCurrentDataTree"
                                      Grid.Row="2"
                                      ItemsSource="{Binding MergeConflicts, Mode=TwoWay, IsAsync=True}"
                                      HorizontalAlignment="Stretch"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch"
                                      Style="{StaticResource MergeTreeViewStyle}"
                                      Grid.IsSharedSizeScope="True"
                                      AutomationProperties.AutomationId="UI_MergeTreeView_AutoID"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel"
                                      VirtualizingStackPanel.CacheLength="2,1"
                                      VirtualizingStackPanel.CacheLengthUnit="Item"
                                      VirtualizingStackPanel.IsVirtualizingWhenGrouping="True"
                                      VirtualizingStackPanel.IsContainerVirtualizable="True">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate DataType="{x:Type interfaces:IMergeToolModel}" ItemsSource="{Binding Path=Children, IsAsync=True}">
                                        <Grid>
                                            <Grid.Width>
                                                <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type TreeViewItem}}" />
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type TreeView}}" />
                                                </MultiBinding>
                                            </Grid.Width>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Expander x:Name="MergeCurrentExpander"
                                                      Visibility="{Binding IsMergeExpanderEnabled, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                                      Header="{Binding .}"
                                                      IsExpanded="{Binding IsExpanded, Mode=TwoWay, Converter={StaticResource ExpanderToBooleanConverter}, ConverterParameter=1}"
                                                      Style="{StaticResource MergeExpander}"
                                                      AutomationProperties.AutomationId="{Binding StringFormat=UI_MergeCurrentExpander_{0}_AutoID, Path=MergeCurrentDescription}">
                                                <Expander.HeaderTemplate>
                                                    <DataTemplate>
                                                        <DockPanel Grid.Column="0" x:Name="MergeCurrentDockPanel" LastChildFill="False" >
                                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                                <RadioButton x:Name="MergeCurrentRB" 
                                                                             IsChecked="{Binding IsMergeChecked}" 
                                                                             GroupName="MergeActivities"
                                                                             Style="{StaticResource MergeRadioButtonStyle}">
                                                                </RadioButton>
                                                                <Image Source="{Binding MergeIcon}" Margin="5,0,3,0" Height="16" Width="16"/>
                                                                <TextBlock Text="{Binding MergeDescription}"
                                                                           ToolTip="{Binding MergeDescription}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           FontWeight="Bold"
                                                                           HorizontalAlignment="Stretch">
                                                                    <TextBlock.Width>
                                                                        <MultiBinding Converter="{StaticResource MergeHeaderTemplateWidthConverter}">
                                                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                                        </MultiBinding>
                                                                    </TextBlock.Width>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </Expander.HeaderTemplate>
                                                <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1">
                                                    <Grid x:Name="MergeCurrentGrid">
                                                        <ContentPresenter Grid.Column="1" 
                                                                          x:Name="MergeCurrentContentPresenter" 
                                                                          ContentTemplateSelector="{StaticResource ActivitySelector}"
                                                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                            <ContentPresenter.Width>
                                                                <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                </MultiBinding>
                                                            </ContentPresenter.Width>
                                                        </ContentPresenter>
                                                    </Grid>
                                                </Border>
                                            </Expander>
                                        </Grid>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                        <Grid Grid.Column="1" x:Name="MergeDifferenceGeneral" DataContext="{Binding DifferenceConflictViewModel}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="MergeDifferenceWorkflowName" Text="{Binding WorkflowName}" />

                            <Expander x:Name="MergeDifferenceWorkflowVariables"
                                      Grid.Row="1"
                                      Style="{StaticResource MergeExpander}"
                                      AutomationProperties.AutomationId="UI_MergeDifferenceVariablesExpander_AutoID">
                                <Expander.HeaderTemplate>
                                    <DataTemplate>
                                        <DockPanel Grid.Column="1" x:Name="MergeDifferenceDockPanel" LastChildFill="False" >
                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                <RadioButton x:Name="VariablesDifferenceRB" 
                                                         IsChecked="{Binding IsVariablesChecked}" 
                                                         GroupName="MergeActivities"
                                                         Style="{StaticResource MergeRadioButtonStyle}">
                                                </RadioButton>
                                                <TextBlock Text="Variables" FontWeight="Bold" HorizontalAlignment="Stretch">
                                                    <TextBlock.Width>
                                                        <MultiBinding Converter="{StaticResource MergeHeaderTemplateWidthConverter}">
                                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                        </MultiBinding>
                                                    </TextBlock.Width>
                                                </TextBlock>
                                            </StackPanel>
                                        </DockPanel>
                                    </DataTemplate>
                                </Expander.HeaderTemplate>
                                <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1">
                                    <datalist:DataListView DataContext="{Binding DataListViewModel}" 
                                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                           ScrollViewer.HorizontalScrollBarVisibility="Auto">

                                    </datalist:DataListView>
                                </Border>
                            </Expander>

                            <TreeView x:Name="MergeDifferenceDataTree"
                                      Grid.Row="2"
                                      ItemsSource="{Binding MergeConflicts, Mode=TwoWay, IsAsync=True}"
                                      HorizontalAlignment="Stretch"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch"
                                      Style="{StaticResource MergeTreeViewStyle}"
                                      Grid.IsSharedSizeScope="True"
                                      AutomationProperties.AutomationId="UI_MergeTreeView_AutoID"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      VirtualizingStackPanel.ScrollUnit="Pixel"
                                      VirtualizingStackPanel.CacheLength="2,1"
                                      VirtualizingStackPanel.CacheLengthUnit="Item"
                                      VirtualizingStackPanel.IsVirtualizingWhenGrouping="True"
                                      VirtualizingStackPanel.IsContainerVirtualizable="True">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate DataType="{x:Type interfaces:IMergeToolModel}" ItemsSource="{Binding Path=Children, IsAsync=True}">
                                        <Grid>
                                            <Grid.Width>
                                                <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type TreeViewItem}}" />
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type TreeView}}" />
                                                </MultiBinding>
                                            </Grid.Width>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Expander x:Name="MergeCurrentExpander"
                                                      Visibility="{Binding IsMergeExpanderEnabled, Converter={StaticResource BoolToVisibilityConverterPositive}}"
                                                      Header="{Binding .}"
                                                      IsExpanded="{Binding IsExpanded, Mode=TwoWay, Converter={StaticResource ExpanderToBooleanConverter}, ConverterParameter=1}"
                                                      Style="{StaticResource MergeExpander}"
                                                      AutomationProperties.AutomationId="{Binding StringFormat=UI_MergeDifferenceExpander_{0}_AutoID, Path=MergeDescription}">
                                                <Expander.HeaderTemplate>
                                                    <DataTemplate>
                                                        <DockPanel Grid.Column="1" x:Name="MergeDifferenceDockPanel" LastChildFill="False" >
                                                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                                <RadioButton x:Name="MergeDifferenceRB" 
                                                                             IsChecked="{Binding IsMergeChecked}" 
                                                                             GroupName="MergeActivities"
                                                                             Style="{StaticResource MergeRadioButtonStyle}">
                                                                </RadioButton>
                                                                <Image Source="{Binding MergeIcon}" Margin="5,0,3,0" Height="16" Width="16"/>
                                                                <TextBlock Text="{Binding MergeDescription}"
                                                                           ToolTip="{Binding MergeDescription}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           FontWeight="Bold"
                                                                           HorizontalAlignment="Stretch">
                                                                    <TextBlock.Width>
                                                                        <MultiBinding Converter="{StaticResource MergeHeaderTemplateWidthConverter}">
                                                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Expander}}" />
                                                                        </MultiBinding>
                                                                    </TextBlock.Width>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </Expander.HeaderTemplate>
                                                <Border BorderBrush="#CFD6E1" BorderThickness="1,0,1,1">
                                                    <Grid x:Name="MergeDifferenceGrid" >
                                                        <ContentPresenter Grid.Column="1" 
                                                                          x:Name="MergeDifferenceContentPresenter" 
                                                                          ContentTemplateSelector="{StaticResource ActivitySelector}"
                                                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                            <ContentPresenter.Width>
                                                                <MultiBinding Converter="{StaticResource MergeWidthConverter}">
                                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type Grid}}" />
                                                                </MultiBinding>
                                                            </ContentPresenter.Width>
                                                        </ContentPresenter>
                                                    </Grid>
                                                </Border>
                                            </Expander>
                                        </Grid>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
        <GridSplitter Grid.Column="1"
                      Background="#C1C3C5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Width="5" />
        <Grid Grid.Column="2" x:Name="WorkflowGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch">
                <TextBlock Margin="5" Text="Merge" Style="{StaticResource SourceHeader}" />
                <Button Command="{Binding AddAnItem}">Add Something</Button>
            </StackPanel>
            <Grid Grid.Row="1">
                <workflow:WorkflowDesignerView DataContext="{Binding WorkflowDesignerViewModel}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

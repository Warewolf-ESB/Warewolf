<Window x:Class="Dev2.Views.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageWindow" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="TempGridStyle" TargetType="Grid" >
            <Setter Property="Margin" Value="{StaticResource ControlBorderTop}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="40"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="1" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="2" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="3" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="4" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="5" Grid.Column="0" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="6" Grid.Column="0" Style="{StaticResource TempGridStyle}" Background="{StaticResource EmailSourceLogo}"/>
        <Grid Grid.Row="7" Grid.Column="0" Style="{StaticResource TempGridStyle}" Background="{StaticResource EmailServiceLogo}"/>
        
        <Grid Grid.Row="8" Grid.Column="0" Margin="{StaticResource ControlBorderTop}">
            <Image Width="40" Height="40" Source="{StaticResource ControlFlow-Descision}" />
        </Grid>
        <Grid Grid.Row="9" Grid.Column="0" Margin="{StaticResource ControlBorderTop}">
            <Image Width="40" Height="40" Source="{StaticResource ControlFlow-Switch}" />
        </Grid>
        <Grid Grid.Row="10" Grid.Column="0" Margin="{StaticResource ControlBorderTop}">
            <Image Width="40" Height="40" Source="{StaticResource ControlFlow-Sequence}" />
        </Grid>
        <Grid Grid.Row="11" Grid.Column="0" Margin="{StaticResource ControlBorderTop}">
            <Image Width="40" Height="40" Source="{StaticResource Explorer-WorkflowService}" />
        </Grid>


        <Grid Grid.Row="0" Grid.Column="1" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="2" Grid.Column="1" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="3" Grid.Column="1" Style="{StaticResource TempGridStyle}" />
        <Grid Grid.Row="4" Grid.Column="1" Style="{StaticResource TempGridStyle}" Background="{StaticResource FileLogo}"/>
        <Grid Grid.Row="5" Grid.Column="1" Style="{StaticResource TempGridStyle}" Background="{StaticResource ViewFileLogo}"/>
        <Grid Grid.Row="6" Grid.Column="1" Style="{StaticResource TempGridStyle}" Background="{StaticResource EditFileLogo}"/>
    </Grid>
</Window>

<UserControl  x:Class="Dev2.Studio.Views.Help.HelpView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
              mc:Ignorable="d"
              xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
              Background="Transparent"
              d:DesignHeight="300"
              d:DesignWidth="300">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <customControls:CircularProgressBar x:Name="CircularProgressBar"
                                            Height="150"
                                            Width="150"
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Visibility="Collapsed" />
        <ScrollViewer>
            <wpf:ChromiumWebBrowser x:Name="WebBrowserHost"
                          Margin="3"
                          RenderTransformOrigin="0.5,0.5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Visibility="Visible">
                <wpf:ChromiumWebBrowser.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-0.018" />
                        <TranslateTransform />
                    </TransformGroup>
                </wpf:ChromiumWebBrowser.RenderTransform>
            </wpf:ChromiumWebBrowser>
        </ScrollViewer>
    </Grid>
</UserControl>  
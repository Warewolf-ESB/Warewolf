<UserControl x:Class="Unlimited.Applications.BusinessDesignStudio.Views.StartPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ap="clr-namespace:Dev2.Studio.AppResources.AttachedProperties">
    <Grid>
        <FlowDocumentScrollViewer>
            <FlowDocument FontFamily="{StaticResource DefaultFontFamily}" Background="White">
                <Paragraph>
                    <Bold>Business Design Studio V1.0</Bold>
                </Paragraph>
                <Paragraph>
                    Welcome to Business Design Studio (BDS)
                </Paragraph>
                <Paragraph>
                    BDS allows you to:
                </Paragraph>
                <List>
                    <ListItem>
                        <Paragraph>
                            <Bold>Author, Test, Build and Deploy Workflow and other types of Services</Bold>
                            <LineBreak/>
                            <Run FontSize="{StaticResource DefaultFontSize}" />
                        </Paragraph>
                    </ListItem>
                    <ListItem>
                        <Paragraph>
                            <Bold>Create and Edit new workflow activities that will make up the building blocks of workflow services </Bold>
                            <LineBreak/>
                            <Run FontSize="{StaticResource DefaultFontSize}" />
                        </Paragraph>
                    </ListItem>                    

                </List>

            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</UserControl>
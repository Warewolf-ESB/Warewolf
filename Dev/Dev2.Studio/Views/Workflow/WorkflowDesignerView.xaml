<UserControl x:Class="Dev2.Studio.Views.Workflow.WorkflowDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"  
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:workflow="clr-namespace:Dev2.Studio.ViewModels.Workflow"
             xmlns:luna="clr-namespace:Warewolf.Studio.Themes.Luna;assembly=Warewolf.Studio.Themes.Luna"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             AllowDrop="True"
             AutomationProperties.AutomationId="UI_WorkflowDesigner_AutoID"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=workflow:WorkflowDesignerViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <luna:SharedResourceDictionary Source="/Warewolf.Studio.Themes.Luna;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid cal:Bind.Model="{Binding .}">
        <Grid x:Name="MainGrid" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollViewer x:Name="ScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Hidden" 
                          CanContentScroll="True"
                          Width="{Binding ElementName=MainGrid, Path=ActualWidth}">
                <StackPanel Orientation="Horizontal" 
                            OverridesDefaultStyle="False" 
                            MaxWidth="{Binding ElementName=ScrollViewer, Path=ActualWidth}" 
                            VerticalAlignment="Top" HorizontalAlignment="Center">
                    <TextBlock Margin="0,5,0,0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               MaxWidth="{Binding ElementName=ScrollViewer, Path=ActualWidth}"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ScrollViewer.CanContentScroll="True"
                               Visibility="{Binding WorkflowLinkVisible}"
                               HorizontalAlignment="Center">
                    <Hyperlink Command="{Binding Path=OpenWorkflowLinkCommand}"
                               Style="{StaticResource HyperLinkStyle}"
                               CommandParameter="{Binding}">
                        <Run Text="{Binding Path=DisplayWorkflowLink,Mode=OneWay}" />
                    </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
            <ContentControl Grid.Row="1"
                                    Content="{Binding Path=DesignerView}"
                                    AutomationProperties.AutomationId="{Binding Path=DesignerText}"
                                    cal:Message.Attach="[Event LostKeyboardFocus] = [Action DoWorkspaceSave]">
                <ig:ContextMenuService.Manager>
                    <ig:ContextMenuManager OpenMode="RightClick">
                        <ig:ContextMenuManager.ContextMenu>
                            <ig:XamContextMenu x:Name="StartNodeContextMenu" Visibility="Collapsed" >
                                <ig:XamContextMenu.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ig:XamContextMenu.ItemsPanel>

                                <ig:XamMenuItem Name="DebugInputs"
                                                Command="{Binding DebugInputsCommand}"
                                                Header="Debug Inputs"
                                                InputGestureText="F5" 
                                                ToolTip="{x:Static languages:Core.StartNodeDebugInputsToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="DebugStudio"
                                                Command="{Binding DebugStudioCommand}"
                                                Header="Debug Studio"
                                                InputGestureText="F6"
                                                ToolTip="{x:Static languages:Core.StartNodeDebugStudioToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="DebugBrowser"
                                                Command="{Binding DebugBrowserCommand}"
                                                Header="Debug Browser"
                                                InputGestureText="F7"
                                                ToolTip="{x:Static languages:Core.StartNodeDebugBrowserToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Play" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="Schedule"
                                                Command="{Binding ScheduleCommand}"
                                                Header="Schedule"
                                                ToolTip="{x:Static languages:Core.StartNodeScheduleToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="History" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuSeparator />

                                <ig:XamMenuItem Name="TestEditor"
                                                Command="{Binding TestEditorCommand}"
                                                Header="Test Editor"
                                                ToolTip="{x:Static languages:Core.MenuDeployToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="14" FontWeight="Light" Icon="Flask" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="RunAllTests"
                                                Command="{Binding RunAllTestsCommand}"
                                                Header="Run All Tests"
                                                ToolTip="{x:Static languages:Core.MenuDeployToolTip}">
                                </ig:XamMenuItem>

                                <ig:XamMenuSeparator />

                                <ig:XamMenuItem Name="Duplicate"
                                                Command="{Binding DuplicateCommand}"
                                                Header="Duplicate"
                                                ToolTip="{x:Static languages:Core.MenuDeployToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Clone" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="Deploy"
                                                Command="{Binding DeployCommand}"
                                                Header="Deploy"
                                                ToolTip="{x:Static languages:Core.StartNodeDeployToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="PaperPlaneOutline" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuSeparator />

                                <ig:XamMenuItem Name="Dependencies"
                                                Command="{Binding ShowDependenciesCommand}"
                                                CommandParameter="{Binding Data}"
                                                Header="Show Dependencies"
                                                ToolTip="{x:Static languages:Core.StartNodeDependenciesToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <fa:FontAwesome Margin="0,2,0,0" FontSize="12" FontWeight="Light" Icon="Sitemap" />
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuItem Name="ViewSwagger"
                                                Command="{Binding ViewSwaggerCommand}"
                                                Header="View Swagger" 
                                                ToolTip="{x:Static languages:Core.StartNodeViewSwaggerToolTip}">
                                    <ig:XamMenuItem.Icon>
                                        <Image Style="{StaticResource ViewSwaggerIcon}" Margin="-2,-2,0,0"/>
                                    </ig:XamMenuItem.Icon>
                                </ig:XamMenuItem>

                                <ig:XamMenuSeparator />

                                <ig:XamMenuItem Name="CopyUrl"
                                                Command="{Binding CopyUrlCommand}"
                                                Header="Copy URL to Clipboard"
                                                ToolTip="{x:Static languages:Core.StartNodeCopyUrlToolTip}">
                                </ig:XamMenuItem>

                            </ig:XamContextMenu>
                        </ig:ContextMenuManager.ContextMenu>
                    </ig:ContextMenuManager>
                </ig:ContextMenuService.Manager>
                <i:Interaction.Behaviors>
                    <local:WorkflowDesignerLinkBehaviours CollapseAllCommand="{Binding CollapseAllCommand}"
                                                                  ExpandAllCommand="{Binding ExpandAllCommand}" />
                </i:Interaction.Behaviors>
                <ig:DragDropManager.DropTarget >
                    <ig:DropTarget IsDropTarget="True" />
                </ig:DragDropManager.DropTarget>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>

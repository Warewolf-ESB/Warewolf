<Window x:Class="Dev2.Studio.Views.ResourceManagement.DeleteResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dependants Detected" Height="157" Width="362"
        Icon="pack://application:,,,/Warewolf Studio;component/Images/PopupNotSavedWarning-32.png"
        WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" ShowInTaskbar="False" MinHeight="100" MinWidth="350" ResizeMode="NoResize"
        AutomationProperties.AutomationId="UI_DeleteResourceDialog_AutoID">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Width="32" Height="32" Source="pack://application:,,,/Warewolf Studio;component/Images/PopupNotSavedWarning-32.png" />
        <TextBlock Grid.Column="1" Height="Auto" VerticalAlignment="Center" Grid.Row="0"  Name="tbDisplay" TextWrapping="Wrap" AutomationProperties.AutomationId="UI_DeleteResourceText_AutoID" />
        <Button Content="Cancel" Grid.ColumnSpan="2" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,12,5" Name="button1" VerticalAlignment="Bottom" Width="75" IsCancel="True" AutomationProperties.AutomationId="UI_DeleteResourceNoBtn_AutoID" Click="Button1_OnClick" />
        <Button Content="Show Dependencies" Grid.ColumnSpan="2" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,0,0,5" Name="button3" VerticalAlignment="Bottom" Width="150" Click="Button3Click" AutomationProperties.AutomationId="UI_DeleteResourceShowDependenciesBtn_AutoID" />
    </Grid>
</Window>

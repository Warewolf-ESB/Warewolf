<UserControl x:Class="Dev2.Studio.Views.UserInterfaceBuilder.DataGridQuickVariableInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Background="White" HorizontalAlignment="Center" VerticalAlignment="Center"
             Height="Auto"
             Width="300"
             d:DesignHeight="195">
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding CancelCommand}" Key="Escape"  />
        <KeyBinding Command="{Binding AddCommand}" Key="Enter" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />            
            <RowDefinition Height="Auto" />            
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1,1,1,1" >
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="34"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="26"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>                  
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="6"/>
                    </Grid.RowDefinitions>
                    <Label Content="Quick Variable Input" Grid.Row="0" Style="{StaticResource Dev2HeadingLabelStyle}"/>
                    <Rectangle Fill="LightGray" Margin="1" Height="1" Grid.Row="1"/>
                </Grid>
                
                
                <Label Grid.Column="0" Grid.Row="1" Content="Split On :"></Label>
                <Grid Grid.Column="1" Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ComboBox Style="{StaticResource Dev2ComboBoxStyle}" Margin="1,1,3,1" x:Name="SplitTypeCbx" SelectionChanged="Selector_OnSelectionChanged" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding SplitTypeList}" SelectedValue="{Binding SplitType}" ToolTip="What separates the items in your variable list?"></ComboBox>
                    <TextBox Style="{StaticResource Dev2TextboxStyle}" x:Name="SplitTokenTxt" Grid.Column="1" Grid.Row="1" Text="{Binding SplitToken}" ToolTip="What separates the items in your variable list?"></TextBox>
                </Grid>

                <Label Grid.Column="0" Grid.Row="2" Content="Prefix :"></Label>
                <TextBox Grid.Column="1" Grid.Row="2" Style="{StaticResource Dev2TextboxStyle}" Text="{Binding Prefix}" ToolTip="If you want to add these variable to a record-set you&#x0a;can prefix the variable name with the record-set like&#x0a;this &quot;Recordsetname().&quot; - don't forget the dot &quot;.&quot; &#x0a;after the brackets &quot;()&quot;&#x0a;&#x0a;Or you could simply add an identifier to the beginning&#x0a;of the variable names like &quot;From_File_&quot;."></TextBox>

                <Label Grid.Column="0" Grid.Row="3" Content="Suffix :"></Label>
                <TextBox Grid.Column="1" Grid.Row="3" Style="{StaticResource Dev2TextboxStyle}" Text="{Binding Suffix}" ToolTip="Just like Prefix, but appended after the variable name.&#x0a;Use it or lose it."></TextBox>

                <Label Grid.Column="0" Grid.Row="4" Content="Variable List :"></Label>
                <TextBox Grid.Column="1" Grid.Row="4" Style="{StaticResource Dev2TextboxStyle}" TextChanged="TextBoxBase_OnTextChanged" AcceptsReturn="True" Text="{Binding VariableListString}" VerticalAlignment="Top" ToolTip="Copy and paste or type in a list of Variable names&#x0a;that you would like to use. They will be added to &#x0a;the grid in the order that they appear. Any spaces &#x0a;in the variable name will be removed automatically. &#x0a;You do not need to worry about putting the Variable &#x0a;identifiers, &quot;[[&quot; and &quot;]]&quot; in."></TextBox>

                <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal">
                    <RadioButton Content="Append" IsChecked="True" VerticalAlignment="Center" GroupName="AppendGroup" Margin="5" ToolTip="Check this to have these variables added to your list. &#x0a;Un-check this if you want to replace the current &#x0a;variable list with this new variable list.&#x0a;&#x0a;Clicking Add will insert the items into the grid in &#x0a;the order they were typed. It will also add the items &#x0a;to the Variable List (dont just update the data list &#x0a;for items on the design surface).&#x0a;&#x0a;Preview at the bottom of the popup to show the items &#x0a;being added."></RadioButton>

                    <RadioButton Content="Replace" IsChecked="{Binding Overwrite}" VerticalAlignment="Center" GroupName="AppendGroup" Margin="5" ToolTip="Check this to have these variables added to your list. &#x0a;Un-check this if you want to replace the current &#x0a;variable list with this new variable list.&#x0a;&#x0a;Clicking Add will insert the items into the grid in &#x0a;the order they were typed. It will also add the items &#x0a;to the Variable List (dont just update the data list &#x0a;for items on the design surface).&#x0a;&#x0a;Preview at the bottom of the popup to show the items &#x0a;being added."></RadioButton>
                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button HorizontalAlignment="Left" x:Name="PreviewBtn" Content="Preview" IsEnabled="False" Command="{Binding PreviewCommand}" Margin="2,0,2,0"></Button>                    
                </StackPanel>
                
                <StackPanel Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">                                      
                    <Image Source="{Binding Status,Converter={StaticResource Dev2ErrorTypeToImageConverter}}" Height="15" Width="15" VerticalAlignment="Center"/>                                                                           
                    <Button x:Name="AddBtn"  Content="Add" IsEnabled="False" Command="{Binding AddCommand}" Margin="2,0,2,0"></Button>
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="2,0,2,0"></Button>                    
                </StackPanel>                
            </Grid>

        </Border>       
        <Canvas Margin="0,-1,0,0" Grid.Row="1" Width="298" HorizontalAlignment="Stretch" Visibility="{Binding ShowPreview, Converter={StaticResource BoolToVisConverter}}">
                <Border Background="White" BorderBrush="LightGray" BorderThickness="1,1,1,1" Canvas.Left="-1">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>                        
                    </Grid.RowDefinitions>                                    
                    <TextBox IsEnabled="False" Grid.Row="1" Width="288" Text="{Binding PreviewText}"></TextBox>
                </Grid>
            </Border>
        </Canvas>    

    </Grid>
</UserControl>

<ss:ModernInfoStep 
    x:Class="Gui.PostInstallProcess"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:customControls="clr-namespace:Gui.ResourceFiles.Custom_Controls"
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    Title="{x:Static props:Resources.PostInstallProcess_Title}"
    Entered="PostInstallStep_Entered"
    CanGoNext="True"
    Style="{StaticResource {x:Type ss:ModernInfoStep}}">
    <Grid Background="Transparent"
                  DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource TextBlockStyle}"
                           Background="White"
                           Padding="10"
                           Height="35"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="14"
                           Margin="0"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Text="{x:Static props:Resources.PostInstallProcess_Title}" />
                <Rectangle Grid.Row="1"
                           Fill="#F3700D"
                           Margin="-10,0,0,0"></Rectangle>
        <DockPanel HorizontalAlignment="Stretch" 
                   Grid.Row="2"
                   Margin="0,0,0,-26">
            <StackPanel>
                <!-- orig total height 215 -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Height="215">
                    <TextBlock Style="{StaticResource TextBlockStyle}" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Name="PostInstallMsg" TextWrapping="Wrap" Text="{x:Static props:Resources.PostInstallProcess_MessageMain}" Width="269" Height="25" />
                    <Image Visibility="Visible" Source="/Gui;component/ResourceFiles\Images\tick.png" Name="postInstallStatusImg" Margin="0,0,0,200" Width="16" RenderTransformOrigin="1.651,2.784"/>
                    <customControls:CircularProgressBar x:Name="postInstallStatusCircularProgressBar" Margin="0,0,0,194" Height="20" Width="20"/>
                </StackPanel>
                <Button Style="{StaticResource ButtonStyle}" x:Name="btnRerun" Content="Try Again" Padding="16,2,16,2" VerticalAlignment="Bottom" HorizontalAlignment="Left" VerticalContentAlignment="Stretch" Height="16" Visibility="Visible" Width="287" Click="BtnRerun_OnClick"/>
                <!--<TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="PreInstallMsgList" TextWrapping="Wrap" Text="" Width="491" Height="173" />-->
            </StackPanel>

        </DockPanel>
    </Grid>
</ss:ModernInfoStep>

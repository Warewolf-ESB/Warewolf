<ss:ModernInfoStep 
    x:Class="Gui.FinishStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    StepType="Last"
    Style="{StaticResource {x:Type ss:ModernInfoStep}}"
    >
    <Grid Background="Transparent"
                  DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource TextBlockStyle}"
                           Background="White"
                           Padding="10"
                           Height="35"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="14"
                           Margin="0"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Text="{x:Static props:Resources.FinishStep_Title}" />
                <Rectangle Grid.Row="1"
                           Fill="#F3700D"
                           Margin="-10,0,0,0"></Rectangle>
        <DockPanel Grid.Row="2" HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource TextBlockStyle}" TextWrapping="NoWrap" DockPanel.Dock="Bottom" Text="{x:Static props:Resources.FinishStep_MessageBottom}" Visibility="Hidden" Name="tbFinish"/>
            <CheckBox Style="{StaticResource CheckBoxStyle}" DockPanel.Dock="Bottom" IsChecked="true" Content="{x:Static props:Resources.FinishStep_Start_Studio_Text}" Margin="0,0,0,5" Click="BtnExitWithStart" Visibility="Visible" Name="cbStartStudio"/>
            <CheckBox Style="{StaticResource CheckBoxStyle}" DockPanel.Dock="Bottom" IsChecked="true" Content="{x:Static props:Resources.FinishStep_View_Readme}" Margin="0,0,0,5" Click="BtnExitWithReadme" Visibility="Visible" Name="cbViewReadMe"/>
            <TextBlock Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" Text="{x:Static props:Resources.FinishStep_MessageMain}" />
        </DockPanel>
    </Grid>
</ss:ModernInfoStep>

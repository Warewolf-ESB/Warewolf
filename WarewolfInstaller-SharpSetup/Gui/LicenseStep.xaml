<ss:ModernActionStep x:Class="Gui.LicenseStep"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
                     xmlns:props="clr-namespace:Gui.Properties"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     mc:Ignorable="d"
                     d:DesignHeight="360"
                     d:DesignWidth="500"
                     Title="{x:Static props:Resources.LicenseStep_Title}"
                     Subtitle="{x:Static props:Resources.LicenseStep_Subtitle}"
                     CanGoNext="False"
                     Style="{StaticResource {x:Type ss:ModernActionStep}}">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0"
                      Style="{StaticResource CheckBoxStyle}"
                      Name="cbAccept"
                      IsChecked="{Binding CanGoNext, RelativeSource={RelativeSource FindAncestor, AncestorType=ss:ModernActionStep}}"
                      Content="{x:Static props:Resources.LicenseStep_AcceptLicense}"
                      Margin="0,0,0,5" />
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Right"
                       Margin="0,0,-5,-20"
                       Style="{StaticResource TextBlockStyle}"
                       Text="{Binding StepsString}"></TextBlock>
        </Grid>

        <RichTextBox Name="rtbLicense"
                     Margin="0,5,0,15"
                     BorderBrush="#7F7F7F"
                     SelectionBrush="#7F7F7F"
                     IsReadOnly="True"
                     FontFamily="{StaticResource DefaultFontFamily}"
                     Background="#D4D5D6"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</ss:ModernActionStep>

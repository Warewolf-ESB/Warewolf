<ss:ModernActionStep 
    x:Class="Gui.LicenseStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    Title="{x:Static props:Resources.LicenseStep_Title}"
    Subtitle="{x:Static props:Resources.LicenseStep_Subtitle}"
    CanGoNext="False"
    Style="{StaticResource {x:Type ss:ModernActionStep}}"
    >
    <DockPanel>
        <CheckBox Style="{StaticResource CheckBoxStyle}"
            Name="cbAccept" 
            IsChecked="{Binding CanGoNext, RelativeSource={RelativeSource FindAncestor, AncestorType=ss:ModernActionStep}}" 
            DockPanel.Dock="Bottom" 
            Content="{x:Static props:Resources.LicenseStep_AcceptLicense}" 
            Margin="0,0,0,5" 
            />
        <RichTextBox 
            Name="rtbLicense" 
            Margin="0,5,0,15" 
            IsReadOnly="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            />
    </DockPanel>
</ss:ModernActionStep>

<ss:ModernInfoStep 
    x:Class="Gui.PreUnInstallProcess"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:customControls="clr-namespace:Gui.ResourceFiles.Custom_Controls"
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    Title="{x:Static props:Resources.PreInstallProcess_Title}"
    Entered="PreUnInstallStep_Entered"
    CanGoNext="False"
    Style="{StaticResource {x:Type ss:ModernInfoStep}}"
    >
    <Border Margin="10,0,0,27">
        <DockPanel HorizontalAlignment="Stretch" Margin="0,0,0,-26">
            <StackPanel>
                <TextBlock Style="{StaticResource TextBlockStyle}" FontSize="14" FontWeight="Bold" DockPanel.Dock="Top" Height="53" Margin="0,10,0,10" TextWrapping="Wrap" Text="{x:Static props:Resources.PreUnInstallProcess_Title}" />
                <StackPanel Orientation="Horizontal" Height="215">
                    <TextBlock Style="{StaticResource TextBlockStyle}" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Name="PreUnInstallMsg" TextWrapping="Wrap" Text="{x:Static props:Resources.PreInstallProcess_MessageMain}" Width="269" Height="25" />
                    <Image Visibility="Visible" Source="/Gui;component\ResourceFiles\Images\tick.png" Name="preUnInstallStatusImg" Margin="0,0,0,200" Width="16" RenderTransformOrigin="1.651,2.784"/>
                    <customControls:CircularProgressBar x:Name="postInstallStatusCircularProgressBar" Margin="0,0,0,194" Height="20" Width="20"/>
                </StackPanel>
                <CheckBox Style="{StaticResource CheckBoxStyle}" VerticalAlignment="Bottom" IsChecked="false" Content="{x:Static props:Resources.PreUninstall_Remove_All_Text}" Margin="0,0,0,5" Click="BtnRemoveAllTraces" Visibility="Visible" Name="cbRemoveItAll"/>
                <Button Style="{StaticResource ButtonStyle}" x:Name="btnRerun" Content="Try Again" Padding="16,2,16,2" VerticalAlignment="Bottom" HorizontalAlignment="Left" VerticalContentAlignment="Stretch" Height="16" Visibility="Visible" Width="287" Click="BtnRerun_OnClick"/>
                <!--<TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="PreInstallMsgList" TextWrapping="Wrap" Text="" Width="491" Height="173" />-->
            </StackPanel>

        </DockPanel>
    </Border>
</ss:ModernInfoStep>
